<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim_90">

        <!-- Contest Rules-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dim_26"
            android:paddingRight="@dimen/dim_26"
            android:paddingTop="@dimen/dim_12">


            <!-- Contest Heading-->
            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/contest_rule_heading"
                app:typeface="lato_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contest Details"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <!--Contest Rule One Layout  -->
            <RelativeLayout
                android:id="@+id/contest_rule_one_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Contest Rule One-->
                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/contest_rule_one"
                    app:typeface="lato_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_12"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_toRightOf="@+id/contest_rule_one_bullet"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/contest_rule_one_bullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_18"
                    android:src="@drawable/bullet_icon" />

            </RelativeLayout>

            <!--Contest Rule Two Layout  -->
            <RelativeLayout
                android:id="@+id/contest_rule_two_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Contest Rule Two-->
                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/contest_rule_two"
                    app:typeface="lato_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_12"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_toRightOf="@+id/contest_rule_two_bullet"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/contest_rule_two_bullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_18"
                    android:src="@drawable/bullet_icon" />

            </RelativeLayout>

            <!--Contest Rule Three Layout  -->
            <RelativeLayout
                android:id="@+id/contest_rule_three_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Contest Rule Three-->
                <ImageView
                    android:id="@+id/contest_rule_three_iv"
                    android:layout_width="@dimen/dim_14"
                    android:layout_height="@dimen/dim_14"
                    android:layout_marginLeft="@dimen/dim_12"
                    android:layout_marginTop="@dimen/dim_14"
                    android:layout_toRightOf="@+id/contest_rule_three_bullet" />

                <!-- Contest Rule Three-->
                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/contest_rule_three"
                    app:typeface="lato_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_6"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_toRightOf="@+id/contest_rule_three_iv"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/contest_rule_three_bullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_18"
                    android:src="@drawable/bullet_icon" />

            </RelativeLayout>


        </LinearLayout>

        <!-- Powerups Rules-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dim_26"
            android:paddingRight="@dimen/dim_26"
            android:paddingTop="@dimen/dim_26">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- powerup Heading-->
                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_rule_heading"
                    app:typeface="lato_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Powerups Usage"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:id="@+id/powerup_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/powerup_2x"
                        android:layout_width="@dimen/dim_18"
                        android:layout_height="@dimen/dim_18"
                        android:background="@android:color/transparent"
                        android:src="@drawable/double_powerup_small"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_2x_count"
                        app:typeface="lato_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_6"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_14" />


                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/powerup_noNeg"
                        android:layout_width="@dimen/dim_18"
                        android:layout_height="@dimen/dim_18"
                        android:layout_marginLeft="@dimen/dim_18"
                        android:background="@android:color/transparent"
                        android:src="@drawable/no_negative_powerup_small"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_noNeg_count"
                        app:typeface="lato_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_6"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_14" />

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/powerup_audience"
                        android:layout_width="@dimen/dim_18"
                        android:layout_height="@dimen/dim_18"
                        android:layout_marginLeft="@dimen/dim_18"
                        android:background="@android:color/transparent"
                        android:src="@drawable/audience_poll_powerup_small"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_audience_count"
                        app:typeface="lato_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_6"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </RelativeLayout>

            <!--Powerups Rule One Layout  -->
            <RelativeLayout
                android:id="@+id/powerups_rule_one_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- powerup Rule One-->
                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_rule_one"
                    app:typeface="lato_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_12"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_toRightOf="@+id/powerup_rule_one_bullet"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/powerup_rule_one_bullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_18"
                    android:src="@drawable/bullet_icon" />

            </RelativeLayout>

            <!--Powerups Rule Two Layout  -->
            <RelativeLayout
                android:id="@+id/powerups_rule_two_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- powerup Rule Two-->
                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_rule_two"
                    app:typeface="lato_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_12"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_toRightOf="@+id/powerup_rule_two_bullet"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/sp_12" />


                <ImageView
                    android:id="@+id/powerup_rule_two_bullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_18"
                    android:src="@drawable/bullet_icon" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Cancelled Rules-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dim_26"
            android:paddingRight="@dimen/dim_26"
            android:paddingTop="@dimen/dim_26">

            <!-- Cancelled Heading-->
            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/cancelled_rule_heading"
                app:typeface="lato_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled Questions / Split Points"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <!--Cancelled Rule One Layout  -->
            <RelativeLayout
                android:id="@+id/cancelled_rule_one_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Cancelled Rule One-->
                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/cancelled_rule_one"
                    app:typeface="lato_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_12"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_toRightOf="@+id/cancelled_rule_one_bullet"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/cancelled_rule_one_bullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_18"
                    android:src="@drawable/bullet_icon" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>