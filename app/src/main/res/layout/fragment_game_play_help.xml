<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="in.sportscafe.nostragamus.module.prediction.gamePlayHelp.GamePlayHelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_40"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16"
        android:layout_marginTop="@dimen/dim_20"
        android:orientation="vertical">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Master basics of making predictions in Nostragamus!"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:typeface="lato_bold" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_12"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dim_2"
            android:text="Learn how to make predictions and use powerups well, with this easy walkthrough"
            android:textColor="@color/white_999999"
            android:textSize="@dimen/sp_13"
            app:typeface="lato_regular" />

        <!-- Transfer to newChallengesResponse button -->
        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/powerup_bank_transfer_to_challenge_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_12"
            android:background="@drawable/btn_play_bg"
            android:paddingBottom="@dimen/dim_3"
            android:text="Start Walkthrough"
            android:textAllCaps="false"
            android:textColor="@drawable/white_text_selector"
            app:typeface="lato_bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powerups"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:typeface="lato_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_16"
            android:background="@color/line_separator_two" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_16"
        android:orientation="vertical">

        <!--<com.jeeva.android.widgets.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:typeface="lato_regular"
            android:text="Powerups"
            />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white_999999"
            android:textSize="@dimen/sp_13"
            app:typeface="lato_regular"
            android:text="Your powerups will be displayed at the bottom of your screen as can be seen now - they are of the following three types:"
            android:layout_margin="@dimen/dim_4"/>-->

        <!-- Doubler -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_64"
            android:orientation="horizontal">

            <!-- 2x view -->
            <FrameLayout
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/powerups_iv_2x"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:background="@drawable/powerup_doubler_round_bg"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_2x_white" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_16"
                android:orientation="vertical">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_4"
                    android:text="Doubler"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    app:typeface="lato_bold" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doubles the points scored for a prediction"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+20 points if correct / -8 points if incorrect"
                    android:textColor="@color/white_999999"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

            </LinearLayout>


        </LinearLayout>

        <!-- No negative -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_32"
            android:minHeight="@dimen/dp_64"
            android:orientation="horizontal">

            <!-- No-negative view -->
            <FrameLayout
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:background="@drawable/powerup_no_neg_round_bg"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_nonegs_white" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_16"
                android:orientation="vertical">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_4"
                    android:text="No Negative"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    app:typeface="lato_bold" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Removes  negative making for any prediction"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10 points if correct / 0 points if incorrect"
                    android:textColor="@color/white_999999"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

            </LinearLayout>

        </LinearLayout>

        <!-- Audience poll -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_32"
            android:minHeight="@dimen/dp_64"
            android:orientation="horizontal">

            <!-- Audience poll view -->
            <FrameLayout
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:background="@drawable/powerup_audiance_poll_round_bg"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_audience_poll_white" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_16"
                android:orientation="vertical">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_4"
                    android:text="Audience Poll"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shows how the other players have predicted"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No changes to points"
                    android:textColor="@color/white_999999"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
