<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15"
    android:background="@color/black"
    >

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/badge_iv"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_25"
       />


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/badge_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silver"
        android:textColor="@color/white"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_18"
        android:layout_toRightOf="@+id/badge_iv"
        android:layout_marginLeft="@dimen/dp_40"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/badge_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You won Platinum Badge in Wimbeldon Game"
        android:textColor="@color/silver_chalice"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_15"
        android:layout_toRightOf="@+id/badge_iv"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_below="@+id/badge_tv_name"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/dividercolor"
        android:layout_below="@+id/badge_tv_desc"
        android:layout_marginTop="@dimen/dp_20"
        />

</RelativeLayout>