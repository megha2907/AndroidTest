<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/colorMedium"
    >

    <com.jeeva.android.widgets.HmImageView
        android:id="@+id/badge_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/badge_grey_icon"
        android:text="2X"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/white"
        app:typeface="lato_medium"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"/>


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/badge_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silver"
        android:textColor="@color/white"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_18"
        android:layout_toRightOf="@+id/badge_iv"
        android:layout_marginLeft="@dimen/dp_40"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/badge_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You won Platinum Badge in Wimbeldon Game"
        android:textColor="@color/silver_chalice"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_15"
        android:layout_toRightOf="@+id/badge_iv"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_below="@+id/badge_tv_name"
        />



</RelativeLayout>