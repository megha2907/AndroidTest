<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/black"
    >

    <RelativeLayout
        android:id="@+id/badges_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:layout_alignParentEnd="true">


        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/badge_iv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@android:color/transparent"
            app:defaultImage="@drawable/placeholder_icon"
            />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/badge_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silver"
        android:textColor="@color/white"
        app:typeface="lato_regular"
        android:textSize="@dimen/dp_16"
        android:layout_toRightOf="@+id/badge_iv"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/badge_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You won Platinum Badge in Wimbeldon Game"
        android:textColor="@color/silver_chalice"
        app:typeface="roboto_condensed"
        android:textSize="@dimen/dp_13"
        android:layout_toRightOf="@+id/badge_iv"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@+id/badge_tv_name"
        />

        <ImageView
            android:id="@+id/badge_locked"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/locked_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/dividercolor"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        />

</RelativeLayout>