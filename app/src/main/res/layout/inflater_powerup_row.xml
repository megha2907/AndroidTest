<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/colorMedium"
    >

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/powerup_btn"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_34"
        android:background="@drawable/powerup_screen_btn_bg"
        android:onClick="onClick"
        android:text="2X"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/white"
        app:typeface="lato_medium"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"/>

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/powerup_btn_powerup_count"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:gravity="center"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/black"
        android:background="@drawable/powerup_screen_count_bg"
        app:typeface="roboto_light"
        android:text="2"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_80"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/powerup_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2X Power Up"
        android:textColor="@color/white"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_18"
        android:layout_toRightOf="@+id/powerup_btn"
        android:layout_marginLeft="@dimen/dp_40"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/powerup_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2X Power Up is lorem ipsum,lorum ipsum"
        android:textColor="@color/silver_chalice"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_15"
        android:layout_toRightOf="@+id/powerup_btn"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_below="@+id/powerup_tv_1"
        />



</RelativeLayout>