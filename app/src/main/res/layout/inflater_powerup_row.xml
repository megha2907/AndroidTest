<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_10"
    android:background="@color/black"
    >



    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/powerup_btn"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
       />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/powerup_btn_powerup_count"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:gravity="center"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/white"
        android:background="@drawable/powerups_count_bg"
        app:typeface="roboto_light"
        android:text="2"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_50"
       />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/powerup_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_18"
        android:layout_toRightOf="@+id/powerup_btn"
        android:layout_marginLeft="@dimen/dp_40"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/powerup_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/silver_chalice"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_15"
        android:layout_toRightOf="@+id/powerup_btn"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_below="@+id/powerup_tv_1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/dividercolor"
        android:layout_below="@+id/powerup_tv_2"
        android:layout_marginTop="@dimen/dp_30"
        />



</RelativeLayout>