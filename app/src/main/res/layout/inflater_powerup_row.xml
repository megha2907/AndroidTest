<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        android:background="@color/black"
        >


    <ImageButton
        android:id="@+id/powerup_btn"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@android:color/transparent"
       />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/powerup_btn_powerup_count"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:gravity="center"
        android:textSize="@dimen/dp_10"
        android:textColor="@color/white"
        android:background="@drawable/notification_count_bg"
        app:typeface="roboto_light"
        android:text="2"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_35"
       />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/powerup_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:typeface="lato_regular"
        android:textSize="@dimen/dp_16"
        android:layout_toRightOf="@+id/powerup_btn"
        android:layout_marginLeft="@dimen/dp_15"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/powerup_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/silver_chalice"
        app:typeface="roboto_condensed"
        android:textSize="@dimen/dp_13"
        android:layout_toRightOf="@+id/powerup_btn"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@+id/powerup_tv_1"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/dividercolor"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />

</RelativeLayout>