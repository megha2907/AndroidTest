<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/onboard_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_124"
        android:text="Description"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"
        app:typeface="lato_light" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/onboard_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/onboard_tv_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="Description"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_22"
        app:typeface="lato_light" />

</RelativeLayout>