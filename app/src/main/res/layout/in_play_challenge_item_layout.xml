<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_1"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/dim_6"
        android:layout_marginBottom="@dimen/dim_6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_52"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_marginRight="@dimen/dim_12"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/inplay_challenge_title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular"
                    />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/inplay_challenge_count_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_11"
                    app:typeface="lato_regular"
                    android:layout_marginLeft="@dimen/dim_3"/>

            </LinearLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/inplay_challenge_tournaments_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                android:ellipsize="end"
                android:maxLines="1"
                app:typeface="lato_regular"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_40"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/inplay_challenge_button"
                android:layout_width="@dimen/dim_100"
                android:layout_height="@dimen/dim_30"
                android:background="@drawable/inplay_challenge_btn_bg"
                android:gravity="center">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/inplay_challenge_button_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0098a6"
                    android:textSize="@dimen/sp_12"
                    android:text="click"
                    app:typeface="lato_regular"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
