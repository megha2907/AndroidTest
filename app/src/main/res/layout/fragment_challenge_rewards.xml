<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/configs_ll_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@color/chathams_blue"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/powerup_title_info_icon"
                    android:visibility="gone" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/configs_tv_challenge_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_bold" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/configs_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/configs_ll_title"
                android:fadeScrollbars="false"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarSize="@dimen/dp_2"
                android:scrollbarThumbVertical="@drawable/custom_scrollbar"
                android:scrollbarTrackVertical="@drawable/custom_scrollbar_track"
                android:scrollbars="vertical" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/popup_cross_btn"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_7"
        android:elevation="@dimen/dp_4"
        android:padding="@dimen/dp_5"
        android:src="@drawable/popup_cross_icon"
        android:visibility="invisible" />

</android.support.v7.widget.CardView>