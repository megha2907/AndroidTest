<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    >
<RelativeLayout
    android:id="@+id/popup"
    android:layout_width="@dimen/dp_320"
    android:layout_height="@dimen/dp_350"
    android:layout_centerInParent="true"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/popup_rl_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@color/malachite">

        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/popup_image"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_centerInParent="true"
            app:defaultImage="@drawable/placeholder_icon"
           />

    </RelativeLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_rl_image"
        android:text="Congratulations!"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/dp_25"
        android:textColor="@color/black"
        app:typeface="lato_regular"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/popup_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_title"
        android:gravity="center"
        android:text="You won a Table Topper Badge.\n Play to Win More !"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/black_60"
        app:typeface="lato_regular"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_above="@+id/popup_exit_btn"
        android:background="@color/tournament_divider_color"/>

    <ImageButton
        android:id="@+id/popup_exit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:onClick="onClick"
        android:src="@drawable/popup_tick_icon"
        />

</RelativeLayout>

    </RelativeLayout>