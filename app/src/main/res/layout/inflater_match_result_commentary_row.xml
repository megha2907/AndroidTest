<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_36"
    android:orientation="vertical">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_result_commentary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/white"
        android:textColorLink="#29abe2"
        android:textSize="@dimen/dp_14"
        android:visibility="gone"
        app:typeface="roboto_condensed" />


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_result_commentary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="left"
        android:textColor="@color/silver_chalice"
        android:textColorLink="#29abe2"
        android:textSize="@dimen/dp_13"
        android:visibility="gone"
        app:typeface="lato_regular" />

</LinearLayout>