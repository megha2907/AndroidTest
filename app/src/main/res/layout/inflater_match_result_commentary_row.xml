<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_28"
    android:orientation="vertical">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_result_commentary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/white"
        android:textColorLink="#29abe2"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        app:typeface="roboto_condensed" />


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_result_commentary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="left"
        android:textColor="@color/white_999999"
        android:textColorLink="#29abe2"
        android:textSize="@dimen/sp_13"
        android:visibility="gone"
        app:typeface="lato_regular" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_result_report_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dim_20"
        android:gravity="left"
        android:textColor="@color/white_999999"
        android:textColorLink="#29abe2"
        android:text="In case of any issue, you can report the answers to our team for review, with the button below - "
        android:textSize="@dimen/sp_10"
        app:typeface="lato_regular" />


    <RelativeLayout
        android:id="@+id/schedule_row_rl_report_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dim_10"
        android:layout_marginLeft="@dimen/dim_2"
        android:layout_marginRight="@dimen/dim_2"
        android:background="@drawable/red_border_box"
        android:paddingBottom="@dimen/dim_12"
        android:paddingTop="@dimen/dim_12">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_1"
            android:gravity="bottom"
            android:text="REPORT RESULTS"
            android:textColor="#f13f37"
            android:textSize="@dimen/dp_12"
            app:typeface="lato_bold" />

    </RelativeLayout>


</LinearLayout>