<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/lb_landing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/leaderboards"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20"
            app:typeface="lato_regular" />

    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lb_landing_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/lb_landing_toolbar">

        <LinearLayout
            android:id="@+id/lb_landing_ll_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:clipToPadding="false"
            android:orientation="vertical" />

    </ScrollView>

    <FrameLayout
        android:id="@+id/fuzzy_players_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lb_landing_toolbar"
        android:background="@color/black"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/fuzzy_players_cv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toLeftOf="@+id/lb_landing_spinner_rl"
                app:cardBackgroundColor="@color/search_bar_stroke"
                app:cardElevation="@dimen/dp_4">

                <RelativeLayout
                    android:id="@+id/lb_landing_rl_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   >

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/fuzzy_players_tv_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_44"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/fuzzy_lbs_hint"
                        android:paddingLeft="@dimen/dp_10"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_60"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="italic"
                        app:typeface="roboto_condensed" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_8"
                        android:src="@drawable/search_icon_bg" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/lb_landing_spinner_rl"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/lb_landing_sp"
                    style="@style/mySpinnerItemLeaderBoardStyle"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clipToPadding="false"
                    android:dropDownVerticalOffset="15dp"
                    android:overlapAnchor="false"
                    android:paddingLeft="@dimen/dp_10"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@null"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />
            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lb_landing_fl_fuzzy_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_below="@+id/lb_landing_toolbar"
        android:background="@color/black_60"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/leaderboard_empty_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/leaderboard_play_challenge_btn"
        android:layout_marginBottom="@dimen/dp_40"
        android:scaleType="centerCrop"
        android:layout_below="@+id/lb_landing_toolbar"
        android:src="@drawable/empty_leaderboard_image"
        android:visibility="gone" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/leaderboard_empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/leaderboard_play_challenge_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_130"
        android:gravity="center"
        android:text="@string/empty_leaderboard"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_13"
        android:visibility="gone"
        app:typeface="roboto_condensed" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/leaderboard_play_challenge_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_36"
        android:background="@drawable/tournament_ready_btn_bg"
        android:onClick="onClick"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:text="Play Challenges"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_13"
        android:visibility="gone"
        app:typeface="lato_bold" />


</RelativeLayout>