<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_50"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingTop="@dimen/dp_100">

    <FrameLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/swipe_card_shape"
            android:elevation="@dimen/dp_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/swipe_card_shape"
            android:elevation="@dimen/dp_2" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_18"
        android:background="@drawable/swipe_card_shape"
        android:elevation="@dimen/dp_2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/swipe_card_tv_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:text="1/4"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />

            <in.sportscafe.scgame.module.common.CircularProgressBar
                android:id="@+id/swipe_card_cpb_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"
                app:bgColor="@color/alto"
                app:bgStrokeWidth="@dimen/dp_5"
                app:diameter="@dimen/dp_40"
                app:progressColor="@color/haveLockBlue"
                app:progressStrokeWidth="3dp"
                app:showProgressText="true" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/swipe_card_tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/swipe_card_cpb_timer"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:text="Question"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/swipe_card_question_value"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:text="2X"
                android:src="@drawable/ic_launcher"
                android:layout_marginRight="@dimen/dp_10"/>

            <LinearLayout
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dp_1"
                android:orientation="horizontal">

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_left"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_120"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher" />

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_right"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_120"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/image_layout"
                android:orientation="horizontal">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/swipe_card_tv_left"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/dp_15" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/swipe_card_tv_right"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/dp_15" />

            </LinearLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/swipe_card_tv_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/name_layout"
                android:layout_below="@id/swipe_card_tv_question"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:text="hello\nhello\nhello\nhello\nhello\nhello\nhello\nhello\nhello\nhello\nhello\nhello\n1\n2\n3\n4"
                android:textSize="@dimen/dp_13" />
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>