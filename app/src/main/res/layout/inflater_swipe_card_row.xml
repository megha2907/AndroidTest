<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backgroundone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusableInTouchMode="true"

    >


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginBottom="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_160"
        android:background="@android:color/transparent">


        <FrameLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/swipe_card_bg_shape"
                android:elevation="@dimen/dp_2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/swipe_card_bg_shape"
                android:elevation="@dimen/dp_2" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="@drawable/prediction_swipe_card_shape"
            android:elevation="@dimen/dp_2">

            <RelativeLayout
                android:id="@+id/swipe_relative_layout_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top">


                <LinearLayout
                    android:id="@+id/swipe_linear_layout_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/swipe_linear_layout_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/swipe_card_tv_context"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:gravity="center_horizontal"
                            android:text="Federer has been sublime form hitting no less than 20 acres on his path to semifinals.fsafFSFSFSFSFDASDASDSDASDASDASDSADASDASDASDASDASDASDASDASDASDAS"
                            android:textColor="@color/textcolorlight"
                            android:textSize="@dimen/dp_13"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                    <!--<com.jeeva.android.widgets.customfont.CustomTextView-->
                    <!--android:id="@+id/swipe_card_tv_question_number"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="1/4"-->
                    <!--android:textSize="@dimen/dp_18"-->
                    <!--android:textStyle="bold"-->
                    <!--android:layout_marginTop="@dimen/dp_20"-->
                    <!--android:layout_marginLeft="@dimen/dp_20"-->
                    <!--app:typeface="lato_bold"-->
                    <!--android:visibility="invisible"/>-->

                    <!--<in.sportscafe.scgame.module.common.CircularProgressBar-->
                    <!--android:id="@+id/swipe_card_cpb_timer"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_margin="@dimen/dp_10"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="@dimen/dp_15"-->
                    <!--app:bgColor="@color/alto"-->
                    <!--app:bgStrokeWidth="@dimen/dp_5"-->
                    <!--app:diameter="@dimen/dp_40"-->
                    <!--app:progressColor="@color/haveLockBlue"-->
                    <!--app:progressStrokeWidth="3dp"-->
                    <!--app:showProgressText="true"-->
                    <!--android:visibility="gone"/>-->

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/swipe_card_tv_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/swipe_linear_layout_context"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Who will hit more Aces today ?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_16"
                        app:typeface="lato_bold" />


                    <RelativeLayout
                        android:id="@+id/image_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_150"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:alpha="0.4"
                            android:background="@drawable/vs_button_bg"
                            android:text="VS"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_16"
                            android:textStyle="bold"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">


                            <com.jeeva.android.widgets.HmImageView
                                android:id="@+id/swipe_card_iv_left"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="@dimen/dp_160"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placeholder_icon" />

                            <com.jeeva.android.widgets.HmImageView
                                android:id="@+id/swipe_card_iv_right"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="@dimen/dp_160"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/dp_1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placeholder_icon" />

                        </LinearLayout>


                        <com.jeeva.android.widgets.customfont.CustomButton
                            android:id="@+id/swipe_card_powerup_icon"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/powerup_colored_icon"
                            android:textColor="@color/black"
                            android:visibility="invisible" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

    </FrameLayout>

</RelativeLayout>