<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clickable="false"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.CardView
        android:id="@+id/swipe_card_cv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/swipe_card_ll_question_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_5">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/swipe_card_tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black_50"
                    android:textSize="@dimen/dp_16"
                    app:typeface="lato_black" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/swipe_card_tv_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textAllCaps="false"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/dp_13"
                    android:textColorLink="@color/hyperlink_color"
                    android:lineSpacingExtra="@dimen/dp_1.2"
                    android:letterSpacing="0.01"
                    app:typeface="lato_regular" />

                <LinearLayout
                    android:id="@+id/question_by_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_gravity="bottom"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="#a0a0a0"
                        android:textSize="@dimen/dp_10"
                        android:text="Question by "
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/question_by_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="#a0a0a0"
                        android:textSize="@dimen/dp_10"
                        app:typeface="lato_bold"
                        android:layout_marginLeft="@dimen/dp_5"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/swipe_card_ll_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/swipe_card_ll_question_desc"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/swipe_card_fl_left_area"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30">

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/swipe_card_iv_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:defaultImage="@drawable/placeholder_icon"
                        app:showAnimation="false" />

                    <View
                        android:id="@+id/swipe_card_v_left_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/swipe_card_tv_left_poll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/round_black_button_with_shadow"
                        android:gravity="center"
                        android:text="72 %"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_25"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/swipe_card_fl_right_area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/swipe_card_iv_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:defaultImage="@drawable/placeholder_icon"
                        app:showAnimation="false" />

                    <View
                        android:id="@+id/swipe_card_v_right_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/swipe_card_answer2_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_black_button_with_shadow"
                        android:gravity="center"
                        android:text="28 %"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_25"
                        android:visibility="gone" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/swipe_card_ll_option_labels"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_below="@id/swipe_card_ll_image"
                android:background="@drawable/play_options_bg">

                <ImageView
                    android:id="@+id/swipe_card_iv_left_arrow"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@drawable/play_arrow_left"
                    />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/swipe_card_tv_left"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_5"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dp_10"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_13"
                    app:typeface="lato_black" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/swipe_card_tv_right"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_13"
                    app:typeface="lato_black" />

                <ImageView
                    android:id="@+id/swipe_card_iv_right_arrow"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/play_arrow_right"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/swipe_card_ll_powerup_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/swipe_card_ll_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_dp_23"
                android:divider="@drawable/transparent_shape"
                android:orientation="horizontal"
                android:showDividers="middle">


            </LinearLayout>

            <ImageView
                android:id="@+id/swipe_card_iv_pointer"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_alignTop="@id/swipe_card_ll_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_dp_23"
                android:src="@drawable/touch_pointer"
                android:alpha="0"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/swipe_card_tv_locking_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/swipe_card_ll_option_labels"
                android:layout_alignTop="@id/swipe_card_ll_option_labels"
                android:alpha="0"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingRight="@dimen/dp_10"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_13"
                app:typeface="lato_black" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!-- Points Layout -->
    <android.support.v7.widget.CardView
        android:id="@+id/points_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/swipe_card_cv_main"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/transparent"
        android:layout_marginTop="@dimen/_dp_14"
        app:cardElevation="6dp">

        <LinearLayout
            android:id="@+id/points_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <!-- Positive -->
            <android.support.v7.widget.CardView
                android:id="@+id/positive_points_cardview"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_26"
                android:alpha="0.9"
                app:cardBackgroundColor="#22b572"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_1"
                >

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/swipe_card_question_positive_points_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/dp_13"
                    android:textColor="@color/white"
                    app:typeface="lato_bold" />

                <!--<LinearLayout
                    android:id="@+id/swipe_card_question_points_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/swipe_card_question_positive_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/greencolor"
                        android:textSize="@dimen/dp_15" />

                    <View
                        android:id="@+id/swipe_card_question_points_line"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toRightOf="@id/swipe_card_question_positive_points"
                        android:background="#cccccc" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/swipe_card_question_negative_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/swipe_card_question_points_line"
                        android:background="@android:color/transparent"
                        android:textColor="@color/tabcolor"
                        android:textSize="@dimen/dp_15" />

                </LinearLayout>-->

            </android.support.v7.widget.CardView>

            <!-- Negative -->
            <android.support.v7.widget.CardView
                android:id="@+id/negative_points_cardview"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_26"
                app:cardBackgroundColor="#c1272d"
                android:alpha="0.9"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_5">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/swipe_card_question_negative_points_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_13"
                    app:typeface="lato_bold"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/swipe_card_tv_points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/points_cardview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:alpha="0"
        android:text="Points"
        android:textColor="@color/white_60"
        android:textSize="@dimen/dp_16"
        app:typeface="roboto_condensed"/>

    <TextView
        android:id="@+id/testing_tv_visibility"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/apple"
        android:visibility="gone"/>

</RelativeLayout>