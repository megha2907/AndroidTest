<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backgroundone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusableInTouchMode="true"
    >


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginBottom="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="134dp"
        android:background="@android:color/transparent">


        <FrameLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <View
                android:id="@+id/bg_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/swipe_card_bg_shape"
                android:layout_marginBottom="@dimen/dp_20"
                android:elevation="@dimen/dp_2"
                android:alpha="0.3"
                android:visibility="invisible"
                />

            <View
                android:id="@+id/bg_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="@dimen/dp_26"
                android:background="@drawable/swipe_card_bg_shape"
                android:elevation="@dimen/dp_2"
                android:alpha="0.3"
                android:visibility="invisible"
                />

            <View
                android:id="@+id/bg_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="@dimen/dp_35"
                android:background="@drawable/swipe_card_bg_shape"
                android:elevation="@dimen/dp_2"
                android:alpha="0.3"
                android:visibility="invisible"
                />



        </FrameLayout>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="@dimen/dp_45"
            card_view:cardCornerRadius="@dimen/dp_4"
            >

            <RelativeLayout
                android:id="@+id/swipe_relative_layout_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top">


                <LinearLayout
                    android:id="@+id/swipe_linear_layout_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_25">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/swipe_card_tv_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_32"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Who will hit more Aces today dsdsfdfdsfsdfs ?"
                        android:alpha="0.5"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dp_16"
                        app:typeface="lato_black" />

                    <LinearLayout
                        android:id="@+id/swipe_linear_layout_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        >

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/swipe_card_tv_context"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_32"
                            android:layout_marginRight="@dimen/dp_32"
                            android:gravity="center"
                            android:text="tfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsfsfdsfsfsfsfsfsfsfsdfsdfdsdasdasdadadad"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/dp_15"
                            android:alpha="0.7"
                            app:typeface="roboto_condensed" />

                    </LinearLayout>



                    <RelativeLayout
                        android:id="@+id/image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_170"
                            android:layout_alignParentBottom="true">

                            <LinearLayout
                                android:id="@+id/image_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:orientation="horizontal"
                                android:layout_weight="1">


                                <com.jeeva.android.widgets.HmImageView
                                    android:id="@+id/swipe_card_iv_left"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_150"
                                    android:layout_alignParentLeft="true"
                                    android:layout_weight="1"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_icon"
                                    />

                                <com.jeeva.android.widgets.HmImageView
                                    android:id="@+id/swipe_card_iv_right"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_150"
                                    android:layout_weight="1"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_icon"
                                    />

                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/swipe_card_powerup_icon"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/powerups_count_bg"
                                android:textColor="@color/black"
                                android:visibility="invisible"
                                />

                            <Button
                                android:id="@+id/swipe_card_answer1_percentage"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="@dimen/dp_80"
                                android:layout_alignParentLeft="true"
                                android:background="@drawable/round_black_button_with_shadow"
                                android:textColor="@color/white"
                                android:text="72 %"
                                android:textSize="@dimen/dp_23"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_35"
                                android:visibility="invisible"
                                />

                            <Button
                                android:id="@+id/swipe_card_answer2_percentage"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="@dimen/dp_80"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/round_black_button_with_shadow"
                                android:textColor="@color/white"
                                android:text="28 %"
                                android:textSize="@dimen/dp_23"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_35"
                                android:visibility="invisible"
                                />


                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/swipe_card_question_points_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_button_with_shadow"
        android:textColor="@color/greencolor"
        android:textSize="@dimen/dp_12"
        android:padding="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/swipe_card_question_positive_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/greencolor"
            android:textSize="@dimen/dp_15"
            android:text="+10" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/swipe_card_question_negative_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/tabcolor"
            android:textSize="@dimen/dp_15"
            android:layout_toRightOf="@id/swipe_card_question_positive_points"

            />

    </LinearLayout>

</RelativeLayout>