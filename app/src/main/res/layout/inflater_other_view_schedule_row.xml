<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white_60"
        android:textSize="@dimen/dp_10"
        app:typeface="roboto_condensed"
        android:text="20th Feb , 7:30pm"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:id="@+id/schedule_row_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_18"
        android:paddingTop="@dimen/dp_12"
        android:layout_below="@+id/schedule_row_tv_date">

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swipe_card_tv_context">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/dp_16">


                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_left"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_6"
                    android:scaleType="fitXY"
                    android:src="@drawable/sample_tour_image"
                    app:defaultImage="@drawable/placeholder_icon" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_party_a_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Atletico"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_party_b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Atletico"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_right"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_6"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/dp_16"
                    android:src="@drawable/sample_tour_image"
                    app:defaultImage="@drawable/placeholder_icon" />
            </LinearLayout>

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/schedule_row_btn_playmatch"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:minWidth="@dimen/dp_72"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tournament_play_btn_bg"
                android:gravity="center"
                android:textAllCaps="true"
                android:onClick="onClick"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="@string/play"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_13"
                android:visibility="visible"
                app:typeface="roboto_condensed" />

            <RelativeLayout
                android:id="@+id/schedule_row_ll_waiting_for_result"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_36"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tournament_ready_btn_bg"
                android:clickable="true"
                android:paddingTop="@dimen/dp_8"
                android:visibility="visible">


                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_ll_waiting_for_result_answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answers"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular"
                    android:visibility="visible"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/timeline_points_arrow"
                    android:layout_toRightOf="@+id/schedule_row_ll_waiting_for_result_answers"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_centerVertical="true"
                    android:visibility="visible"

                    />

            </RelativeLayout>

        </RelativeLayout>


        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_2"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12"
            android:visibility="gone"
            app:typeface="lato_regular" />


    </LinearLayout>


</RelativeLayout>