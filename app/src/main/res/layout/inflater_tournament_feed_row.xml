<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        android:background="@color/black"
        >

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/tournament_tv_tournamentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office"
        android:textColor="@color/white"
        app:typeface="lato_regular"
        android:textSize="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_30"
        />

    <com.jeeva.android.widgets.HmImageView
        android:id="@+id/tournament_iv_tournamentImage"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder_icon"
        android:layout_marginLeft="@dimen/dp_10"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>


    <ImageView
        android:id="@+id/tournament_iv_rightarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow_feedicon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_2"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/tournament_btn_count_unplayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 unplayed matches"
        android:textSize="@dimen/dp_13"
        android:src="@drawable/ic_launcher"
        android:textColor="@color/textcolorlight"
        app:typeface="roboto_condensed"
        android:layout_below="@+id/tournament_tv_tournamentName"
        android:layout_marginLeft="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_2"/>


        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/tournament_btn_unplayed_count"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/white"
            android:background="@drawable/notification_count_bg"
            app:typeface="roboto_light"
            android:text="2"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tournament_iv_rightarrow"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"
            />

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/dividercolor"
        android:layout_alignParentBottom="true"
       />



</RelativeLayout>