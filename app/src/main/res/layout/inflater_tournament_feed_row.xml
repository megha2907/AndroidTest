<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        android:background="@color/black"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tournament_btn_unplayed_btn"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/tournament_tv_tournamentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office"
        android:textColor="@color/white"
        app:typeface="roboto_condensed"
        android:textSize="@dimen/dp_16"
        />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/tournament_tv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications : ON"
            android:textSize="@dimen/dp_11"
            android:src="@drawable/ic_launcher"
            android:textColor="@color/textcolorlight"
            app:typeface="lato_regular"
            android:layout_below="@+id/tournament_tv_tournamentName"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_2"
            />

        </RelativeLayout>

    <com.jeeva.android.widgets.HmImageView
        android:id="@+id/tournament_iv_tournamentImage"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:adjustViewBounds="true"
        android:src="@drawable/left_placeholder_icon"
        android:layout_marginLeft="@dimen/dp_10"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>


    <ImageButton
        android:id="@+id/tournament_iv_notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:layout_marginRight="@dimen/dp_75"
        android:visibility="gone"/>


        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/tournament_btn_unplayed_btn"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/tournament_ready_btn_bg"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingBottom="@dimen/dp_2"
            android:text="PLAY"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_11"
            android:visibility="visible"
            app:typeface="lato_regular" />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/tournament_btn_unplayed_count"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/white"
            android:background="@drawable/notification_count_bg"
            app:typeface="lato_bold"
            android:layout_alignParentRight="true"
            android:visibility="visible" />

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorMedium"
        android:layout_alignParentBottom="true"
       />



</RelativeLayout>