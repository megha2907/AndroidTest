<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/colorBackground"
    >

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/tournament_tv_tournamentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_30"
        />

    <in.sportscafe.scgame.module.common.RoundImage
        android:id="@+id/tournament_iv_tournamentImage"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@drawable/circle_icon"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerVertical="true"/>


    <ImageView
        android:id="@+id/tournament_iv_rightarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow_feedicon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_2"/>

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/tournament_btn_count_unplayed"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:text="2"
        android:textSize="@dimen/dp_13"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/powerup_name_bg"
        android:textColor="@color/black"
        app:typeface="lato_bold"/>



</RelativeLayout>