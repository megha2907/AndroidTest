<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_info_selected_tournaments_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:background="@color/black"
        android:layout_marginTop="@dimen/dp_10"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/group_info_unselected_tournaments_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNSELECTED TOURNAMENTS"
        android:layout_below="@+id/group_info_selected_tournaments_rcv"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_info_unselected_tournaments_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:background="@color/black"
        android:layout_below="@+id/group_info_unselected_tournaments_tv"
        android:layout_marginTop="@dimen/dp_10"/>

</RelativeLayout>