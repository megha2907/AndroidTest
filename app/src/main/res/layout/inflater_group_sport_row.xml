<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:descendantFocusability="blocksDescendants"
    >


    <com.jeeva.android.widgets.HmImageView
        android:id="@+id/group_sport_row_image_tournament"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_10"
        app:defaultImage="@drawable/placeholder_icon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/group_sport_row_image_tournament"
        android:layout_toLeftOf="@+id/group_sport_row_selected_icon"
        android:layout_centerVertical="true">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/group_sport_row_tv_tournament_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15"
        app:typeface="lato_bold"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/group_sport_row_tv_sport_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolorlight"
        android:textSize="@dimen/dp_12"
        app:typeface="lato_regular"
        android:layout_below="@+id/group_sport_row_tv_tournament_name"
        android:layout_marginTop="@dimen/dp_2"
        />

    </RelativeLayout>
    <ImageView
        android:id="@+id/group_sport_row_selected_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/dividercolor"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>