<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_2">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/black2"
        card_view:cardCornerRadius="@dimen/dim_2"
        card_view:cardElevation="@dimen/dp_5"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/store_category_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dim_60">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/store_category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Doubler"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/store_category_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/store_category_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dim_2"
                        android:text="Doubles the points or concede per prediction"
                        android:textColor="@color/white_dim"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/store_items_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/store_category_layout"
                android:orientation="vertical"
                android:background="@color/black3"
                android:paddingBottom="@dimen/dim_2"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>