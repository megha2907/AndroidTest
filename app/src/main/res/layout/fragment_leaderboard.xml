<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/gradient_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:visibility="gone"
        android:background="@drawable/gradient_above_hometab"
        android:layout_above="@+id/points_user_rl" />


    <RelativeLayout
        android:id="@+id/points_user_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@drawable/points_user_blue_bg">


        <LinearLayout
            android:id="@+id/leaderboard_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6">


            <View
                android:id="@+id/leaderboard_row_view_user"
                android:layout_width="@dimen/dp_3"
                android:layout_height="fill_parent"
                android:background="@color/btn_powerup_screen_color"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/leaderboard_row_iv_status"
                android:layout_width="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/status_arrow_down" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_row_tv_rank"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_weight="1.2"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                app:typeface="roboto_condensed" />


            <in.sportscafe.nostragamus.module.common.RoundImage
                android:id="@+id/leaderboard_row_iv_user_img"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/placeholder_icon" />

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="2.5">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/leaderboard_row_tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:singleLine="true"
                    android:text="Jeevanandham"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_13"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/leaderboard_row_tv_played"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/leaderboard_row_tv_user_name"
                    android:text="3 Matches"
                    android:textColor="@color/white_70"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />

            </RelativeLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_row_tv_match_points"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/powerups_white_icon"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:text="80"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="roboto_condensed" />


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_row_tv_accuracy"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/leaderboards_accuracy_icon"
                android:drawablePadding="@dimen/dp_5"
                android:text="100%"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_5"
                app:typeface="roboto_condensed" />


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_row_tv_points"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/points_white_icon"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:text="930"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="roboto_condensed" />

        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/leaderboard_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:paddingTop="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_60"/>


</RelativeLayout>