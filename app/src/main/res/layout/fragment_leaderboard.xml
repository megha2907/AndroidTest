<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v7.widget.CardView
        android:id="@+id/sorting_card_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_28"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="0dp"
        app:cardElevation="6dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_marginLeft="@dimen/dim_4"
        android:layout_marginRight="@dimen/dim_4"
        android:layout_marginBottom="@dimen/dim_4"
        android:layout_marginTop="@dimen/dim_16"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/sorting_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sorting_tv"
            android:clickable="false">

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/sort_by_accuracy_btn"
                android:layout_width="@dimen/dim_110"
                android:layout_height="@dimen/dim_28"
                android:layout_marginLeft="@dimen/dim_1"
                android:layout_toRightOf="@+id/sort_by_powerups_btn"
                android:background="@drawable/sort_selection_color"
                android:drawableLeft="@drawable/accuracy_selection_icon"
                android:onClick="onClick"
                android:paddingLeft="@dimen/dim_18"
                android:paddingRight="@dimen/dim_16"
                android:text="Accuracy"
                android:textColor="@drawable/sort_tv_selector"
                android:textSize="@dimen/sp_10"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/sort_by_total_points_btn"
                android:layout_width="@dimen/dim_110"
                android:layout_height="@dimen/dim_28"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_1"
                android:layout_toRightOf="@+id/sort_by_accuracy_btn"
                android:background="@drawable/sort_selection_color"
                android:drawableLeft="@drawable/points_selection_icon"
                android:onClick="onClick"
                android:paddingLeft="@dimen/dim_26"
                android:paddingRight="@dimen/dim_26"
                android:text="Points"
                android:textColor="@drawable/sort_tv_selector"
                android:textSize="@dimen/sp_10"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/sort_by_powerups_btn"
                android:layout_width="@dimen/dim_110"
                android:layout_height="@dimen/dim_28"
                android:background="@drawable/sort_selection_color"
                android:drawableLeft="@drawable/powerups_selection_icon"
                android:onClick="onClick"
                android:paddingLeft="@dimen/dim_18"
                android:paddingRight="@dimen/dim_16"
                android:text="Powerups"
                android:textColor="@drawable/sort_tv_selector"
                android:textSize="@dimen/sp_10"
                app:typeface="lato_regular" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/leaderboard_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sorting_card_view"
        android:layout_above="@+id/points_user_rl"
        android:background="@color/black"
        android:paddingTop="@dimen/dp_7" />

    <View
        android:id="@+id/gradient_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_above="@+id/points_user_rl"
        android:background="@drawable/gradient_above_hometab"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/points_user_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@drawable/points_user_blue_bg"
        android:clickable="false"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/leaderboard_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_6">

            <View
                android:id="@+id/leaderboard_view_user"
                android:layout_width="@dimen/dp_3"
                android:layout_height="fill_parent"
                android:background="@color/btn_powerup_screen_color"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/leaderboard_iv_rank_indicator"
                android:layout_width="@dimen/dim_12"
                android:layout_height="wrap_content"
                android:src="@drawable/rank_indicator"
                android:visibility="invisible" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:gravity="center"
                android:minWidth="@dimen/dim_22"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:typeface="lato_bold" />


            <ImageView
                android:id="@+id/leaderboard_iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/dim_20"
                android:src="@drawable/status_arrow_down"
                android:visibility="gone" />


            <com.jeeva.android.widgets.HmImageView
                android:id="@+id/leaderboard_iv_user_img"
                android:layout_width="@dimen/dim_36"
                android:layout_height="@dimen/dim_36"
                android:layout_marginLeft="@dimen/dim_18"
                android:scaleType="fitXY"
                android:src="@drawable/left_placeholder_icon" />

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_weight="2.5">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/leaderboard_tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/leaderboard_tv_played"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/leaderboard_tv_user_name"
                    android:textColor="@color/white_999999"
                    android:textSize="@dimen/sp_10"
                    app:typeface="lato_regular" />

            </RelativeLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_tv_match_points"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/powerups_white_icon"
                android:drawablePadding="@dimen/dim_5"
                android:paddingLeft="@dimen/dim_5"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_regular" />


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_tv_accuracy"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/leaderboards_accuracy_icon"
                android:drawablePadding="@dimen/dim_5"
                android:text="0%"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_regular" />


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_tv_points"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/points_white_icon"
                android:drawablePadding="@dimen/dim_5"
                android:paddingLeft="@dimen/dim_5"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_regular" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>