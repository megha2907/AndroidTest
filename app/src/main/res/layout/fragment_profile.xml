<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/profile_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:maxWidth="@dimen/dp_150"
        android:text="klajdlkfjalskdfjalksdfjjklasdfkajfs"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/profile_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_20" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/profile_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:text="Edit"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_20" />

    <com.jeeva.android.widgets.HmImageView
        android:id="@+id/profile_iv_image"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_60"
        android:src="@drawable/user_default" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/profile_btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_iv_image"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:text="Logout"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_20" />

    <LinearLayout
        android:id="@+id/profile_ll_sports_followed_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_iv_image"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_toLeftOf="@id/profile_iv_image"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/profile_tv_sports_folld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/dp_15" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/profile_tv_label_tournaments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:text="Sports Followed" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_ll_points_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_ll_sports_followed_parent"
        android:layout_alignTop="@id/profile_ll_sports_followed_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/profile_iv_image"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/profile_tv_points"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/dp_15" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/profile_tv_label_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/profile_fl_my_positions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_btn_logout" />

</RelativeLayout>