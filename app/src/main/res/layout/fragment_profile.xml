<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/htab_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_screen_bg">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/htab_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/profile_tab_color"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/htab_collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">


                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:id="@+id/main_toolbar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_alignParentStart="true"
                        android:fitsSystemWindows="true"
                        android:orientation="horizontal">



                        <ImageButton
                            android:id="@+id/profile_btn_logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:padding="@dimen/dp_20"
                            android:src="@drawable/settings_icon" />

                    </RelativeLayout>


                    <in.sportscafe.nostragamus.module.common.RoundImage
                        android:id="@+id/profile_iv_image"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:onClick="onClick"
                        android:src="@drawable/placeholder_icon"
                        />

                    <ImageButton
                        android:id="@+id/profile_btn_edit"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_80"
                        android:layout_marginTop="@dimen/dp_72"
                        android:background="@drawable/notification_count_bg"
                        android:padding="@dimen/dp_25"
                        android:src="@drawable/edit_profile_icon" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/profile_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_iv_image"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_20"
                        android:textStyle="bold"
                        app:typeface="lato_regular"/>


                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/profile_tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_iv_image"
                        android:text="1st Level"
                        android:textAllCaps="false"
                        android:textColor="@color/white_60"
                        android:textSize="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textStyle="bold"
                        android:layout_below="@+id/profile_tv_title"
                        app:typeface="lato_regular"/>



                    <LinearLayout
                        android:id="@+id/badges_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_tv_level"
                        android:layout_toRightOf="@+id/profile_iv_image"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical">

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_btn_edit"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dp_10">


                    <RelativeLayout
                        android:id="@+id/profile_ll_points_parent"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                       >

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/profile_tv_points_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="POINTS"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_11"
                            app:typeface="lato_regular" />

                        <com.jeeva.android.widgets.customfont.CustomButton
                            android:id="@+id/profile_tv_points"
                            android:layout_width="@dimen/dp_72"
                            android:layout_height="@dimen/dp_30"
                            android:clickable="false"
                            android:text="0"
                            android:gravity="center"
                            android:background="@drawable/profile_screen_btns_bg"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_12"
                            android:drawableLeft="@drawable/profile_screen_points_icon"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_5"
                            android:layout_below="@+id/profile_tv_points_txt"
                            app:typeface="lato_bold"
                          />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/profile_ll_accuracy_parent"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_ll_points_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/profile_tv_accuracy_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="ACCURACY"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_11"
                            app:typeface="lato_regular" />

                        <com.jeeva.android.widgets.customfont.CustomButton
                            android:id="@+id/profile_btn_accuracy"
                            android:layout_width="@dimen/dp_72"
                            android:layout_height="@dimen/dp_30"
                            android:clickable="false"
                            android:text="0%"
                            android:background="@drawable/profile_screen_btns_bg"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_12"
                            android:drawableLeft="@drawable/profile_screen_accuracy_icon"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_5"
                            android:layout_below="@+id/profile_tv_accuracy_txt"
                            app:typeface="lato_bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/profile_ll_predictions_parent"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_ll_accuracy_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/profile_tv_predictions_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="PREDICTIONS"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_11"
                            app:typeface="lato_regular" />

                        <com.jeeva.android.widgets.customfont.CustomButton
                            android:id="@+id/profile_btn_predictions"
                            android:layout_width="@dimen/dp_72"
                            android:layout_height="@dimen/dp_30"
                            android:clickable="false"
                            android:text="0"
                            android:background="@drawable/profile_screen_btns_bg"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_12"
                            android:drawableLeft="@drawable/profile_screen_predictions_icon"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_5"
                            android:layout_below="@+id/profile_tv_predictions_txt"
                            app:typeface="lato_bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/profile_ll_level_parent"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_ll_predictions_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/profile_tv_level_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="LEVEL"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_11"
                            app:typeface="lato_regular" />

                        <com.jeeva.android.widgets.customfont.CustomButton
                            android:id="@+id/profile_btn_level"
                            android:layout_width="@dimen/dp_72"
                            android:layout_height="@dimen/dp_30"
                            android:clickable="false"
                            android:text="0"
                            android:background="@drawable/profile_screen_btns_bg"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_12"
                            android:drawableLeft="@drawable/profile_screen_level_icon"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_5"
                            android:layout_below="@+id/profile_tv_level_txt"
                            app:typeface="lato_bold"
                           />

                    </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.design.widget.CollapsingToolbarLayout>



            <in.sportscafe.nostragamus.module.common.CustomTabLayout
                android:id="@+id/tab_tl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_below="@+id/profile_ll_points_parent"
                android:layout_gravity="center_horizontal|top"
                android:background="@color/profile_tab_color"
                android:elevation="@dimen/dp_0"
                app:layout_collapseMode="pin"
                app:selected_typeface="lato_bold"
                app:tabIndicatorColor="@color/tabcolor"
                app:tabIndicatorHeight="@dimen/dp_4"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/ProfileTabLayoutTextAppearance"
                app:tabTextColor="@color/tab_tv_not_selected_color"
                app:unselected_textSize="@dimen/dp_14"
                app:unselected_typeface="lato_regular" />

        </android.support.design.widget.AppBarLayout>


        <in.sportscafe.nostragamus.module.common.CustomViewPager
            android:id="@+id/tab_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:paddingBottom="@dimen/dp_10"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/join_grp_btn"
            android:layout_width="@dimen/blue_button_width"
            android:layout_height="@dimen/blue_button_height"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/powerup_screen_btn_bg"
            android:onClick="onClick"
            android:text="CREATE NEW GROUP"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/blue_button_text"
            android:visibility="gone"
            app:typeface="roboto_condensed" />


    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>