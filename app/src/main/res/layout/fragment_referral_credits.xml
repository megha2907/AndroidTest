<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <!-- Layout Starts -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--Referral Credits section -->
            <LinearLayout
                android:id="@+id/refer_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_26"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp_60"
                android:orientation="vertical">


                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/referral_credit_number_of_friends_added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="20 Friends Added"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_32"
                    app:typeface="lato_bold" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/referral_credit_summary_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="SUMMARY"
                    android:textColor="@color/grey7"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16">


                        <RelativeLayout
                            android:id="@+id/referral_code_rl"
                            android:layout_width="@dimen/dp_140"
                            android:layout_height="@dimen/dp_80"
                            android:clipToPadding="false"
                            android:background="@drawable/referral_powerups_bg"
                            android:elevation="@dimen/dp_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.jeeva.android.widgets.customfont.CustomTextView
                                        android:id="@+id/referral_credits_2x_powerup_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="88"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/dp_14"
                                        app:typeface="lato_bold" />

                                    <ImageView
                                        android:id="@+id/referral_credits_powerup_2x"
                                        android:layout_width="@dimen/dp_16"
                                        android:layout_height="@dimen/dp_16"
                                        android:layout_marginTop="@dimen/dp_1"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/double_powerup_small"
                                        android:visibility="visible" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_22"
                                    android:orientation="vertical">

                                    <com.jeeva.android.widgets.customfont.CustomTextView
                                        android:id="@+id/referral_credits_noneg_powerup_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="67"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/dp_14"
                                        app:typeface="lato_bold" />

                                    <ImageView
                                        android:id="@+id/referral_credits_noneg_powerup"
                                        android:layout_width="@dimen/dp_16"
                                        android:layout_height="@dimen/dp_16"
                                        android:layout_marginTop="@dimen/dp_1"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/no_negative_powerup_small"
                                        android:visibility="visible" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_22"
                                    android:orientation="vertical">

                                    <com.jeeva.android.widgets.customfont.CustomTextView
                                        android:id="@+id/referral_credits_player_poll_powerup_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="72"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/dp_14"
                                        app:typeface="lato_bold" />

                                    <ImageView
                                        android:id="@+id/referral_credits_player_poll_powerup"
                                        android:layout_width="@dimen/dp_16"
                                        android:layout_height="@dimen/dp_16"
                                        android:layout_marginTop="@dimen/dp_1"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/audience_poll_powerup_small"
                                        android:visibility="visible" />

                                </LinearLayout>

                            </LinearLayout>

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_powerup_earned_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/dp_12"
                                android:includeFontPadding="false"
                                android:text="Powerup Earned"
                                android:textColor="@color/grey6"
                                android:textSize="@dimen/dp_12"
                                app:typeface="lato_bold" />

                            <ImageView
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_8"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_12"
                                android:rotation="180"
                                android:src="@drawable/back_icon_grey" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/referral_credits_money_earned_rl"
                            android:layout_width="@dimen/dp_140"
                            android:layout_height="@dimen/dp_80"
                            android:background="@drawable/referral_powerups_bg"
                            android:layout_alignParentRight="true">

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_money_earned"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginBottom="@dimen/dp_12"
                                android:includeFontPadding="false"
                                android:text="332"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_25"
                                app:typeface="lato_bold" />

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_money_earned_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/dp_12"
                                android:includeFontPadding="false"
                                android:text="Money Earned"
                                android:textColor="@color/grey6"
                                android:textSize="@dimen/dp_12"
                                app:typeface="lato_bold" />

                            <ImageView
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_8"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_18"
                                android:rotation="180"
                                android:src="@drawable/back_icon_grey" />

                        </RelativeLayout>


                </RelativeLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/referral_credits_friends_act_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="FRIEND'S ACTIVITY"
                    android:textColor="@color/grey7"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/line_separator" />

                <!-- Recycler List view  -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/referralHistoryRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
