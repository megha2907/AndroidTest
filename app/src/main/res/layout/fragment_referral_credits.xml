<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <!-- Layout Starts -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--Referral Credits section -->
            <LinearLayout
                android:id="@+id/refer_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/refer_screen_gap"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp_60"
                android:orientation="vertical">


                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/referral_credit_number_of_friends_added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="0 Friends Added"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_32"
                    app:typeface="lato_bold" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/referral_credit_summary_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/refer_screen_gap"
                    android:text="SUMMARY"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:textColor="@color/grey7"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

                <RelativeLayout
                    android:id="@+id/referral_credits_pro_powerup_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13">


                        <RelativeLayout
                            android:id="@+id/referral_credits_powerup_rl"
                            android:layout_width="@dimen/dp_160"
                            android:layout_height="@dimen/dp_90"
                            android:clipToPadding="false"
                            android:paddingBottom="@dimen/dp_12"
                            android:background="@drawable/referral_powerups_bg"
                            android:elevation="@dimen/dp_5">

                            <LinearLayout
                                android:id="@+id/referral_credits_powerup_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_12"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.jeeva.android.widgets.customfont.CustomTextView
                                        android:id="@+id/referral_credits_2x_powerup_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_14"
                                        android:text="0"
                                        android:layout_gravity="center"
                                        app:typeface="lato_bold" />

                                    <ImageView
                                        android:id="@+id/referral_credits_powerup_2x"
                                        android:layout_width="@dimen/referral_powerup_size"
                                        android:layout_height="@dimen/referral_powerup_size"
                                        android:layout_marginTop="@dimen/dp_4"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/double_powerup_small"
                                        android:visibility="visible" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_22"
                                    android:orientation="vertical">

                                    <com.jeeva.android.widgets.customfont.CustomTextView
                                        android:id="@+id/referral_credits_noneg_powerup_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_14"
                                        android:text="0"
                                        android:layout_gravity="center"
                                        app:typeface="lato_bold" />

                                    <ImageView
                                        android:id="@+id/referral_credits_noneg_powerup"
                                        android:layout_width="@dimen/referral_powerup_size"
                                        android:layout_height="@dimen/referral_powerup_size"
                                        android:layout_marginTop="@dimen/dp_4"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/no_negative_powerup_small"
                                        android:visibility="visible" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_22"
                                    android:orientation="vertical">

                                    <com.jeeva.android.widgets.customfont.CustomTextView
                                        android:id="@+id/referral_credits_player_poll_powerup_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_14"
                                        android:text="0"
                                        android:layout_gravity="center"
                                        app:typeface="lato_bold" />

                                    <ImageView
                                        android:id="@+id/referral_credits_player_poll_powerup"
                                        android:layout_width="@dimen/referral_powerup_size"
                                        android:layout_height="@dimen/referral_powerup_size"
                                        android:layout_marginTop="@dimen/dp_4"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/audience_poll_powerup_small"
                                        android:visibility="visible" />

                                </LinearLayout>

                            </LinearLayout>

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_powerup_earned_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/referral_credits_powerup_ll"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_12"
                                android:includeFontPadding="false"
                                android:text="Powerups Earned"
                                android:textColor="@color/grey6"
                                android:textSize="@dimen/sp_13"
                                app:typeface="lato_regular" />

                            <ImageView
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_8"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_12"
                                android:rotation="180"
                                android:visibility="gone"
                                android:src="@drawable/back_icon_grey" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/referral_credits_money_earned_rl"
                            android:layout_width="@dimen/dp_160"
                            android:layout_height="@dimen/dp_90"
                            android:background="@drawable/referral_powerups_bg"
                            android:layout_alignParentRight="true">

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_money_earned"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_14"
                                android:text="â‚¹ 0.00"
                                android:layout_marginBottom="@dimen/dp_12"
                                android:includeFontPadding="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_25"
                                app:typeface="lato_bold" />

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_money_earned_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/referral_credits_money_earned"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_7"
                                android:includeFontPadding="false"
                                android:text="Money Earned"
                                android:textColor="@color/grey6"
                                android:textSize="@dimen/sp_13"
                                app:typeface="lato_regular" />

                            <ImageView
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_8"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_18"
                                android:rotation="180"
                                android:visibility="gone"
                                android:src="@drawable/back_icon_grey" />

                        </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/referral_credits_ps_powerup_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_14"
                    android:paddingBottom="@dimen/dp_12"
                    android:background="@drawable/referral_powerups_bg"
                    android:elevation="@dimen/dp_5">

                    <LinearLayout
                        android:id="@+id/referral_credits_ps_powerup_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_36"
                        android:layout_marginRight="@dimen/dp_36"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="left"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/referral_credits_ps_powerup_2x"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginTop="@dimen/dp_4"
                                android:gravity="center"
                                android:background="@android:color/transparent"
                                android:src="@drawable/double_powerup_small"
                                android:visibility="visible" />

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_ps_2x_powerup_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_22"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:text="0"
                                android:gravity="center"
                                android:layout_gravity="center"
                                app:typeface="lato_bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/referral_credits_ps_noneg_powerup"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginTop="@dimen/dp_4"
                                android:background="@android:color/transparent"
                                android:src="@drawable/no_negative_powerup_small"
                                android:visibility="visible" />

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_ps_noneg_powerup_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_22"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:text="0"
                                android:layout_gravity="center"
                                app:typeface="lato_bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/referral_credits_ps_player_poll_powerup"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginTop="@dimen/dp_4"
                                android:background="@android:color/transparent"
                                android:src="@drawable/audience_poll_powerup_small"
                                android:visibility="visible"/>

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_ps_player_poll_powerup_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_22"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:text="0"
                                android:layout_gravity="center"
                                app:typeface="lato_bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/referral_credits_ps_powerup_earned_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/referral_credits_ps_powerup_ll"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:includeFontPadding="false"
                        android:text="Powerups Earned"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_regular" />

                    <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_8"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"
                        android:rotation="180"
                        android:visibility="gone"
                        android:src="@drawable/back_icon_grey" />

                </RelativeLayout>


                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/referral_credits_friends_act_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/refer_screen_gap"
                    android:text="FRIEND'S ACTIVITY"
                    android:textColor="@color/grey7"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    app:typeface="lato_regular" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@color/line_separator_two" />

                <!-- Recycler List view  -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/referralHistoryRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/dp_13"/>

                <!-- No transaction history empty view -->
                <LinearLayout
                    android:id="@+id/referral_credits_no_history_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/referral_image_size"
                        android:layout_height="@dimen/referral_image_size"
                        android:src="@drawable/no_referral_history"/>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="No Friends added yet. Add friends to start earning money and powerups regularly"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_regular"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"/>

                    <!-- Refer Now Button -->
                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/refer_friend_btn"
                        android:layout_width="@dimen/referral_history_btn_width"
                        android:layout_height="@dimen/referral_history_btn_height"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_refer_bg"
                        android:clickable="false"
                        android:layout_marginTop="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_3"
                        android:text="Refer Now!"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
