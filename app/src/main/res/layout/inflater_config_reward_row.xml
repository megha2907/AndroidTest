<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/code_gray_17"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/config_reward_ll_paid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/config_reward_rl_paid_layout"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/config_reward_tv_paid_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAID FOR ENTRY"
                    android:textAllCaps="true"
                    android:textColor="@color/white_50"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/config_reward_tv_amount_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/config_reward_tv_paid_txt"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="Rs 200"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/paid_entry_tv_color"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_light" />

            </RelativeLayout>


        </RelativeLayout>


        <View
            android:id="@+id/config_reward_row_v_line_separator"
            android:layout_width="@dimen/dp_0.7"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@color/white_20"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/config_reward_rl_winning_layout"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/config_reward_tv_winning_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOUR WINING"
                    android:textAllCaps="true"
                    android:textColor="@color/white_50"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/config_reward_tv_winning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/config_reward_tv_winning_txt"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="TBD"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/paid_entry_tv_color"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_light" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/config_reward_tv_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/config_reward_ll_paid_layout"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_11"
        app:typeface="lato_light" />

    <RelativeLayout
        android:id="@+id/config_reward_rl_rewards_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/config_reward_tv_announcement"
        android:background="@color/code_gray_1d"
        android:layout_marginTop="@dimen/dp_12">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/config_reward_tv_dropdown_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="PRIZES"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/white_50"
        android:textSize="@dimen/dp_9"
        app:typeface="lato_regular" />

    <LinearLayout
        android:id="@+id/config_reward_row_ll_rewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_10"
        android:layout_below="@id/config_reward_tv_dropdown_title"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical" />

    </RelativeLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/config_reward_row_tv_disclaimer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="DISCLAIMER"
        android:layout_below="@+id/config_reward_rl_rewards_layout"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/white_50"
        android:textSize="@dimen/dp_9"
        android:visibility="gone"
        app:typeface="lato_regular" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/config_reward_row_tv_disclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/config_reward_row_tv_disclaimer_txt"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/white_50"
        android:textSize="@dimen/dp_10"
        android:visibility="gone"
        app:typeface="lato_regular" />

</RelativeLayout>