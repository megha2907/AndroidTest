<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/htab_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_screen_bg">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/htab_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/profile_tab_color"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/htab_collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">


                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:id="@+id/main_toolbar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_alignParentStart="true"
                        android:background="@color/black_20"
                        android:fitsSystemWindows="true"
                        android:orientation="horizontal">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/results_peek_tv_match_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_12"
                            android:textSize="@dimen/dp_14"
                            app:typeface="lato_regular" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/results_peek_tv_challenge_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white_60"
                            android:layout_below="@+id/results_peek_tv_match_name"
                            android:textSize="@dimen/dp_12"
                            app:typeface="lato_regular" />

                        <ImageButton
                            android:id="@+id/results_peek_btn_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/dp_15"
                            android:src="@drawable/back_icon_grey" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main_toolbar_layout">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/dp_50"
                            android:orientation="vertical"
                            android:layout_toLeftOf="@+id/player_comparison_compare_icon">

                            <in.sportscafe.nostragamus.module.common.RoundImage
                                android:id="@+id/player_comparison_user_iv_image"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_18"
                                android:src="@drawable/placeholder_icon" />


                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/player_comparison_user_tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/player_comparison_user_iv_image"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_14"
                                app:typeface="lato_regular"
                                android:ellipsize="end"
                                android:maxEms="15"
                                android:singleLine="true"/>

                            <com.jeeva.android.widgets.customfont.CustomButton
                                android:id="@+id/player_comparison_user_btn_points"
                                android:layout_width="@dimen/dp_72"
                                android:layout_height="@dimen/dp_30"
                                android:background="@drawable/profile_screen_btns_bg"
                                android:clickable="false"
                                android:layout_gravity="center"
                                android:drawableLeft="@drawable/profile_screen_points_icon"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginBottom="@dimen/dp_18"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_12"
                                app:typeface="lato_bold" />

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/player_comparison_compare_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/compare_vs_icon"
                            android:layout_centerInParent="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_50"
                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/player_comparison_compare_icon">

                            <in.sportscafe.nostragamus.module.common.RoundImage
                                android:id="@+id/player_comparison_other_player_image"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_18"
                                android:src="@drawable/placeholder_icon" />


                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/player_comparison_other_player_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/player_comparison_other_player_image"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_14"
                                app:typeface="lato_regular"
                                android:ellipsize="end"
                                android:maxEms="15"
                                android:singleLine="true"/>

                            <com.jeeva.android.widgets.customfont.CustomButton
                                android:id="@+id/player_comparison_player_btn_points"
                                android:layout_width="@dimen/dp_72"
                                android:layout_height="@dimen/dp_30"
                                android:background="@drawable/profile_screen_btns_bg"
                                android:clickable="false"
                                android:layout_gravity="center"
                                android:drawableLeft="@drawable/profile_screen_points_icon"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginBottom="@dimen/dp_18"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_12"
                                app:typeface="lato_bold" />

                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>


            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/results_compare_rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:paddingBottom="@dimen/dp_10"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>