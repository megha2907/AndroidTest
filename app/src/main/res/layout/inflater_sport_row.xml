<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sport_row_iv_sport_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:alpha="0.6"
        android:src="@drawable/basketball_menu_colored_icon"/>


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/sport_row_tv_sport_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:text="Archery"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"
        app:typeface="lato_regular"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_below="@+id/sport_row_iv_sport_image"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>