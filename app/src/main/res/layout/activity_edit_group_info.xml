<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        android:id="@+id/group_info_toolbar"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/save_btn"
            android:text="Save"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/textcolorlight"
            android:onClick="onClick"
            android:background="@android:color/transparent"
            android:textAllCaps="false"/>

        </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_below="@+id/group_info_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            >

            <RelativeLayout
                android:id="@+id/group_info_rl1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                >

                <ImageView
                    android:id="@+id/group_iv_user_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:onClick="showImagePopup"
                    android:alpha="0.8"
                    />

                <ImageView
                    android:id="@+id/group_iv_camera_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera_icon"
                    android:layout_centerInParent="true"
                    android:onClick="showImagePopup"
                    />

                <Button
                    android:id="@+id/group_info_iv_user_image"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_40"
                    android:background="@drawable/powerups_count_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/group_info_rl2"
                android:layout_below="@id/group_info_rl1"
                >

                <ImageButton
                    android:id="@+id/group_info_btn_edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_centerVertical="true"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/edit_icon"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_25"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_group_info_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    app:theme="@style/TextLabel"
                    android:layout_toLeftOf="@+id/group_info_btn_edit_name"
                    android:layout_toStartOf="@+id/group_info_btn_edit_name">

                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/group_info_et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="Group Name"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:text="First Group"
                        android:textColor="@color/white"
                        android:layout_below="@id/group_info_rl1"
                        android:backgroundTint="@color/white"
                        android:textSize="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_18"/>

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/group_info_tv_label_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_info_rl2"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="TOURNAMENTS"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12"
                app:typeface="lato_regular"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/group_info_selected_tournaments_rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/group_info_tv_label_sports"
                android:clipToPadding="false"
                />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
