<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Toolbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/bank_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" >

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/bank_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="lato_regular" />

        </android.support.v7.widget.Toolbar>

    <!-- Borro save button -->
    <FrameLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/add_bank_detail_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/flat_blue_btn_selector"
            android:gravity="center"
            android:minWidth="@dimen/dp_200"
            android:onClick="onAddBankSaveClicked"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_0"
            android:text="Save Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            app:typeface="lato_bold" />

    </FrameLayout>

    <!-- Screen -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bank_toolbar"
        android:background="@color/black"
        android:layout_above="@id/bottom_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24">


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/add_bank_accHolder_head_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Acount Holder's Name"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.ShadowLayout
                android:id="@+id/paytm_add_detail_sl_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_4"
                app:sl_cornerRadius="@dimen/dp_5"
                app:sl_fillColor="@android:color/transparent"
                app:sl_shadowRadius="@dimen/dp_4">

                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_bank_acc_holder_name_edittext"
                    style="@style/EditTextStyle"
                    android:inputType="textPersonName" />

            </com.jeeva.android.widgets.ShadowLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/add_bank_accNumber_head_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Account Number"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.ShadowLayout
                android:id="@+id/paytm_add_detail_sl_confirm_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_4"
                app:sl_cornerRadius="@dimen/dp_5"
                app:sl_fillColor="@color/edittext_selection_bg"
                app:sl_shadowRadius="@dimen/dp_4">

                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_bank_acc_number_edittext"
                    style="@style/EditTextStyle"
                    android:inputType="text" />

            </com.jeeva.android.widgets.ShadowLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/add_bank_ifsc_head_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_16"
                android:text="IFSC Code"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.ShadowLayout
                android:id="@+id/paytm_add_detail_sl_confirm_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_4"
                app:sl_cornerRadius="@dimen/dp_5"
                app:sl_fillColor="@color/edittext_selection_bg"
                app:sl_shadowRadius="@dimen/dp_4">


                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_bank_ifsc_edittext"
                    style="@style/EditTextStyle"
                    android:inputType="text" />

            </com.jeeva.android.widgets.ShadowLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:text="Paytm transactions are faster than NEFT transactions.\nPlease add your Paytm details for faster payouts!"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_12"
                app:typeface="lato_regular" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
