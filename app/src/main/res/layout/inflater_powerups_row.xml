<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_powerup_layout_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_22"
        android:paddingRight="@dimen/dp_22">

        <ImageView
            android:id="@+id/powerups_iv_2x"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_8"
            android:src="@drawable/powerup_2x_white" />

        <ImageView
            android:id="@+id/powerups_iv_nonegs"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_28"
            android:padding="@dimen/dp_8"
            android:src="@drawable/powerup_nonegs_white" />

        <ImageView
            android:id="@+id/powerups_iv_poll"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_28"
            android:padding="@dimen/dp_8"
            android:src="@drawable/powerup_audience_poll_white" />


    </LinearLayout>

</LinearLayout>