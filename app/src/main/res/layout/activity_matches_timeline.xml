<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Heading layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dim_60"
        android:background="@drawable/toolbar_bg">

        <ImageView
            android:id="@+id/newchallenge_matches_back_btn"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center"
            android:padding="@dimen/dim_10"
            android:layout_marginLeft="@dimen/dim_6"
            android:src="@drawable/back_icon_grey" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_6">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/toolbar_heading_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/toolbar_heading_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_heading_one"
                android:text=""
                android:textColor="@color/white_60"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/toolbar_wallet_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginRight="@dimen/dim_16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white_60"
                android:textSize="@dimen/sp_14"
                app:typeface="lato_regular" />

            <ImageView
                android:id="@+id/toolbar_wallet_icon"
                android:layout_width="@dimen/dim_14"
                android:layout_height="@dimen/dim_14"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/toolbar_wallet_money"
                android:layout_marginRight="@dimen/dim_4"
                android:src="@drawable/toolbar_wallet_icon"/>

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
