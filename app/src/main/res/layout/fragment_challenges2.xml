<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="in.sportscafe.nostragamus.module.challenges.ChallengesFragment">

    <!-- Heading layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dim_80">


    </LinearLayout>

    <!-- Tabs Layout -->
    <android.support.design.widget.TabLayout
        android:id="@+id/challenge_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60"
        app:tabMode="scrollable"
        app:tabGravity="fill"/>

    <!-- ViewPager -->
    <in.sportscafe.nostragamus.module.common.CustomViewPager
        android:id="@+id/challenge_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
