<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_10">

    <RelativeLayout
        android:id="@+id/update_app_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5">

        <ImageView
            android:id="@+id/update_app_iv_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_40"
            android:onClick="onClick"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon_grey" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/update_app_btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Skip"
            android:visibility="visible"
            android:textAllCaps="true"
            android:onClick="onClick"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_16"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_13"
            app:typeface="lato_regular" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/update_app_tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Update the App !"
            android:textColor="@color/white"
            app:typeface="lato_regular"
            android:textSize="@dimen/dp_16" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/update_app_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Done"
            android:textAllCaps="true"
            android:onClick="onClick"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_16"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_13"
            app:typeface="lato_regular" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/update_app_rl_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update_app_btn"
        android:layout_below="@+id/update_app_rl">

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/update_app_cpi_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        app:ci_drawable="@drawable/ob_indicator_selected"
        app:ci_drawable_unselected="@drawable/ob_indicator_unselected"
        app:ci_gravity="center"
        app:ci_orientation="horizontal"
        app:ci_width="@dimen/dp_8"
        app:ci_height="@dimen/dp_8"
        app:ci_margin="@dimen/dp_8"/>

