        <!--android:layout_width="@dimen/dp_320"-->
        <!--android:layout_height="@dimen/dp_320"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_alignParentTop="true">-->

    <!--<com.jeeva.android.widgets.HmImageView-->
        <!--android:id="@+id/update_app_iv_image_out"-->
        <!--android:layout_width="match_parent"-->
        <!--app:defaultImage="@drawable/placeholder_icon"-->
        <!--android:layout_height="match_parent" />-->

    <!--<com.jeeva.android.widgets.HmImageView-->
        <!--android:id="@+id/update_app_iv_image_in"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--app:defaultImage="@drawable/placeholder_icon"-->
        <!--android:layout_alignBottom="@id/update_app_iv_image_out"-->
        <!--android:layout_alignTop="@id/update_app_iv_image_out"-->
        <!--android:alpha="0" />-->

    <!--</RelativeLayout>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/update_app_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </RelativeLayout>

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/update_app_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/update_app_btn_height"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/update_app_later"
        android:background="@drawable/orange_btn_bg"
        android:gravity="center"
        android:minWidth="@dimen/dp_72"
        android:onClick="onClick"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="Update the App"
        android:layout_marginBottom="@dimen/dp_8"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/update_app_text_size"
        android:visibility="visible"
        app:typeface="lato_bold" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/update_app_later"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="Update Later"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:textColor="@color/white_60"
        android:textSize="@dimen/update_later_text_size"
        app:typeface="lato_regular" />

</RelativeLayout>