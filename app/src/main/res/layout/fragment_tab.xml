<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <in.sportscafe.scgame.module.common.CustomTabLayout
        android:id="@+id/tab_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/colorMedium"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/btncolor"
        app:tabIndicatorHeight="@dimen/dp_2"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/btncolor"
        app:tabTextColor="@color/silver_chalice"
        app:unselected_typeface="lato_hairline"
        app:selected_typeface="lato_bold"
        app:unselected_textSize="@dimen/dp_12"
        app:selected_textSize="@dimen/dp_14"

        />

    <in.sportscafe.scgame.module.common.CustomViewPager
        android:id="@+id/tab_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>