<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_10"
    android:background="@color/black">

    <in.sportscafe.nostragamus.module.common.RoundImage
        android:id="@+id/approve_iv_photo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_10" />


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/approve_iv_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/dp_10"
        android:text="Reject"
        android:layout_toRightOf="@+id/approve_iv_accept"
        android:textColor="@color/textcolorlight"
        android:layout_marginLeft="@dimen/dp_5"
        android:drawableLeft="@drawable/result_cross_icon"
        android:drawablePadding="@dimen/dp_5"
        app:typeface="roboto_condensed"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/approve_iv_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/dp_10"
        android:text="Accept"
        android:layout_toRightOf="@+id/approve_tv_name"
        android:textColor="@color/textcolorlight"
        android:layout_marginLeft="@dimen/dp_10"
        android:drawableLeft="@drawable/result_tick_icon"
        android:drawablePadding="@dimen/dp_5"
        app:typeface="roboto_condensed"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/approve_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/approve_iv_photo"
        android:maxLines="1"
        android:textSize="@dimen/dp_16"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:text="deepanshi"
        app:typeface="roboto_condensed"/>


</RelativeLayout>