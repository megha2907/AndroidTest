<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/referral_history_item_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_14"
            android:orientation="vertical">

            <com.jeeva.android.widgets.HmImageView
                android:id="@+id/referral_history_user_imageView"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_14">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/referral_history_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="-"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_regular"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/referral_history_winnings_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="-"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:textColor="@color/grey6"
                android:textSize="@dimen/dp_12"
                app:typeface="lato_regular" />


            <!-- Powerups layout at bottom -->
            <LinearLayout
                android:id="@+id/powerup_bottom_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_2"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/referral_history_tv_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="You won"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/dp_12"
                        app:typeface="lato_regular" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/dp_4">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/referral_history_powerup_won_2x_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text=" 3"
                            android:textSize="@dimen/dp_12"
                            app:typeface="lato_regular" />

                        <com.jeeva.android.widgets.HmImageView
                            android:id="@+id/referral_history_powerup_won_2x"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:background="@android:color/transparent"
                            android:src="@drawable/double_powerup_small"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginTop="@dimen/dp_2"
                            android:visibility="visible"/>

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/referral_history_powerup_won_noNeg_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="1"
                            android:textSize="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_8"
                            app:typeface="lato_regular" />

                        <com.jeeva.android.widgets.HmImageView
                            android:id="@+id/referral_history_powerup_won_noNeg"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:background="@android:color/transparent"
                            android:src="@drawable/no_negative_powerup_small"
                            android:visibility="visible"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginLeft="@dimen/dp_3" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/referral_history_powerup_won_audience_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="2"
                            android:textSize="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_8"
                            app:typeface="lato_regular" />

                        <com.jeeva.android.widgets.HmImageView
                            android:id="@+id/referral_history_powerup_won_audience"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:background="@android:color/transparent"
                            android:src="@drawable/audience_poll_powerup_small"
                            android:visibility="visible"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginLeft="@dimen/dp_3"/>

                    </LinearLayout>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/referral_history_tv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=" powerups"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/dp_12"
                        app:typeface="lato_regular" />


                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/referral_history_more_details_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/referral_history_more_details_imgView"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:padding="@dimen/dp_5"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/thin_arrow_min"
                android:alpha="0.5"
                android:layout_marginTop="@dimen/dp_5"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Hidden below layout  -->
    <LinearLayout
        android:id="@+id/referral_history_item_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_separator"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/referral_history_order_id_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="@color/grey5"
                android:textSize="@dimen/sp_10"
                android:maxLines="1"
                app:typeface="lato_regular"
                android:ellipsize="end"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_separator_two" />

</LinearLayout>
