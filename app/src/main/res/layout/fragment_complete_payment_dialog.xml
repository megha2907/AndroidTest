<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_40">

    <android.support.v7.widget.CardView
        android:id="@+id/popup_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_15"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_303030"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_56"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/join_challenge_dialog_header_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_20"
                    android:layout_marginRight="@dimen/dim_20"
                    android:text="Complete Payment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center"
                    android:layout_gravity="center"
                    app:typeface="lato_bold" />

            </LinearLayout>

            <!-- Image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim_100"
                    android:layout_height="@dimen/dim_100"
                    android:src="@drawable/wallet_join_challenge_icn" />

            </LinearLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:orientation="vertical">

                <!-- Balance Layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dim_56"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_12"
                    android:layout_marginRight="@dimen/dim_12">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/complete_payment_tv_wallet_balance_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Wallet Balance"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/complete_payment_tv_wallet_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/linecolor"
                    android:visibility="gone"/>

                <!-- Contest fee layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dim_56"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_12"
                    android:layout_marginRight="@dimen/dim_12">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/complete_payment_tv_entry_fee_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Contest Entry Fee"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/complete_payment_tv_entry_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/linecolor" />

                <!-- Messages layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/join_challenge_dialog_money_added_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_dim"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_regular"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dim_12"/>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/join_challenge_dialog_msg_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_dim"
                        android:textSize="@dimen/sp_13"
                        android:gravity="center"
                        app:typeface="lato_regular"
                        android:layout_marginTop="@dimen/dim_12"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dim_20"
                android:layout_marginTop="@dimen/dim_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_20"
                    android:layout_marginRight="@dimen/dim_20">

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/complete_payment_btn"
                        android:layout_width="@dimen/dim_132"
                        android:layout_height="@dimen/dim_40"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dim_10"
                        android:background="@drawable/green_button_selector"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dim_3"
                        android:paddingTop="@dimen/dp_0"
                        android:text="Join"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/complete_payment_btn_back"
                        android:layout_width="@dimen/dim_132"
                        android:layout_height="@dimen/dim_40"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/grey_button_selector"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dim_3"
                        android:paddingTop="@dimen/dp_0"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_regular" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/popup_cross_btn"
        android:layout_width="@dimen/dim_32"
        android:layout_height="@dimen/dim_32"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/popup_card"
        android:layout_marginTop="@dimen/dim_38"
        android:elevation="@dimen/dp_4"
        android:padding="@dimen/dp_5"
        android:src="@drawable/popup_cross_icon"
        android:visibility="visible" />

</RelativeLayout>