<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/code_gray_1a"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@color/chathams_blue"
                android:gravity="center"
                android:orientation="horizontal">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/join_challenge_dialog_header_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="Complete Payment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_bold" />

            </LinearLayout>

            <!-- Image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/paytm_tr_blue_wallet" />

            </LinearLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="vertical">

                <!-- Balance Layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_60"
                    android:gravity="center_vertical">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/complete_payment_tv_wallet_balance_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Balance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_13"
                        app:typeface="lato_bold" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/complete_payment_tv_wallet_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14"
                        app:typeface="lato_bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/linecolor" />

                <!-- Contest fee layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_60"
                    android:gravity="center_vertical">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/complete_payment_tv_entry_fee_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Contest Entry Fee"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_13"
                        app:typeface="lato_bold" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/complete_payment_tv_entry_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14"
                        app:typeface="lato_bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/linecolor" />

                <!-- Messages layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:gravity="center_horizontal">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/join_challenge_dialog_money_added_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_dim"
                        android:textSize="@dimen/dp_13"
                        app:typeface="lato_regular"
                        android:visibility="gone"/>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/join_challenge_dialog_msg_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_dim"
                        android:textSize="@dimen/dp_13"
                        app:typeface="lato_regular"
                        android:layout_marginTop="@dimen/dp_16"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20">

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/complete_payment_btn_pay_join"
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/tournament_ready_btn_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_3"
                        android:paddingTop="@dimen/dp_0"
                        android:text="Join Contest"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/complete_payment_btn_back"
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/btn_not_played_shadow_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_3"
                        android:paddingTop="@dimen/dp_0"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14"
                        app:typeface="lato_regular" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/popup_cross_btn"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_7"
        android:elevation="@dimen/dp_4"
        android:padding="@dimen/dp_5"
        android:src="@drawable/popup_cross_icon"
        android:visibility="invisible" />

</RelativeLayout>