<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_margin="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        >

        <Button
            android:id="@+id/challenges_tournaments_row_cup_icon"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:background="@drawable/tournament_cup_icon"
            android:textColor="@color/white"/>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/challenges_tournaments_row_tv_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IPL 2016"
            android:textColor="@color/silver_chalice"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            app:typeface="lato_bold"/>

        <ImageView
            android:id="@+id/challenges_tournaments_row_rank_status"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/status_arrow_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            />

        <TextView
            android:id="@+id/challenges_tournaments_row_overall_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="1st"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/silver_chalice"/>

    </LinearLayout>


</LinearLayout>