<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dim_7"
        android:layout_marginRight="@dimen/dim_7"
        android:layout_marginTop="@dimen/dim_7"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dim_7"
        android:paddingLeft="@dimen/dim_5"
        android:paddingRight="@dimen/dim_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_110"
            android:background="@drawable/dark_grey_gradient_bg"
            android:elevation="@dimen/dim_4"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dim_16"
            android:paddingRight="@dimen/dim_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_10">

                <ImageView
                    android:id="@+id/featured_contest_imgView"
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_42"
                    android:layout_marginRight="@dimen/dim_4"
                    android:src="@drawable/featured_contest_icon"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dim_6"
                    android:paddingTop="@dimen/dim_12">

                    <!-- First row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/challenge_name_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingRight="@dimen/dim_16"
                                android:text=""
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_13.5"
                                app:typeface="lato_regular" />

                            <ImageView
                                android:id="@+id/no_extra_powerup_imgView"
                                android:layout_width="@dimen/dim_12"
                                android:layout_height="@dimen/dim_12"
                                android:layout_alignRight="@id/challenge_name_textView"
                                android:layout_marginTop="@dimen/dim_5"
                                android:src="@drawable/powerup_bank_disabled"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <!-- Add sports identification icon -->
                        <LinearLayout
                            android:id="@+id/challenge_sports_icons_container"
                            android:layout_width="@dimen/dim_56"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end|bottom"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/dim_2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- tournament/newChallengesResponse details -->
                        <LinearLayout
                            android:id="@+id/challenge_tournaments_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="horizontal" />

                        <!-- newChallengesResponse date  -->
                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/challenge_date_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_9.5"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- card bottom details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_16"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_16">

                <!--Prizes -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/dim_100"
                    android:orientation="vertical">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRIZES"
                        android:textColor="@color/grey_999999"
                        android:textSize="@dimen/sp_10"
                        app:typeface="lato_regular" />

                    <!-- start time  -->
                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/challenge_prizes_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_2"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/paid_entry_tv_color"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_bold" />

                </LinearLayout>

                <!-- Games left-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:minWidth="@dimen/dim_100"
                    android:orientation="vertical">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GAMES"
                        android:textColor="@color/grey_999999"
                        android:textSize="@dimen/sp_10"
                        app:typeface="lato_regular" />

                    <!-- start time  -->
                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/challenge_game_left_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_2"
                        android:text="0"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- start time -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STARTS IN"
                            android:textColor="@color/grey_999999"
                            android:textSize="@dimen/sp_10"
                            app:typeface="lato_regular" />

                        <!-- start time  -->
                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/challenge_start_time_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dim_2"
                            android:text="0:0:0"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            app:typeface="lato_bold" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>