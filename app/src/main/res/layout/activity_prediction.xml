<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.80"
        android:background="@color/black" />

    <android.support.v7.widget.CardView
        android:id="@+id/prediction_cv_bg_0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_320"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_2">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/play_options_bg" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/prediction_cv_bg_0"
        android:layout_alignRight="@id/prediction_cv_bg_0"
        android:layout_alignTop="@id/prediction_cv_bg_0">

        <android.support.v7.widget.CardView
            android:id="@+id/prediction_cv_bg_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_320"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="visible"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="@dimen/dp_4">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/play_options_bg" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/prediction_cv_bg_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_320"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="@dimen/dp_5">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/play_options_bg" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <in.sportscafe.nostragamus.module.play.tindercard.SwipeFlingAdapterView
        android:id="@+id/activity_prediction_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/play_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:alpha="0.1"
        android:background="@color/colorMedium" />

    <RelativeLayout
        android:id="@+id/prediction_rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:alpha="0.7"
        android:background="@color/colorMedium">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.04"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/prediction_ibtn_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClick"
            android:src="@drawable/back_icon_grey" />

        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/prediction_iv_tournament_photo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/prediction_ibtn_back"
            android:adjustViewBounds="true"
            android:src="@drawable/wimbledown" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_toRightOf="@+id/prediction_iv_tournament_photo">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/prediction_tv_tournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:text="TT TEST TOURNAMENT"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                app:typeface="roboto_condensed_bold" />


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/prediction_tv_tournament_match_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prediction_tv_tournament"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:alpha="0.7"
                android:text="TT match"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                app:typeface="roboto_condensed" />
        </RelativeLayout>


    </RelativeLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_number_of_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/prediction_cv_bg_0"
        android:layout_alignLeft="@id/prediction_cv_bg_0"
        android:paddingBottom="@dimen/dp_10"
        android:text="1/5"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:typeface="roboto_condensed" />

    <ImageView
        android:id="@+id/prediction_btn_shuffle"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_above="@id/prediction_cv_bg_0"
        android:layout_alignRight="@id/prediction_cv_bg_0"
        android:clickable="true"
        android:onClick="onClick"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:scaleType="fitEnd"
        android:src="@drawable/shuffle" />

    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fab_fl_nonegs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fab_fl_audience_poll"
            android:visibility="invisible">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_nonegs"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:scaleType="center"
                android:src="@drawable/powerup_nonegs"
                app:backgroundTint="@color/colorMedium"
                app:elevation="@dimen/dp_0" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/powerup_nonegs_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@drawable/notification_count_bg"
                android:elevation="@dimen/dp_6"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingRight="@dimen/dp_1"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="roboto_light" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fab_fl_audience_poll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fab_fl_2x"
            android:visibility="invisible">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_audience_poll"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_below="@+id/fab_2x"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/dp_18"
                android:scaleType="center"
                android:src="@drawable/powerup_audience_poll"
                app:backgroundTint="@color/colorMedium"
                app:elevation="@dimen/dp_0" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/powerup_audience_poll_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@drawable/notification_count_bg"
                android:elevation="@dimen/dp_6"
                android:gravity="center"
                android:paddingRight="@dimen/dp_1"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="roboto_light" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fab_fl_2x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fab_main"
            android:visibility="invisible">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_2x"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_below="@+id/fab_main"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/dp_18"
                android:scaleType="center"
                android:src="@drawable/powerup_icon"
                app:backgroundTint="@color/colorMedium"
                app:borderWidth="0dp"
                app:elevation="@dimen/dp_0" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/powerup_2x_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@drawable/notification_count_bg"
                android:elevation="@dimen/dp_6"
                android:gravity="center"
                android:paddingRight="@dimen/dp_1"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="roboto_light" />

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_main"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_14"
            android:clipToPadding="false"
            android:scaleType="center"
            android:src="@drawable/powerup_main_icon_white"
            app:backgroundTint="@color/blackopacity"
            app:borderWidth="@dimen/dp_0"
            app:elevation="@dimen/dp_0" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/prediction_cv_bg_0"
        android:layout_alignRight="@id/prediction_cv_bg_0"
        android:layout_below="@id/prediction_cv_bg_1">

        <LinearLayout
            android:id="@+id/prediction_ll_neither"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/prediction_btn_neither"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onClick"
                android:padding="@dimen/dp_2"
                android:text="NEITHER"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_13"
                app:typeface="roboto_condensed" />

            <ImageView
                android:id="@+id/downnarrow"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:alpha="0.8"
                android:src="@drawable/neither_icon" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_above="@id/prediction_ll_neither"
            android:alpha="0.9"
            android:background="@drawable/left_option_arrow" />

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_above="@id/prediction_ll_neither"
            android:layout_alignParentRight="true"
            android:alpha="0.9"
            android:src="@drawable/right_option_arrow" />

    </RelativeLayout>

</RelativeLayout>