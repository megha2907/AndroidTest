<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_play_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.95"
        android:background="@color/black" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0" />

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/prediction_rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:orientation="horizontal"
        android:background="#252525">

        <!-- Contestant details on header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/prediction_contest_name_left_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginLeft="@dimen/dp_25"
                android:ellipsize="end"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12"
                app:typeface="roboto_condensed_bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6">

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/prediction_contest_left_imageView"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:scaleType="fitXY"/>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/prediction_contest_vs_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_6"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    android:text="vs"
                    app:typeface="roboto_condensed" />

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/prediction_contest_right_imageView"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/prediction_contest_name_right_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginRight="@dimen/dp_25"
                android:ellipsize="end"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12"
                app:typeface="roboto_condensed_bold" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/prediction_ibtn_back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClick"
            android:src="@drawable/back_icon_grey"
            android:layout_alignParentLeft="true"/>

        <!--<com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/prediction_tv_contest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Learn to play!"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="roboto_condensed" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/prediction_tv_match_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            android:layout_below="@+id/prediction_tv_contest_name"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_14"
            app:typeface="lato_light" />-->

    </RelativeLayout>

    <!-- Main layout -->
    <RelativeLayout
        android:id="@+id/prediction_rl_play_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/prediction_rl_header">

        <!-- margin (dynamic) from header to card / action buttons -->
        <RelativeLayout
            android:id="@+id/action_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <!-- Share -->
            <LinearLayout
                android:id="@+id/prediction_share_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_26"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shuffle_bg"
                android:paddingRight="@dimen/dp_5">

                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:textColor="@color/white"
                    android:padding="@dimen/dp_7"
                    android:src="@drawable/play_share_icn"
                    android:background="@drawable/round_button_bg"/>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular"
                    android:text="Ask Friend"
                    android:padding="@dimen/dp_3"
                    android:drawablePadding="@dimen/dp_5"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:src="@drawable/right_arrow_feedicon"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <!-- Shuffle - Next card  -->
            <LinearLayout
                android:id="@+id/prediction_iv_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_26"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_alignParentRight="true"
                android:background="@drawable/shuffle_bg"
                android:paddingRight="@dimen/dp_5">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/card_number_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular"
                    android:padding="@dimen/dp_5"
                    android:text="1/5"
                    android:background="@drawable/round_button_bg"/>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/card_number_text_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    android:padding="@dimen/dp_3"
                    app:typeface="lato_regular"
                    android:text="Next Card"
                    android:drawablePadding="@dimen/dp_5"/>

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:src="@drawable/right_arrow_feedicon"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- Main visible card -->
        <android.support.v7.widget.CardView
            android:id="@+id/prediction_cv_bg_0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_320"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="@dimen/dp_2">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/play_options_bg" />
        </android.support.v7.widget.CardView>

        <!-- Background card (visible as bottom array behind main-card) -->
        <RelativeLayout
            android:id="@+id/prediction_cv_bg_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/prediction_cv_bg_0"
            android:layout_alignRight="@id/prediction_cv_bg_0"
            android:layout_alignTop="@id/prediction_cv_bg_0">

            <android.support.v7.widget.CardView
                android:id="@+id/prediction_cv_bg_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_320"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_18"
                android:visibility="invisible"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_4">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play_options_bg" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/prediction_cv_bg_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_320"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:visibility="invisible"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_5">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play_options_bg" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <!--<include layout="@layout/inflater_swipe_card_row" />-->

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/prediction_share_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/btn_not_played_shadow_bg"
            app:typeface="roboto_condensed" />

        <!-- bottom -->
        <RelativeLayout
            android:id="@+id/prediction_rl_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:layout_alignParentBottom="true"
                android:background="@drawable/powerup_half_circle_bg" />

            <RelativeLayout
                android:id="@+id/prediction_ll_powerup_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_65"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_22">

                <ImageView
                    android:id="@+id/powerups_iv_2x_global"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_26"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_2x_white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/powerups_iv_2x"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_toRightOf="@id/powerups_iv_2x_global"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_2x_white" />

                <ImageView
                    android:id="@+id/powerups_iv_nonegs"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_toRightOf="@id/powerups_iv_2x"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_nonegs_white" />

                <ImageView
                    android:id="@+id/powerups_iv_poll"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_22"
                    android:layout_toRightOf="@id/powerups_iv_nonegs"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_audience_poll_white" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_2x_global_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_2x_global"
                    android:layout_alignTop="@id/powerups_iv_2x_global"
                    android:layout_marginRight="@dimen/_dp_7"
                    android:layout_marginTop="@dimen/_dp_7"
                    android:alpha="0.8"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_8"
                    android:visibility="gone"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_2x_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_2x"
                    android:layout_alignTop="@id/powerups_iv_2x"
                    android:layout_marginRight="@dimen/_dp_2"
                    android:alpha="0.8"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_8"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_nonegs_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_nonegs"
                    android:layout_alignTop="@id/powerups_iv_nonegs"
                    android:layout_marginRight="@dimen/_dp_2"
                    android:alpha="0.8"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_8"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_poll_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_poll"
                    android:layout_alignTop="@id/powerups_iv_poll"
                    android:layout_marginRight="@dimen/_dp_2"
                    android:alpha="0.8"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_8"
                    app:typeface="lato_regular" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/powerups_iv_info"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_toRightOf="@id/prediction_ll_powerup_layout"
                android:onClick="onClick"
                android:padding="@dimen/dp_7"
                android:src="@drawable/popup_help_icon" />

            <ImageView
                android:id="@+id/powerups_iv_bank"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_toLeftOf="@id/prediction_ll_powerup_layout"
                android:onClick="onClick"
                android:padding="@dimen/dp_8"
                android:src="@drawable/bank_transfer_info_icon" />

            <!-- Neither button layout -->
            <RelativeLayout
                android:id="@+id/neither_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/prediction_ll_powerup_layout"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5">

                <!-- button -->
                <LinearLayout
                    android:id="@+id/prediction_ll_neither"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:minWidth="@dimen/dp_90"
                    android:background="@drawable/shape_neither_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/neither_icn"
                        />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/prediction_tv_neither_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="@string/neither"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_12"
                        android:visibility="visible"
                        app:typeface="lato_regular" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/prediction_iv_left_arrow"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_alignBottom="@id/neither_btn_layout"
                android:layout_alignTop="@id/neither_btn_layout"
                android:layout_toLeftOf="@id/neither_btn_layout"
                android:background="@drawable/shape_neither_bg"
                android:onClick="onClick"
                android:padding="@dimen/dp_10"
                android:src="@drawable/left_option_arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/prediction_iv_right_arrow"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_alignBottom="@id/neither_btn_layout"
                android:layout_alignTop="@id/neither_btn_layout"
                android:layout_toRightOf="@id/neither_btn_layout"
                android:background="@drawable/shape_neither_bg"
                android:onClick="onClick"
                android:padding="@dimen/dp_10"
                android:src="@drawable/right_option_arrow"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/prediction_rl_powerup_hints"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:visibility="gone">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/prediction_tv_nonegs_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_32"
                    android:text="No Negative"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/prediction_tv_nonegs_hint"
                    android:text="2X Bonus"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/prediction_tv_nonegs_hint"
                    android:text="Poll"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <in.sportscafe.nostragamus.module.play.tindercard.SwipeFlingAdapterView
        android:id="@+id/activity_prediction_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5" />

    <ImageView
        android:id="@+id/prediction_iv_dummy_left_right_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/dp_2"
        android:src="@drawable/left_right_swipe_indicator"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/prediction_iv_dummy_neither_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/dp_2"
        android:src="@drawable/neither_swipe_indicator"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/prediction_fl_dummy_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/prediction_rl_header" />

</RelativeLayout>