<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!--<RelativeLayout-->
        <!--android:id="@+id/rl_powerup"-->
        <!--android:layout_width="@dimen/dp_100"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:clickable="true"-->
        <!--android:focusable="true"-->
        <!--android:focusableInTouchMode="true"-->
       <!--&gt;-->

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/swipe_card_question_value"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:text="2X"
        android:textSize="@dimen/dp_16"
        android:src="@drawable/ic_launcher"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/powerup_name_bg"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/black"
        app:typeface="lato_bold"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/powerup_imageButton"
        android:background="@android:color/transparent"
        android:src="@drawable/powerup_icon"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_alignParentRight="true"

        />

    <!--</RelativeLayout>-->

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/swipe_card_tv_powerup_count"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:gravity="center"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/white"
        android:background="@drawable/powerups_count_bg"
        app:typeface="roboto_light"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"

        />


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:text="IPL"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/white"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_contest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/prediction_tv_tournament"
        android:text="Hello"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/prediction_btn_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onClick"
        android:text="Pass"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_5"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="No use to pass the last question!"
        android:textColor="@color/white"
        android:visibility="invisible"/>

    <in.sportscafe.scgame.module.play.tindercard.SwipeFlingAdapterView
        android:id="@+id/activity_prediction_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftarrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_25"
        android:src="@drawable/left_arrow_icon"
        android:background="@android:color/transparent"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightarrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_25"
        android:src="@drawable/right_arrow_icon"
        android:background="@android:color/transparent"/>

</RelativeLayout>