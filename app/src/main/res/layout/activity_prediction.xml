<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play_screen_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.92"
        />


    <in.sportscafe.nostragamus.module.play.tindercard.SwipeFlingAdapterView
        android:id="@+id/activity_prediction_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/play_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/colorMedium"
        android:alpha="0.7"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/swipe_card_question_value"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_22"
                android:background="@drawable/powerup_icon"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />


            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/swipe_card_tv_powerup_count"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:gravity="center"
                android:textSize="@dimen/dp_11"
                android:textColor="@color/white"
                android:background="@drawable/notification_count_bg"
                app:typeface="roboto_light"
                android:layout_marginTop="@dimen/dp_44"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:visibility="gone"

                />

            <com.jeeva.android.widgets.HmImageView
                android:id="@+id/prediction_iv_tournament_photo"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:src="@drawable/wimbledown"
                android:layout_marginLeft="@dimen/dp_16"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/prediction_iv_tournament_photo"
                android:layout_toLeftOf="@+id/swipe_card_question_value"
                android:layout_centerVertical="true">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/prediction_tv_tournament"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textSize="@dimen/dp_16"
                    app:typeface="roboto_condensed_bold"
                    android:textColor="@color/white"
                    android:text="TT TEST TOURNAMENT"
                    />


                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/prediction_tv_tournament_match_stage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textSize="@dimen/dp_16"
                    android:textColor="@color/white"
                    app:typeface="roboto_condensed"
                    android:alpha="0.7"
                    android:text="TT match"
                    android:layout_below="@+id/prediction_tv_tournament"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.04"
                />



        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/downnarrow"
        android:layout_marginBottom="@dimen/dp_18"
        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:id="@+id/schedule_row_btn_vs"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/swipe_card_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/left_arrow_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerInParent="true"
            />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/swipe_card_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/white"
            android:gravity="left"
            app:typeface="lato_black"
            android:alpha="0.7"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/swipe_card_iv_left"
            android:layout_toLeftOf="@id/schedule_row_btn_vs"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:clickable="true"
            android:padding="@dimen/dp_10"
            />

        <ImageView
            android:id="@+id/swipe_card_iv_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_45"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/swipe_card_iv_right_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_play"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/swipe_card_iv_right_arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerInParent="true"
            />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/swipe_card_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/schedule_row_btn_vs"
            android:layout_toLeftOf="@id/swipe_card_iv_right_arrow3"
            app:typeface="lato_black"
            android:gravity="right"
            android:alpha="0.7"
            android:textSize="@dimen/dp_14"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:clickable="true"
            android:padding="@dimen/dp_10"
            />


    </RelativeLayout>


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_contest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/play_toolbar"
        android:textSize="@dimen/dp_16"
        app:typeface="roboto_condensed"
        android:textColor="@color/white"
        android:alpha="0.7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_number_of_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_below="@id/prediction_tv_contest_name"
        android:textSize="@dimen/dp_16"
        app:typeface="roboto_condensed"
        android:textColor="@color/white"
        android:alpha="0.7"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downnarrow"
        android:layout_centerHorizontal="true"
        android:src="@drawable/down_arrow_icon"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_btn_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onClick"
        android:text="Shuffle"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_14"
        android:alpha="0.5"
        android:textColor="@color/white"
        android:layout_above="@+id/downnarrow"
        android:clickable="true"
        app:typeface="roboto_condensed"
        android:padding="@dimen/dp_10"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="Last question!"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fab_fl_audience_poll"
        android:layout_alignParentRight="true"
        >

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/powerup_nonegs_count"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:textSize="@dimen/dp_8"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:background="@drawable/notification_count_bg"
            app:typeface="roboto_light"
            android:elevation="6dp"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_gravity="right"
            android:text="10"
            android:onClick="onClick"
            android:paddingTop="@dimen/dp_2"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_nonegs"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_gravity="bottom|end"
            android:visibility="invisible"
            app:backgroundTint="@color/colorMedium"
            app:elevation="0dp"
            android:src="@drawable/powerup_nonegs"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_18"
            android:scaleType="center"
           />


    </FrameLayout>


    <FrameLayout
        android:id="@+id/fab_fl_audience_poll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fab_fl_2x"
        android:layout_alignParentRight="true"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_audience_poll"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/dp_18"
            android:visibility="invisible"
            app:backgroundTint="@color/colorMedium"
            android:layout_alignParentRight="true"
            app:elevation="0dp"
            android:layout_below="@+id/fab_2x"
            android:src="@drawable/powerup_audience_poll"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="center"
          />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/powerup_audience_poll_count"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:textSize="@dimen/dp_8"
            android:textColor="@color/white"
            android:background="@drawable/notification_count_bg"
            app:typeface="roboto_light"
            android:elevation="6dp"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_gravity="right"
            android:text="10"
            android:visibility="invisible"
            android:paddingTop="@dimen/dp_2"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fab_fl_2x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fab_fl_main"
        android:layout_alignParentRight="true"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_2x"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fab_main"
            android:visibility="invisible"
            app:elevation="0dp"
            app:backgroundTint="@color/colorMedium"
            android:src="@drawable/powerup_icon"
            android:scaleType="center"
            />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/powerup_2x_count"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:textSize="@dimen/dp_8"
            android:textColor="@color/white"
            android:background="@drawable/notification_count_bg"
            app:typeface="roboto_light"
            android:elevation="6dp"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_gravity="right"
            android:paddingTop="@dimen/dp_2"
            android:text="10"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fab_fl_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_alignParentRight="true"
        >

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/blackopacity"
        app:elevation="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_centerVertical="true"
        android:src="@drawable/powerup_main_icon_white"
        android:scaleType="center"
        />

    </FrameLayout>




</RelativeLayout>