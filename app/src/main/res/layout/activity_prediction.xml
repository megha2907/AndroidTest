<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/swipe_card_question_value"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_40"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:text="2X"
        android:textSize="@dimen/dp_18"
        android:src="@drawable/ic_launcher"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@color/powerup_color"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/white"
        app:typeface="roboto_condensed"/>

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/swipe_card_tv_powerup_count"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:gravity="center"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/white"
        android:background="@drawable/powerups_count_bg"
        app:typeface="roboto_light"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"

        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:text="IPL"
        android:textSize="@dimen/dp_20"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_contest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/prediction_tv_tournament"
        android:text="Hello"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/prediction_btn_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onClick"
        android:text="Pass"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_20" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="No use to pass the last question!"
        android:visibility="invisible"/>

    <in.sportscafe.scgame.module.play.tindercard.SwipeFlingAdapterView
        android:id="@+id/activity_prediction_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5" />

</RelativeLayout>