<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/black" />

    <android.support.v7.widget.CardView
        android:id="@+id/prediction_cv_bg_0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_320"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_2">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/play_options_bg" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/prediction_cv_bg_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/prediction_cv_bg_0"
        android:layout_alignRight="@id/prediction_cv_bg_0"
        android:layout_alignTop="@id/prediction_cv_bg_0">

        <android.support.v7.widget.CardView
            android:id="@+id/prediction_cv_bg_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_320"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="@dimen/dp_4">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/play_options_bg" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/prediction_cv_bg_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_320"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="@dimen/dp_5">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/play_options_bg" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <in.sportscafe.nostragamus.module.play.tindercard.SwipeFlingAdapterView
        android:id="@+id/activity_prediction_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/play_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:alpha="0.1"
        android:background="@color/colorMedium" />

    <RelativeLayout
        android:id="@+id/prediction_rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:alpha="0.7"
        android:background="@color/colorMedium">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.04"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/prediction_ibtn_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClick"
            android:src="@drawable/back_icon_grey" />

        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/prediction_iv_tournament_photo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/prediction_ibtn_back"
            android:adjustViewBounds="true"
            android:src="@drawable/wimbledown" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_toRightOf="@+id/prediction_iv_tournament_photo">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/prediction_tv_tournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:text="WELCOME GAME"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                app:typeface="roboto_condensed_bold" />


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/prediction_tv_tournament_match_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prediction_tv_tournament"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:alpha="0.7"
                android:text="Learn to play!"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                app:typeface="roboto_condensed" />
        </RelativeLayout>


    </RelativeLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_number_of_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/prediction_cv_bg_0"
        android:layout_alignLeft="@id/prediction_cv_bg_0"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:typeface="roboto_condensed" />

    <ImageView
        android:id="@+id/prediction_btn_shuffle"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_above="@id/prediction_cv_bg_0"
        android:layout_alignRight="@id/prediction_cv_bg_0"
        android:clickable="true"
        android:onClick="onClick"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:scaleType="fitEnd"
        android:src="@drawable/shuffle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/prediction_cv_bg_0"
        android:layout_alignRight="@id/prediction_cv_bg_0"
        android:layout_below="@id/prediction_cv_bg_rl">

        <RelativeLayout
            android:id="@+id/prediction_ll_powerup_layout"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@drawable/shape_powerup_layout_bg" />

            <ImageView
                android:id="@+id/powerups_iv_2x"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_22"
                android:onClick="onClick"
                android:padding="@dimen/dp_8"
                android:src="@drawable/powerup_2x_white" />

            <ImageView
                android:id="@+id/powerups_iv_nonegs"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                android:layout_toRightOf="@id/powerups_iv_2x"
                android:onClick="onClick"
                android:padding="@dimen/dp_8"
                android:src="@drawable/powerup_nonegs_white" />

            <ImageView
                android:id="@+id/powerups_iv_poll"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_toRightOf="@id/powerups_iv_nonegs"
                android:onClick="onClick"
                android:padding="@dimen/dp_8"
                android:src="@drawable/powerup_audience_poll_white" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/powerup_tv_2x_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignRight="@id/powerups_iv_2x"
                android:layout_alignTop="@id/powerups_iv_2x"
                android:layout_marginRight="@dimen/_dp_7"
                android:layout_marginTop="@dimen/_dp_7"
                android:background="@drawable/powerup_count_bg"
                android:gravity="center"
                android:alpha="0.8"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/powerup_tv_nonegs_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignRight="@id/powerups_iv_nonegs"
                android:layout_alignTop="@id/powerups_iv_nonegs"
                android:layout_marginRight="@dimen/_dp_7"
                android:layout_marginTop="@dimen/_dp_7"
                android:background="@drawable/powerup_count_bg"
                android:gravity="center"
                android:alpha="0.8"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/powerup_tv_poll_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignRight="@id/powerups_iv_poll"
                android:layout_alignTop="@id/powerups_iv_poll"
                android:layout_marginRight="@dimen/_dp_7"
                android:layout_marginTop="@dimen/_dp_7"
                android:background="@drawable/powerup_count_bg"
                android:gravity="center"
                android:alpha="0.8"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="lato_regular" />


        </RelativeLayout>

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/prediction_btn_neither"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_above="@id/prediction_ll_powerup_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_neither_bg"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="@string/neither"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13"
            app:typeface="lato_bold"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/prediction_iv_left_arrow"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignBottom="@id/prediction_btn_neither"
            android:layout_alignTop="@id/prediction_btn_neither"
            android:layout_toLeftOf="@id/prediction_btn_neither"
            android:background="@drawable/shape_neither_bg"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/prediction_iv_right_arrow"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignBottom="@id/prediction_btn_neither"
            android:layout_alignTop="@id/prediction_btn_neither"
            android:layout_toRightOf="@id/prediction_btn_neither"
            android:background="@drawable/shape_neither_bg"
            android:onClick="onClick" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/prediction_fl_dummy_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/prediction_rl_header"/>

</RelativeLayout>