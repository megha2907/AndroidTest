<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:text="IPL"
        android:textSize="@dimen/dp_20"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_contest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/prediction_tv_tournament"
        android:text="Hello"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/prediction_btn_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onClick"
        android:text="Pass"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_20" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="No use to pass the last question!"
        android:visibility="invisible"/>

    <in.sportscafe.scgame.module.play.tindercard.SwipeFlingAdapterView
        android:id="@+id/activity_prediction_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5" />

</RelativeLayout>