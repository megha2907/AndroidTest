<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_play_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.95"
        android:background="@color/black" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0" />

    <RelativeLayout
        android:id="@+id/prediction_rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65">

        <ImageButton
            android:id="@+id/prediction_ibtn_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClick"
            android:src="@drawable/back_icon_grey" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/prediction_tv_contest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Learn to play!"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="roboto_condensed" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/prediction_tv_match_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            android:layout_below="@+id/prediction_tv_contest_name"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_14"
            app:typeface="lato_light" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/prediction_tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:text="Skip"
            android:textColor="@color/white_70"
            android:textSize="@dimen/dp_16"
            android:visibility="gone"
            app:typeface="roboto_condensed" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/prediction_rl_play_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/prediction_rl_header">

        <android.support.v7.widget.CardView
            android:id="@+id/prediction_cv_bg_0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_320"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="@dimen/dp_2">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/play_options_bg" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/prediction_cv_bg_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/prediction_cv_bg_0"
            android:layout_alignRight="@id/prediction_cv_bg_0"
            android:layout_alignTop="@id/prediction_cv_bg_0">

            <android.support.v7.widget.CardView
                android:id="@+id/prediction_cv_bg_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_320"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_24"
                android:visibility="invisible"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_4">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play_options_bg" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/prediction_cv_bg_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_320"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:visibility="invisible"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_5">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play_options_bg" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <!--<include layout="@layout/inflater_swipe_card_row" />-->

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/prediction_iv_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/prediction_cv_bg_0"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="roboto_condensed"
            android:text="Skip"
            android:visibility="invisible"/>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/prediction_tv_number_of_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/prediction_cv_bg_0"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="roboto_condensed" />

        <RelativeLayout
            android:id="@+id/prediction_rl_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:layout_alignParentBottom="true"
                android:background="@drawable/powerup_half_circle_bg" />

            <RelativeLayout
                android:id="@+id/prediction_ll_powerup_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_65"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_22">

                <ImageView
                    android:id="@+id/powerups_iv_2x_global"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_26"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_2x_white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/powerups_iv_2x"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_toRightOf="@id/powerups_iv_2x_global"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_2x_white" />

                <ImageView
                    android:id="@+id/powerups_iv_nonegs"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_toRightOf="@id/powerups_iv_2x"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_nonegs_white" />

                <ImageView
                    android:id="@+id/powerups_iv_poll"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_22"
                    android:layout_toRightOf="@id/powerups_iv_nonegs"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/powerup_audience_poll_white" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_2x_global_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_2x_global"
                    android:layout_alignTop="@id/powerups_iv_2x_global"
                    android:layout_marginRight="@dimen/_dp_7"
                    android:layout_marginTop="@dimen/_dp_7"
                    android:alpha="0.8"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_8"
                    android:visibility="gone"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_2x_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_2x"
                    android:layout_alignTop="@id/powerups_iv_2x"
                    android:layout_marginRight="@dimen/_dp_2"
                    android:alpha="0.8"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_8"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_nonegs_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_nonegs"
                    android:layout_alignTop="@id/powerups_iv_nonegs"
                    android:layout_marginRight="@dimen/_dp_2"
                    android:alpha="0.8"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_8"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_poll_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_poll"
                    android:layout_alignTop="@id/powerups_iv_poll"
                    android:layout_marginRight="@dimen/_dp_2"
                    android:alpha="0.8"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_8"
                    app:typeface="lato_regular" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/powerups_iv_info"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_toRightOf="@id/prediction_ll_powerup_layout"
                android:onClick="onClick"
                android:padding="@dimen/dp_8"
                android:src="@drawable/popup_help_icon" />

            <ImageView
                android:id="@+id/powerups_iv_bank"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_toLeftOf="@id/prediction_ll_powerup_layout"
                android:onClick="onClick"
                android:padding="@dimen/dp_8"
                android:src="@drawable/bank_transfer_info_icon" />



            <LinearLayout
                android:id="@+id/prediction_ll_neither"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:layout_above="@id/prediction_ll_powerup_layout"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:minWidth="@dimen/dp_90"
                android:background="@drawable/shape_neither_bg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/neither_icon" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/prediction_tv_neither_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="@string/neither"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    android:visibility="visible"
                    app:typeface="lato_regular" />

            </LinearLayout>

            <ImageView
                android:id="@+id/prediction_iv_left_arrow"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_alignBottom="@id/prediction_ll_neither"
                android:layout_alignTop="@id/prediction_ll_neither"
                android:layout_toLeftOf="@id/prediction_ll_neither"
                android:background="@drawable/shape_neither_bg"
                android:onClick="onClick"
                android:padding="@dimen/dp_10"
                android:src="@drawable/left_option_arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/prediction_iv_right_arrow"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_alignBottom="@id/prediction_ll_neither"
                android:layout_alignTop="@id/prediction_ll_neither"
                android:layout_toRightOf="@id/prediction_ll_neither"
                android:background="@drawable/shape_neither_bg"
                android:onClick="onClick"
                android:padding="@dimen/dp_10"
                android:src="@drawable/right_option_arrow"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/prediction_rl_powerup_hints"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:visibility="gone">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/prediction_tv_nonegs_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_32"
                    android:text="No Negative"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/prediction_tv_nonegs_hint"
                    android:text="2X Bonus"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/prediction_tv_nonegs_hint"
                    android:text="Poll"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />


            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <in.sportscafe.nostragamus.module.play.tindercard.SwipeFlingAdapterView
        android:id="@+id/activity_prediction_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5" />

    <ImageView
        android:id="@+id/prediction_iv_dummy_left_right_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/dp_2"
        android:src="@drawable/left_right_swipe_indicator"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/prediction_iv_dummy_neither_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/dp_2"
        android:src="@drawable/neither_swipe_indicator"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/prediction_fl_dummy_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/prediction_rl_header" />

</RelativeLayout>