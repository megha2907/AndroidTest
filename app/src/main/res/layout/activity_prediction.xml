<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <in.sportscafe.scgame.module.play.tindercard.SwipeFlingAdapterView
        android:id="@+id/activity_prediction_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5" />

    <!--<RelativeLayout-->
        <!--android:id="@+id/rl_powerup"-->
        <!--android:layout_width="@dimen/dp_100"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:clickable="true"-->
        <!--android:focusable="true"-->
        <!--android:focusableInTouchMode="true"-->
       <!--&gt;-->

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/swipe_card_question_value"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/powerup_icon"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/black"
        />



    <!--</RelativeLayout>-->

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/swipe_card_tv_powerup_count"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:gravity="center"
        android:textSize="@dimen/dp_11"
        android:textColor="@color/white"
        android:background="@drawable/powerups_count_bg"
        app:typeface="roboto_light"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_25"

        />

    <com.jeeva.android.widgets.HmImageView
        android:id="@+id/prediction_iv_tournament_photo"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@drawable/placeholder_icon"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
     />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_20"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/prediction_iv_tournament_photo"
        android:layout_toLeftOf="@+id/swipe_card_question_value"
        />


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_tournament_match_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/textcolorlight"
        android:layout_toRightOf="@+id/prediction_iv_tournament_photo"
        android:layout_below="@+id/prediction_tv_tournament"
        />

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prediction_btn_pass"
        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:id="@+id/schedule_row_btn_vs"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/swipe_card_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/left_arrow_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerInParent="true"
            />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/swipe_card_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/white"
            android:gravity="left"
            app:typeface="lato_bold"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/swipe_card_iv_left"
            android:layout_toLeftOf="@id/schedule_row_btn_vs"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:clickable="true"
            />

        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/swipe_card_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerInParent="true"/>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/swipe_card_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/schedule_row_btn_vs"
            android:layout_toLeftOf="@id/swipe_card_iv_right"
            app:typeface="lato_bold"
            android:gravity="right"
            android:textSize="@dimen/dp_16"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:clickable="true"

            />


    </RelativeLayout>


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_contest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/prediction_tv_tournament"
        android:textSize="@dimen/dp_15"
        app:typeface="lato_regular"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_number_of_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/prediction_tv_contest_name"
        android:textSize="@dimen/dp_15"
        app:typeface="lato_regular"
        android:textColor="@color/textcolorlight"
        android:layout_centerHorizontal="true"
       />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downnarrow"
        android:layout_centerHorizontal="true"
        android:src="@drawable/down_arrow_icon"
        android:layout_above="@+id/prediction_btn_pass"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/prediction_btn_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onClick"
        android:text="Shuffle"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/textcolorlight"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:clickable="true"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/prediction_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="Last question!"
        android:textColor="@color/white"
        android:visibility="gone"/>



</RelativeLayout>