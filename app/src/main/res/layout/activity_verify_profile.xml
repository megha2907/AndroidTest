<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.sportscafe.nostragamus.module.navigation.help.HelpActivity">

    <!--Verify Profile Top section -->
    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_screen_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dim_60"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/verify_profile_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:visibility="invisible"
                android:src="@drawable/back_icon_grey" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/verify_profile_screen_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="Verify your profile"
                android:layout_marginRight="@dimen/dim_32"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:visibility="visible"
                app:typeface="lato_bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.jeeva.android.widgets.HmImageView
                android:id="@+id/verify_profile_iv_user_image"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/verify_profile_screen_title"
                android:layout_centerHorizontal="true"
                android:alpha="0.9"
                android:background="@color/black_30"
                android:onClick="showImagePopup"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/dim_60"
            android:orientation="vertical">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/verify_profile_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:visibility="visible"
                app:typeface="lato_bold" />

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
