<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_sheet_drag_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dim_40"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/blue_104468">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/new_match_joined_contest_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Joined Contests"
            android:textSize="@dimen/sp_14"
            app:typeface="lato_regular"
            android:layout_marginLeft="@dimen/dim_10"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/greencolor">




    </LinearLayout>


</LinearLayout>
