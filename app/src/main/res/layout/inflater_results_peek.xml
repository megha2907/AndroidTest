<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/schedule_row_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_timeline_tour_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/results_peek_row_question_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_question_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_8"
                app:typeface="roboto_condensed"
                />

            <View
                android:id="@+id/results_peek_row_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_below="@+id/results_peek_row_question_tv"
                android:background="@color/linecolor"
                android:visibility="visible"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@+id/results_peek_row_question_rl"
            android:layout_gravity="left">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_one_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:layout_alignParentLeft="true"
                app:typeface="lato_regular"
                android:ellipsize="end"
                android:maxLength="15"
                />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_one_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:layout_alignParentLeft="true"
                app:typeface="lato_regular"
                android:textSize="@dimen/dp_12"
                android:layout_below="@+id/results_peek_row_player_one_answer"
                android:layout_marginTop="@dimen/dp_10"
                />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_one_points_splitView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/split_str"
                android:textColor="@color/white_60"
                android:layout_alignParentLeft="true"
                app:typeface="lato_regular"
                android:textSize="@dimen/dp_12"
                android:layout_below="@id/results_peek_row_player_one_points"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/results_peek_row_player_one_powerup_rl"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_toRightOf="@+id/results_peek_row_player_one_answer"
                android:layout_marginLeft="@dimen/dp_10"
                >

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/results_peek_row_player_one_powerup_used"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_two_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:gravity="right"
                android:layout_alignParentRight="true"
                app:typeface="lato_regular"
                android:maxLength="15"
                android:ellipsize="end"
                />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_two_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:layout_alignParentRight="true"
                app:typeface="lato_regular"
                android:textSize="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/results_peek_row_player_two_answer"
                />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_two_points_splitView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/split_str"
                android:textColor="@color/white_60"
                android:layout_alignParentRight="true"
                app:typeface="lato_regular"
                android:textSize="@dimen/dp_12"
                android:layout_below="@+id/results_peek_row_player_two_points"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/results_peek_row_player_two_powerup_rl"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_toLeftOf="@+id/results_peek_row_player_two_answer"
                android:layout_marginRight="@dimen/dp_10"
                >

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/results_peek_row_player_two_powerup_used"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>


        </RelativeLayout>

        </RelativeLayout>



</RelativeLayout>