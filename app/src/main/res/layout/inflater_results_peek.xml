<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/schedule_row_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginBottom="@dimen/dim_5"
        android:background="@drawable/shape_timeline_tour_bg"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/results_peek_row_question_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dim_12">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_question_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="@dimen/dim_2"
                android:layout_centerHorizontal="true"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_splitView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/split_str"
                android:textColor="#8f8f8f"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/results_peek_row_question_tv"
                android:textSize="@dimen/sp_10"
                android:visibility="gone"
                app:typeface="lato_regular" />

            <View
                android:id="@+id/results_peek_row_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_below="@+id/results_peek_row_splitView"
                android:background="@color/line_separator"
                android:visibility="visible"
                android:layout_marginTop="@dimen/dim_10"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/result_peek_item_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:layout_below="@+id/results_peek_row_question_rl"
            android:layout_gravity="left">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_one_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:layout_alignParentLeft="true"
                app:typeface="lato_regular"
                android:ellipsize="end"
                android:maxLength="15"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_one_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:layout_alignParentLeft="true"
                app:typeface="lato_regular"
                android:textSize="@dimen/sp_12"
                android:layout_below="@+id/results_peek_row_player_one_answer"
                />

            <!--<com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_one_points_splitView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/split_str"
                android:textColor="@color/white_60"
                android:layout_alignParentLeft="true"
                app:typeface="lato_regular"
                android:textSize="@dimen/dp_8"
                android:layout_below="@id/results_peek_row_player_one_points"
                android:visibility="gone"/>-->

            <RelativeLayout
                android:id="@+id/results_peek_row_player_one_powerup_rl"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_toRightOf="@+id/results_peek_row_player_one_answer"
                android:layout_marginLeft="@dimen/dp_10"
                >

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/results_peek_row_player_one_powerup_used"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_two_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:gravity="right"
                android:layout_alignParentRight="true"
                app:typeface="lato_regular"
                android:maxLength="15"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/dp_10" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_two_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:layout_alignParentRight="true"
                app:typeface="lato_regular"
                android:textSize="@dimen/sp_12"
                android:layout_below="@+id/results_peek_row_player_two_answer" />

            <!--<com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/results_peek_row_player_two_points_splitView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/split_str"
                android:textColor="@color/white_60"
                android:layout_alignParentRight="true"
                app:typeface="lato_regular"
                android:textSize="@dimen/dp_8"
                android:layout_below="@+id/results_peek_row_player_two_points"
                android:visibility="gone"/>-->

            <RelativeLayout
                android:id="@+id/results_peek_row_player_two_powerup_rl"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_toLeftOf="@+id/results_peek_row_player_two_answer"
                android:layout_marginRight="@dimen/dp_10"
                >

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/results_peek_row_player_two_powerup_used"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>


        </RelativeLayout>

        <!-- Powerups layout at bottom -->
        <LinearLayout
            android:id="@+id/powerup_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/result_peek_item_content_layout">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@color/line_separator"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dim_36"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dim_2"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">

                <!-- Left -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="left">

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/result_peek_powerup_2x_left"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:background="@android:color/transparent"
                        android:src="@drawable/double_powerup"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dp_20"/>

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/result_peek_powerup_noNeg_left"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:background="@android:color/transparent"
                        android:src="@drawable/no_negative_powerup"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dp_20"/>

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/result_peek_powerup_audience_left"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:background="@android:color/transparent"
                        android:src="@drawable/audience_poll_powerup"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Right -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/result_peek_powerup_2x_right"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:background="@android:color/transparent"
                        android:src="@drawable/double_powerup"
                        android:visibility="gone"/>

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/result_peek_powerup_noNeg_right"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:background="@android:color/transparent"
                        android:src="@drawable/no_negative_powerup"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_20"/>

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/result_peek_powerup_audience_right"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:background="@android:color/transparent"
                        android:src="@drawable/audience_poll_powerup"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_20"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>



</RelativeLayout>