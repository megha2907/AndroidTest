<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_screen_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/onboarding_bg" />

    <RelativeLayout
        android:id="@+id/update_app_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <ImageView
            android:id="@+id/update_app_iv_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:onClick="onClick"
            android:padding="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:src="@drawable/back_icon_grey" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/update_app_tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Update the App !"
            android:textColor="@color/white"
            app:typeface="lato_regular"
            android:textSize="@dimen/dp_16" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/update_app_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:text="Done"
            android:textAllCaps="true"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_13"
            app:typeface="lato_regular" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/update_app_fl_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/update_app_rl" />


</RelativeLayout>