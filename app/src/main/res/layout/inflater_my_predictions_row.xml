<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    >


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/my_predictions_row_tv_question"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:text="Who will hit more sixes - Pollddd"
        android:layout_gravity="left"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_2"
        app:typeface="lato_regular"

     />

    <RelativeLayout
        android:id="@+id/my_predictions_row_rl_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_predictions_row_tv_question">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Pollard"
            android:textColor="@color/my_answer_text_selector"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_5"
            app:typeface="lato_regular"
            android:gravity="bottom"
            android:layout_gravity="left"
            />

    <View
        android:id="@+id/my_predictions_row_v_answer_line"
        android:background="@color/monza"
        android:layout_width = "match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignTop="@id/my_predictions_row_tv_answer"
        android:layout_alignEnd="@+id/my_predictions_row_tv_answer"
        android:visibility="gone"/>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_correct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Pollard"
            android:textColor="@color/my_answer_text_selector"
            android:textSize="@dimen/dp_14"
            android:layout_toRightOf="@+id/my_predictions_row_tv_answer"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_5"
            app:typeface="lato_regular"
            android:gravity="bottom"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_20"
            android:visibility="gone"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/my_predictions_row_rl"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_toRightOf="@+id/my_predictions_row_rl_answer"
        android:layout_below="@+id/my_predictions_row_tv_question"
        android:layout_marginLeft="@dimen/dp_20"
        >

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/my_predictions_row_btn_answer_powerup_used"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:text="2X"
        android:textSize="@dimen/dp_8"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/powerup_name_bg"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/black"
        app:typeface="lato_bold"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/powerup_imageButton"
        android:background="@android:color/transparent"
        android:src="@drawable/powerup_result_icon"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        />


    </RelativeLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/my_predictions_row_tv_answer_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="50 Points"
        android:textColor="@color/yellowcolor"
        android:textSize="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_1"
        app:typeface="lato_regular"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>