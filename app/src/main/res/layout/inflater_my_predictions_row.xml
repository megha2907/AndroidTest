<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_2"
    android:layout_marginBottom="@dimen/dp_2"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    >


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/my_predictions_row_tv_question"
        android:layout_width="@dimen/dp_180"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="@color/textcolorlight"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/my_predictions_row_tv_answer_points"
        app:typeface="roboto_condensed"
        android:textSize="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_50"

        />

    <RelativeLayout
        android:id="@+id/my_predictions_row_rl_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_predictions_row_tv_question"
        >

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/textcolorlight"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_1"
            app:typeface="lato_regular"
            android:gravity="bottom"
            android:layout_gravity="left"
            />



        <!--<View-->
        <!--android:id="@+id/my_predictions_row_v_answer_line"-->
        <!--android:background="@color/monza"-->
        <!--android:layout_width = "match_parent"-->
        <!--android:layout_height="@dimen/dp_2"-->
        <!--android:layout_marginTop="@dimen/dp_10"-->
        <!--android:layout_alignTop="@id/my_predictions_row_tv_answer"-->
        <!--android:layout_alignEnd="@+id/my_predictions_row_tv_answer"-->
        <!--android:visibility="gone"/>-->

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_correct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/my_answer_text_selector"
            android:textSize="@dimen/dp_13"
            android:layout_below="@+id/my_predictions_row_tv_answer"
            android:layout_marginBottom="@dimen/dp_5"
            app:typeface="lato_regular"
            android:gravity="bottom"
            android:layout_gravity="left"
            android:visibility="gone"
            />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_neither_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/my_answer_text_selector"
            android:textSize="@dimen/dp_13"
            android:layout_below="@+id/my_predictions_row_tv_correct_answer"
            android:layout_marginBottom="@dimen/dp_5"
            app:typeface="lato_regular"
            android:gravity="bottom"
            android:layout_gravity="left"
            android:visibility="gone"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/my_predictions_row_rl"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_toRightOf="@+id/my_predictions_row_rl_answer"
        android:layout_below="@+id/my_predictions_row_tv_question"
        android:layout_marginLeft="@dimen/dp_15"
        >

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/my_predictions_row_btn_answer_powerup_used"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            />

    </RelativeLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/my_predictions_row_tv_answer_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/yellowcolor"
        android:textSize="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1"
        app:typeface="lato_regular"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/my_predictions_row_tv_question"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/my_predictions_row_tv_perc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/textcolorlight"
        android:textSize="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1"
        app:typeface="lato_regular"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/my_predictions_row_tv_question"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/my_predictions_row_tv_perc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/textcolorlight"
        android:textSize="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1"
        app:typeface="lato_regular"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/my_predictions_row_tv_perc_1"
        />

    <View
        android:id="@+id/schedule_row_v_result_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@+id/my_predictions_row_rl_answer"
        android:background="@color/linecolor"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="visible"
        />


    <ImageView
        android:id="@+id/powerup_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/powerup_flip_icon_grey"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:visibility="gone"
        android:padding="@dimen/dp_15"

       />

</RelativeLayout>