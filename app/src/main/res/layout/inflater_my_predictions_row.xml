<?xml version="1.0" encoding="utf-8"?>
<com.jeeva.android.widgets.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    app:sl_cornerRadius="@dimen/dp_0"
    app:sl_fillColor="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/my_predictions_row_rl_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/my_predictions_row_tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="left"
                android:textColor="@color/white"
                app:typeface="roboto_condensed" />

            <View
                android:id="@+id/results_peek_row_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_below="@+id/my_predictions_row_tv_question"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@color/linecolor"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_predictions_row_rl_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_predictions_row_rl_question"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/my_predictions_row_tv_answer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/my_predictions_row_tv_correct_answer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_below="@+id/my_predictions_row_tv_answer"
                android:layout_marginTop="@dimen/dp_2"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/my_answer_text_selector"
                android:textSize="@dimen/dp_13"
                android:visibility="gone"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/my_predictions_row_tv_neither_answer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_below="@+id/my_predictions_row_tv_correct_answer"
                android:layout_marginTop="@dimen/dp_2"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/my_answer_text_selector"
                android:textSize="@dimen/dp_13"
                android:visibility="gone"
                app:typeface="lato_regular" />

            <RelativeLayout
                android:id="@+id/my_predictions_row_rl"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/my_predictions_row_tv_answer">

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/my_predictions_row_btn_answer_powerup_used"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent" />

            </RelativeLayout>


        </RelativeLayout>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_answer_points"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/my_predictions_row_rl_question"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:maxLines="1"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_12"
            app:typeface="lato_regular" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_perc_1"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/my_predictions_row_rl_answer"
            android:layout_below="@+id/my_predictions_row_rl_question"
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@drawable/average_leaderboard_icon"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_12"
            android:visibility="invisible"
            app:typeface="lato_regular" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_perc_2"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/my_predictions_row_tv_perc_1"
            android:layout_marginTop="@dimen/dp_2"
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@drawable/average_leaderboard_icon"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_12"
            android:visibility="invisible"
            app:typeface="lato_regular" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_perc_3"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/my_predictions_row_tv_perc_2"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/radical_red"
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@drawable/average_leaderboard_icon"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_12"
            android:visibility="invisible"
            app:typeface="lato_regular" />

        <ImageView
            android:id="@+id/powerup_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_15"
            android:src="@drawable/powerup_flip_icon_grey"
            android:visibility="gone" />

    </RelativeLayout>

</com.jeeva.android.widgets.ShadowLayout>