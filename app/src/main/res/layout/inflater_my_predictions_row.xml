<?xml version="1.0" encoding="utf-8"?>
<com.jeeva.android.widgets.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    android:layout_marginTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dim_5"
    app:sl_cornerRadius="@dimen/dp_0"
    app:sl_fillColor="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Question Row -->
        <RelativeLayout
            android:id="@+id/my_predictions_row_rl_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/question_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dim_14"
                android:animateLayoutChanges="true"
                android:paddingBottom="@dimen/dim_10"
                android:paddingTop="@dimen/dim_12">

                <LinearLayout
                    android:id="@+id/my_predictions_left_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/my_predictions_right_layout"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/my_predictions_row_tv_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dim_2"
                        android:gravity="left"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/my_predictions_row_splitView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/split_str"
                        android:textColor="#8f8f8f"
                        android:textSize="@dimen/sp_10"
                        android:visibility="gone"
                        app:typeface="lato_regular" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/my_predictions_right_layout"
                    android:layout_width="@dimen/dim_100"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/my_predictions_row_tv_answer_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white_60"
                        android:textSize="@dimen/sp_12"
                        android:visibility="visible"
                        app:typeface="lato_regular" />

                    <RelativeLayout
                        android:id="@+id/my_results_rl_edit_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dim_30"
                        android:layout_alignParentRight="true"
                        android:animateLayoutChanges="true"
                        android:visibility="visible">

                        <com.jeeva.android.widgets.customfont.CustomButton
                            android:id="@+id/my_results_btn_edit_answers"
                            android:layout_width="@dimen/dim_90"
                            android:layout_height="@dimen/dim_24"
                            android:layout_alignBaseline="@+id/my_results_iv_edit_answers_icon"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="#353535"
                            android:elevation="@dimen/dim_5"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:paddingLeft="@dimen/dp_18"
                            android:stateListAnimator="@null"
                            android:text="Edit Answer"
                            android:textAllCaps="false"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_11"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:id="@+id/my_results_iv_edit_answers_icon"
                            android:layout_width="@dimen/dim_24"
                            android:layout_height="@dimen/dim_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dim_70"
                            android:elevation="@dimen/dim_5" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>


            <View
                android:id="@+id/results_peek_row_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_0.5"
                android:layout_below="@+id/question_linear"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginRight="@dimen/dim_12"
                android:background="@color/line_separator"
                android:visibility="visible" />

        </RelativeLayout>

        <!-- Answers & Options layout -->
        <RelativeLayout
            android:id="@+id/answer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_predictions_row_rl_question"
            android:paddingBottom="@dimen/dp_10">

            <!-- Answers Row -->
            <RelativeLayout
                android:id="@+id/my_predictions_row_rl_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:animateLayoutChanges="true">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/my_predictions_row_tv_option1_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_13"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/my_predictions_row_tv_option2_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_predictions_row_tv_option1_answer"
                    android:layout_marginTop="@dimen/dp_5"
                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_13"
                    android:visibility="gone"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/my_predictions_row_tv_option3_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_predictions_row_tv_option2_answer"
                    android:layout_marginTop="@dimen/dp_5"
                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_13"
                    android:visibility="gone"
                    app:typeface="lato_regular" />

            </RelativeLayout>

            <!-- Radio button Row -->
            <RelativeLayout
                android:id="@+id/my_predictions_row_rl_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:animateLayoutChanges="true">

                <RadioGroup
                    android:id="@+id/my_predictions_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/my_predictions_row_rb_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/sort_radio_icon"
                        android:textColor="@drawable/radio_btn_tv_selector"
                        android:textSize="@dimen/dp_13" />

                    <RadioButton
                        android:id="@+id/my_predictions_row_rb_correct_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/my_predictions_row_tv_answer"
                        android:layout_marginTop="@dimen/dp_5"
                        android:button="@drawable/sort_radio_icon"
                        android:textColor="@drawable/radio_btn_tv_selector"
                        android:textSize="@dimen/dp_13" />

                    <RadioButton
                        android:id="@+id/my_predictions_row_rb_neither_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/my_predictions_row_tv_correct_answer"
                        android:layout_marginTop="@dimen/dp_5"
                        android:button="@drawable/sort_radio_icon"
                        android:textColor="@drawable/radio_btn_tv_selector"
                        android:textSize="@dimen/dp_13"
                        android:visibility="gone" />

                </RadioGroup>

            </RelativeLayout>

        </RelativeLayout>

        <!-- Percentage graph - option 1 -->
        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_perc_1"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/answer_layout"
            android:layout_below="@+id/my_predictions_row_rl_question"
            android:layout_marginTop="@dimen/dp_7"
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@drawable/average_leaderboard_icon"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_12"
            android:visibility="invisible"
            app:typeface="lato_regular" />

        <!-- Percentage graph - option 2 -->
        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_perc_2"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/my_predictions_row_tv_perc_1"
            android:layout_marginTop="@dimen/dp_2"
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@drawable/average_leaderboard_icon"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_12"
            android:visibility="invisible"
            app:typeface="lato_regular" />

        <!-- Percentage graph - option 3 -->
        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_predictions_row_tv_perc_3"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/my_predictions_row_tv_perc_2"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/radical_red"
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@drawable/average_leaderboard_icon"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_12"
            android:visibility="gone"
            app:typeface="lato_regular" />

        <!-- Powerups layout at bottom -->
        <LinearLayout
            android:id="@+id/powerup_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/answer_layout"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginRight="@dimen/dim_12"
                android:layout_marginTop="@dimen/dim_8"
                android:background="@color/line_separator"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_10"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dim_36"
                android:orientation="horizontal">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="POWERUPS USED"
                    android:textColor="@color/white_999999"
                    android:textSize="@dimen/sp_9"
                    app:typeface="lato_regular" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/my_predictions_answer_powerup_used_2x"
                        android:layout_width="@dimen/dim_14"
                        android:layout_height="@dimen/dim_14"
                        android:background="@android:color/transparent"
                        android:src="@drawable/double_powerup"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/my_predictions_answer_powerup_used_noNeg"
                        android:layout_width="@dimen/dim_14"
                        android:layout_height="@dimen/dim_14"
                        android:layout_marginLeft="@dimen/dim_20"
                        android:background="@android:color/transparent"
                        android:src="@drawable/no_negative_powerup"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/my_predictions_answer_powerup_used_audience"
                        android:layout_width="@dimen/dim_14"
                        android:layout_height="@dimen/dim_14"
                        android:layout_marginLeft="@dimen/dim_20"
                        android:background="@android:color/transparent"
                        android:src="@drawable/audience_poll_powerup"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</com.jeeva.android.widgets.ShadowLayout>