<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_26"
        android:layout_marginRight="@dimen/dim_26"
        android:layout_marginTop="@dimen/dim_20"
        android:text="Welcome to the Powerup Bank!"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:typeface="lato_regular" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_26"
        android:layout_marginTop="@dimen/dim_10"
        android:text="Running out of powerups? Transfer powerups from the Powerup Bank to your challenge"
        android:textColor="@color/white_dim"
        android:textSize="@dimen/sp_14"
        app:typeface="lato_regular" />

</LinearLayout>