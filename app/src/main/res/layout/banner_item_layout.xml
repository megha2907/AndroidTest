<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipToPadding="false">

        <android.support.v7.widget.CardView
            android:id="@+id/wallet_home_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_6"
            android:layout_marginRight="@dimen/dim_6"
            app:cardCornerRadius="@dimen/dim_2"
            app:cardElevation="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dim_6"
            app:cardBackgroundColor="@color/black">

        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/banner_image"
            android:layout_width="@dimen/dim_270"
            android:layout_height="@dimen/dim_90"
            android:scaleType="centerCrop"/>

        </android.support.v7.widget.CardView>

</LinearLayout>