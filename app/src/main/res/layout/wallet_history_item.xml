<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wallet_history_item_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/wallet_history_row_height"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wallet_txn_imageView"
                android:layout_width="@dimen/wallet_history_item_icon_dimen"
                android:layout_height="@dimen/wallet_history_item_icon_dimen"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/wallet_history_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="-"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_light"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/wallet_history_detail_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                app:typeface="lato_light"
                android:layout_marginTop="@dimen/dp_5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wallet_history_more_details_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/wallet_item_date_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                app:typeface="lato_light"/>

            <ImageView
                android:id="@+id/wallet_more_details_imgView"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:padding="@dimen/dp_5"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/thin_arrow_min"
                android:alpha="0.5"
                android:layout_marginTop="@dimen/dp_5"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Hidden below layout  -->
    <LinearLayout
        android:id="@+id/wallet_item_txn_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#303030"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dim_16">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/wallet_item_txn_id_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text=""
                android:textColor="@color/white_999999"
                android:textSize="@dimen/sp_10"
                android:maxLines="1"
                app:typeface="lato_regular"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/schedule_row_rl_report_btn"/>

            <RelativeLayout
                android:id="@+id/wallet_item_rl_report_btn"
                android:layout_width="@dimen/dim_60"
                android:layout_height="@dimen/dim_24"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_border_box"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_10">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/wallet_item_tv_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REPORT"
                    android:paddingBottom="@dimen/dim_3"
                    android:layout_centerInParent="true"
                    android:textColor="@drawable/report_tv_selector"
                    android:textSize="@dimen/sp_10"
                    app:typeface="lato_regular" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>