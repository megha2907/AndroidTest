<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_10"
    android:paddingRight="@dimen/dp_30"
    android:paddingTop="@dimen/dp_10">

    <com.jeeva.android.widgets.HmImageView
        android:id="@+id/reward_row_iv_member_photo"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:maxLines="1"
        android:text="Name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_gravity="center"
        android:textColor="@color/white_90"
        android:textSize="@dimen/dp_14"
        app:typeface="lato_regular" />


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/reward_row_tv_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:text="Name"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_12"
        android:textColor="@color/white_90"
        android:textSize="@dimen/dp_12"
        app:typeface="lato_regular" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/reward_row_tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="Rs 200"
        android:layout_gravity="center"
        android:textColor="@color/paid_entry_tv_color"
        android:textSize="@dimen/dp_12"
        app:typeface="lato_regular" />
</LinearLayout>