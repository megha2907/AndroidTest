<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="in.sportscafe.nostragamus.module.contest.ui.ContestFragment">

    <!-- Heading layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dim_60"
        android:background="@color/new_challenge_tab_bg">



    </LinearLayout>

    <!-- Tabs Layout -->
    <android.support.design.widget.TabLayout
        android:id="@+id/contest_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_80"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabIndicatorHeight="@dimen/dim_2"
        app:tabIndicatorColor="#008ad6"
        android:background="@color/new_challenge_tab_bg"/>

    <!-- ViewPager -->
    <in.sportscafe.nostragamus.module.common.CustomViewPager
        android:id="@+id/contest_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>
