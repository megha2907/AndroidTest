<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_row_ll"
        android:orientation="vertical"
        android:background="@drawable/swipe_card_shape"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        >



        <RelativeLayout
            android:id="@+id/schedule_row_rl_match_stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorBackground"
            android:layout_marginTop="@dimen/dp_2"
            >

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_match_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:textColor="@color/silver_chalice"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dp_12"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swipe_card_tv_context"
            >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:id="@+id/schedule_row_btn_vs"
                android:background="@drawable/vs_button_bg"
                android:layout_centerHorizontal="true"
                android:alpha="0.4"
                android:text="VS"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                />

            <com.jeeva.android.widgets.HmImageView
                android:id="@+id/swipe_card_iv_left"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:background="@drawable/placeholder_icon"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_party_a_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/white"
                android:text="Manchester United"
                android:gravity="left"
                app:typeface="lato_bold"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/swipe_card_iv_left"
                android:layout_toLeftOf="@id/schedule_row_btn_vs"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_centerVertical="true"

                />

            <com.jeeva.android.widgets.HmImageView
                android:id="@+id/swipe_card_iv_right"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="centerCrop"
                android:background="@drawable/placeholder_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_party_b_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Manchester United"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@id/schedule_row_btn_vs"
                android:layout_toLeftOf="@id/swipe_card_iv_right"
                app:typeface="lato_bold"
                android:textSize="@dimen/dp_14"
                android:gravity="right"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_centerVertical="true"
                />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/schedule_row_btn_playmatch"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/play_btn_bg"
                android:onClick="onClick"
                android:text="PLAY"
                android:textAllCaps="false"
                android:textSize="@dimen/dp_15"
                android:layout_below="@+id/schedule_row_btn_vs"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                app:typeface="lato_regular"
                android:textColor="@color/black"
                android:visibility="gone"

                />


        </RelativeLayout>





        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_gravity="center"
            android:textColor="@color/silver_chalice"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:typeface="lato_regular"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            />



        <View
            android:id="@+id/schedule_row_v_party_a"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@drawable/black_divider"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:visibility="gone"
            />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_result_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="4 PREDICTIONS MADE ,WAITING FOR RESULT"
            app:typeface="lato_regular"
            android:gravity="center"
            android:textSize="@dimen/dp_13"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_row_btn_vs"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5">

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/schedule_row_btn_points"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/btn_points_bg"
                android:text="60 Points"
                android:textAllCaps="false"
                android:textSize="@dimen/dp_15"
                android:layout_alignParentRight="true"
                app:typeface="lato_regular"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dp_20"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_5"
                />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_match_correct_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/schedule_row_btn_points"
                android:textColor="@color/yellowcolor"
                android:text="YOU GOT 3/5 QUESTIONS CORRECT"
                app:typeface="lato_regular"
                android:gravity="left"
                android:textSize="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                android:visibility="gone"
                android:maxLines="2"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_results_row_ll_predictions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_row_ll"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical"
        android:showDividers="beginning">

    </LinearLayout>



    <LinearLayout
        android:id="@+id/schedule_row_ll_match_commentary_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/schedule_row_ll"
        android:visibility="gone"
        />


</RelativeLayout>