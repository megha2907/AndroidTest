<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/for_screenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/points_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5">

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/schedule_row_btn_points"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@color/yellowcolor"
            android:textSize="@dimen/dp_14"
            android:visibility="gone"
            app:typeface="roboto_condensed" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_correct_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="left"
            android:maxLines="2"
            android:textColor="@color/yellowcolor"
            android:textSize="@dimen/dp_14"
            android:visibility="gone"
            app:typeface="roboto_condensed" />

        <ImageView
            android:id="@+id/schedule_row_iv_match_points_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/right_arrow_points_icon"
            android:visibility="gone" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/schedule_row_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/points_rl"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/swipe_card_shape"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/schedule_row_rl_match_stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/colorBackground"
            android:visibility="gone">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_match_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:textColor="@color/silver_chalice"
                android:textSize="@dimen/dp_12" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swipe_card_tv_context"
            android:layout_marginTop="@dimen/feed_screen_spacing">

            <Button
                android:id="@+id/schedule_row_btn_vs"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:alpha="0.4"
                android:background="@drawable/vs_button_bg"
                android:text="VS"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/schedule_row_btn_vs"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_left"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:scaleType="fitXY"
                    app:defaultImage="@drawable/placeholder_icon"
                    app:showAnimation="false" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_party_a_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Atletico"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="roboto_condensed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/schedule_row_btn_vs"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_right"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    app:defaultImage="@drawable/placeholder_icon"
                    app:showAnimation="false" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_party_b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Atletico"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="roboto_condensed" />
            </LinearLayout>

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/schedule_row_btn_playmatch"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_35"
                android:layout_below="@+id/schedule_row_btn_vs"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/play_btn_bg"
                android:onClick="onClick"
                android:text="PLAY"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"
                android:visibility="gone"
                app:typeface="lato_regular"

                />


        </RelativeLayout>


        <View
            android:id="@+id/schedule_row_v_result_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:background="@drawable/black_divider"
            android:visibility="visible" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/feed_screen_spacing"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:gravity="center"
            android:textColor="@color/silver_chalice"
            android:textSize="@dimen/dp_13"
            android:visibility="visible"
            app:typeface="lato_regular" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_result_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/feed_screen_spacing"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:textColor="@color/yellowcolor"
            android:textSize="@dimen/dp_13"
            android:visibility="gone"
            app:typeface="lato_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_results_row_ll_predictions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_row_ll"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical"
        android:showDividers="beginning">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/my_results_row_ll_leaderboardbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_results_row_ll_predictions"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical"
        android:showDividers="beginning" />


    <LinearLayout
        android:id="@+id/schedule_row_ll_match_commentary_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_row_ll"
        android:orientation="vertical"
        android:visibility="gone" />


</RelativeLayout>