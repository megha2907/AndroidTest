<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/black"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/for_screenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/schedule_row_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/schedule_row_rl_match_stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/colorBackground"
            android:visibility="gone">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_match_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:textColor="@color/silver_chalice"
                android:textSize="@dimen/dp_12" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swipe_card_tv_context"
            android:layout_marginTop="@dimen/feed_screen_spacing">

            <Button
                android:id="@+id/schedule_row_btn_vs"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:alpha="0.4"
                android:background="@drawable/vs_button_bg"
                android:text="VS"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                android:textStyle="bold" />


            <!-- Challenge Left Image and Name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/schedule_row_btn_vs"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_16">


                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_left"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:scaleType="fitXY"
                    android:src="@drawable/sample_tour_image"
                    app:defaultImage="@drawable/placeholder_icon" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_party_a_name"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Manchester United FB"
                    android:textAllCaps="false"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular" />

            </LinearLayout>

            <!-- Challenge Right Image and Name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="horizontal">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_party_b_name"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_12"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="2"
                    android:text="Manchester United FB"
                    android:textAllCaps="false"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_right"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_16"
                    android:scaleType="fitXY"
                    android:src="@drawable/sample_tour_image"
                    app:defaultImage="@drawable/placeholder_icon" />
            </LinearLayout>


            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/schedule_row_btn_playmatch"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_35"
                android:layout_below="@+id/schedule_row_btn_vs"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/play_btn_bg"
                android:onClick="onClick"
                android:text="PLAY"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"
                android:visibility="gone"
                app:typeface="lato_regular"

                />


        </RelativeLayout>


        <View
            android:id="@+id/schedule_row_v_result_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:background="@drawable/black_divider"
            android:visibility="gone" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12"
            android:visibility="visible"
            app:typeface="lato_light" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_result_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/feed_screen_spacing"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:textColor="@color/yellowcolor"
            android:textSize="@dimen/dp_13"
            android:visibility="gone"
            app:typeface="lato_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_challenges_row_ll_show_games"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_row_ll"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_challenges_show_game_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/all_challenges_row_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_challenges_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/schedule_row_tv_average_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="48"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white_80"
                        android:textSize="@dimen/dp_14"
                        app:typeface="lato_bold" />


                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average"
                        android:gravity="center"
                        android:layout_below="@+id/schedule_row_tv_average_score"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white_60"
                        android:textSize="@dimen/dp_12"
                        app:typeface="roboto_condensed" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center"
                    android:background="@color/black_20" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/schedule_row_tv_my_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white_80"
                        android:textSize="@dimen/dp_20"
                        app:typeface="lato_bold" />


                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You Scored"
                        android:gravity="center"
                        android:layout_below="@+id/schedule_row_tv_my_score"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white_60"
                        android:textSize="@dimen/dp_12"
                        app:typeface="roboto_condensed" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center"
                    android:background="@color/black_20" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_highest_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="58"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_bold" />


                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highest"
                    android:gravity="center"
                    android:layout_below="@+id/schedule_row_tv_highest_score"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_12"
                    app:typeface="roboto_condensed" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/all_challenges_row_tv_leaderboard_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/challenge_leaderboard_icon"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="bottom"
                android:paddingBottom="@dimen/dp_14"
                android:paddingTop="@dimen/dp_12"
                android:text="1st Rank"
                android:textColor="@color/white_80"
                android:textSize="@dimen/dp_12"
                app:typeface="lato_regular" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/points_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_challenges_row_ll_show_games"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_btn_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_14"
            android:visibility="visible"
            app:typeface="lato_regular" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_correct_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="left"
            android:maxLines="2"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_14"
            android:visibility="visible"
            app:typeface="lato_regular" />

        <ImageView
            android:id="@+id/schedule_row_iv_match_points_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/right_arrow_points_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_results_row_ll_predictions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/points_rl"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="vertical"
        android:showDividers="beginning">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/my_results_row_ll_leaderboardbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_results_row_ll_predictions"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical"
        android:showDividers="beginning" />


    <LinearLayout
        android:id="@+id/schedule_row_ll_match_commentary_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_row_ll"
        android:orientation="vertical"
        android:visibility="gone" />


</RelativeLayout>