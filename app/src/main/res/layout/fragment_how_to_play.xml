<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/how_to_play_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5">

        <ImageView
            android:id="@+id/how_to_play_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:padding="@dimen/dp_15"
            android:src="@drawable/back_icon_grey" />


        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/how_to_play_tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="How to Play"
            android:textColor="@color/white"
            app:typeface="lato_regular"
            android:textSize="@dimen/sp_14" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/how_to_play_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Done"
            android:textAllCaps="true"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_16"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_13"
            app:typeface="lato_regular" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/how_to_play_rl_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/how_to_play_rl"
        android:layout_weight="1">

        <android.support.v4.view.ViewPager
            android:id="@+id/how_to_play_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/how_to_play_cpi_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40"
        android:layout_below="@+id/how_to_play_rl_viewpager"
        app:ci_drawable="@drawable/circle_indicator_selected"
        app:ci_drawable_unselected="@drawable/circle_indicator_unselected"
        app:ci_gravity="center"
        app:ci_orientation="horizontal"
        app:ci_width="@dimen/dp_6"
        app:ci_height="@dimen/dp_6"
        app:ci_margin="@dimen/dp_6"/>


</LinearLayout>