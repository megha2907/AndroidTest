<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_40">

    <android.support.v7.widget.CardView
        android:id="@+id/popup_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_15"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_303030"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_56"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <!--<ImageView
                    android:layout_width="@dimen/dim_15"
                    android:layout_height="@dimen/dim_15"
                    android:src="@drawable/tr_success_tick_icon" />-->

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/timer_finish_dialog_title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Can't Join"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_100"
                android:layout_marginTop="@dimen/dim_8"
                android:gravity="center"
                android:orientation="vertical">

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/timer_finish_dialog_icon_imgView"
                    android:layout_width="@dimen/dim_100"
                    android:layout_height="@dimen/dim_100"
                    android:src="@drawable/stop_watch_icn"
                    app:defaultImage="@drawable/stop_watch_icn"/>

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/err_indicator_icn_imgView"
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_30"
                    android:layout_alignParentBottom="true"
                    app:defaultImage="@drawable/err_dialog_err_indicator_icn"
                    android:layout_marginRight="-15dp"
                    android:layout_alignRight="@id/timer_finish_dialog_icon_imgView"
                    android:visibility="gone"/>
                
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/timer_finish_dialog_message_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dim_16"
                    android:text="Oops!"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_bold" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/timer_finish_dialog_sub_message_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:layout_marginRight="@dimen/dim_30"
                    android:layout_marginTop="@dimen/dim_12"
                    android:gravity="center"
                    android:text="Timer out!"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dim_20"
                    android:paddingTop="@dimen/dim_20">

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/time_finish_action_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_40"
                        android:layout_marginTop="@dimen/dim_1"
                        android:layout_marginLeft="@dimen/dim_20"
                        android:layout_marginRight="@dimen/dim_20"
                        android:background="@drawable/blue_button_selector"
                        android:gravity="center"
                        android:minWidth="@dimen/dim_72"
                        android:paddingBottom="@dimen/dim_2"
                        android:text="Ok"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/popup_cross_btn"
        android:layout_width="@dimen/dim_32"
        android:layout_height="@dimen/dim_32"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/popup_card"
        android:layout_marginTop="@dimen/dim_38"
        android:elevation="@dimen/dp_4"
        android:padding="@dimen/dp_5"
        android:src="@drawable/popup_cross_icon"
        android:visibility="visible" />

</RelativeLayout>