<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorMedium"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15"
    >

    <ImageButton
        android:id="@+id/arrow_expand_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/spinner_down_arrow" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/myglobal_sport_tv_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Cricket"
        android:textColor="@color/silver_chalice"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        app:typeface="lato_bold"/>


    <ImageView
        android:id="@+id/myglobal_sport_rank_status"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@drawable/status_arrow_down"
        android:layout_marginRight="@dimen/dp_12"
        />

    <TextView
        android:id="@+id/myglobal_sport_tv_overall_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_15"
        android:text="1st"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"
        android:textColor="@color/silver_chalice"/>



</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/dividercolor"
        android:layout_gravity="bottom"
        />


    <LinearLayout
    android:id="@+id/league_row_ll_positions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" />

</LinearLayout>