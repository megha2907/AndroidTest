<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorMedium"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15"
    >

    <ImageView
        android:id="@+id/myglobal_sport_img"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/cricket_menu_colored_icon" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/myglobal_sport_tv_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Cricket"
        android:textColor="@color/silver_chalice"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        app:typeface="lato_bold"/>

    <ImageButton
        android:id="@+id/arrow_expand_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/spinner_down_arrow" />

</LinearLayout>


<LinearLayout
    android:id="@+id/league_row_ll_positions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" />

</LinearLayout>