            <!-- Information Layout -->
            <LinearLayout
                android:id="@+id/my_result_join_contest_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/colorBackground"
                android:paddingBottom="@dimen/dim_16"
                android:paddingTop="@dimen/dim_12"
                android:paddingLeft="@dimen/dim_12"
                android:paddingRight="@dimen/dim_12"
                android:layout_margin="@dimen/dim_12"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/games_info_icon_imgView"
                            android:layout_width="@dimen/dim_36"
                            android:layout_height="@dimen/dim_36"
                            android:src="@drawable/play_contest_card"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/dim_12">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/games_info_heading_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bluecolor1"
                            android:text="YOUR PREDICTIONS ARE SAVED"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/dim_10"
                            android:textSize="@dimen/sp_12"
                            app:typeface="lato_bold" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/games_info_msg_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey6"
                            android:text="Join a contest to play the challenge. You can only edit the predictions once you have joined contest"
                            android:layout_marginTop="@dimen/dim_8"
                            android:textSize="@dimen/sp_11"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                </LinearLayout>

                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/results_join_contest_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_40"
                    android:layout_marginTop="@dimen/dim_12"
                    android:background="@drawable/light_blue_button_selector"
                    android:onClick="onClick"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="Join a Contest"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_results_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/my_results_declaration_rl"
                android:background="@color/black"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <FrameLayout
            android:id="@+id/fab_fl_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fab_fl_flip"
            android:visibility="invisible">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_replay"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_below="@+id/fab_fl_flip"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/dp_18"
                android:scaleType="center"
                android:src="@drawable/replay_icon"
                app:backgroundTint="@color/colorMedium"
                app:elevation="@dimen/dp_0" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/powerup_replay_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@drawable/notification_count_bg"
                android:elevation="@dimen/dp_6"
                android:gravity="center"
                android:paddingRight="@dimen/dp_1"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="roboto_light" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fab_fl_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/results_fab_main"
            android:visibility="invisible">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_flip"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_below="@+id/results_fab_main"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/dp_18"
                android:scaleType="center"
                android:src="@drawable/powerup_flip"
                app:backgroundTint="@color/colorMedium"
                app:borderWidth="0dp"
                app:elevation="@dimen/dp_0" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/powerup_flip_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@drawable/notification_count_bg"
                android:elevation="@dimen/dp_6"
                android:gravity="center"
                android:paddingRight="@dimen/dp_1"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="roboto_light" />

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/results_fab_main"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:clipToPadding="false"
            android:scaleType="center"
            android:src="@drawable/powerup_main_icon_white"
            android:visibility="gone"
            app:backgroundTint="@color/blackopacity"
            app:borderWidth="@dimen/dp_0"
            app:elevation="@dimen/dp_0" />


    </RelativeLayout>
</RelativeLayout>