<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/my_results_toolbar_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_results_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMedium"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Match Results"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="roboto_condensed" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/toolbar_match_stage"
                    android:layout_width="@dimen/dp_240"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar_title"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/my_results_rl_share_score"
                android:layout_width="@dimen/dp_110"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_20">


                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/my_results_ll_share_score"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:layout_alignBaseline="@+id/my_results_iv_share_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/compare_btn_bg"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="SHARE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    app:typeface="roboto_condensed" />

                <ImageView
                    android:id="@+id/my_results_iv_share_icon"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_54"
                    android:paddingTop="@dimen/dp_5"
                    android:src="@drawable/share_btn_icon" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </RelativeLayout>

    <!-- Result declaration layout -->
    <LinearLayout
        android:id="@+id/my_results_declaration_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/my_results_toolbar_rl">

        <!-- Heading text -->
        <LinearLayout
            android:id="@+id/head_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16">

            <ImageView
                android:id="@+id/correct_icon"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/correct_done"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_2"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/my_results_declaration_tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/greenresults"
                app:typeface="lato_bold"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_16"
                android:textSize="@dimen/dp_14"/>

        </LinearLayout>

        <!-- Content text -->
        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/my_results_declaration_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:text=""
            android:textColor="#e1e1e1"
            app:typeface="lato_regular"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/dp_13"/>

        <!-- Back button layout -->
        <LinearLayout
            android:id="@+id/my_results_challenge_back_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            >

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:src="@drawable/left_arrow"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/my_results_challenge_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Challenges"
                android:textColor="#3e8bd3"
                app:typeface="lato_bold"
                android:textSize="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_3"/>

        </LinearLayout>

        <!-- Line at last/bottom -->
        <View
            android:id="@+id/pool_row_v_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_results_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_results_declaration_rl"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <FrameLayout
            android:id="@+id/fab_fl_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fab_fl_flip"
            android:visibility="invisible">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_replay"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_below="@+id/fab_fl_flip"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/dp_18"
                android:scaleType="center"
                android:src="@drawable/replay_icon"
                app:backgroundTint="@color/colorMedium"
                app:elevation="@dimen/dp_0" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/powerup_replay_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@drawable/notification_count_bg"
                android:elevation="@dimen/dp_6"
                android:gravity="center"
                android:paddingRight="@dimen/dp_1"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="roboto_light" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fab_fl_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/results_fab_main"
            android:visibility="invisible">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_flip"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_below="@+id/results_fab_main"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/dp_18"
                android:scaleType="center"
                android:src="@drawable/powerup_flip"
                app:backgroundTint="@color/colorMedium"
                app:borderWidth="0dp"
                app:elevation="@dimen/dp_0" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/powerup_flip_count"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@drawable/notification_count_bg"
                android:elevation="@dimen/dp_6"
                android:gravity="center"
                android:paddingRight="@dimen/dp_1"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8"
                app:typeface="roboto_light" />

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/results_fab_main"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:clipToPadding="false"
            android:scaleType="center"
            android:src="@drawable/powerup_main_icon_white"
            android:visibility="gone"
            app:backgroundTint="@color/blackopacity"
            app:borderWidth="@dimen/dp_0"
            app:elevation="@dimen/dp_0" />


    </RelativeLayout>
</RelativeLayout>