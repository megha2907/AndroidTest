<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_results_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20" />


        <FrameLayout
            android:id="@+id/fab_fl_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_16"
            android:clipToPadding="false">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_main"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="bottom|end"
                android:scaleType="center"
                android:src="@drawable/powerup_main_icon_white"
                app:backgroundTint="@color/blackopacity"
                app:borderWidth="0dp"
                app:elevation="0dp" />

        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_results_toolbar">


    <FrameLayout
        android:id="@+id/fab_fl_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fab_fl_flip">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_replay"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fab_flip"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="center"
            android:src="@drawable/replay_icon"
            android:visibility="invisible"
            app:backgroundTint="@color/colorMedium"
            app:elevation="0dp" />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/powerup_replay_count"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_52"
            android:background="@drawable/notification_count_bg"
            android:elevation="6dp"
            android:gravity="center"
            android:paddingRight="@dimen/dp_1"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_8"
            android:visibility="invisible"
            app:typeface="roboto_light" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/fab_fl_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_flip"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fab_flip"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="center"
            android:src="@drawable/powerup_flip"
            android:visibility="invisible"
            app:backgroundTint="@color/colorMedium"
            app:elevation="0dp" />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/powerup_flip_count"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_52"
            android:background="@drawable/notification_count_bg"
            android:elevation="6dp"
            android:gravity="center"
            android:paddingRight="@dimen/dp_1"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_8"
            android:visibility="invisible"
            app:typeface="roboto_light" />

    </FrameLayout>

        </RelativeLayout>



    <RelativeLayout
        android:id="@+id/fab_container_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/my_results_toolbar"
        >

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_results_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />



