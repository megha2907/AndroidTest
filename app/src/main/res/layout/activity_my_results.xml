<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/my_results_toolbar_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_results_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            android:background="@drawable/toolbar_bg"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game Results"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/toolbar_match_stage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar_title"
                    android:layout_marginTop="@dimen/dim_2"
                    android:textColor="#a1afbe"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/my_results_rl_share_score"
                android:layout_width="@dimen/dp_110"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_20"
                android:visibility="gone">


                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/my_results_ll_share_score"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:layout_alignBaseline="@+id/my_results_iv_share_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/compare_btn_bg"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="SHARE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    app:typeface="roboto_condensed" />

                <ImageView
                    android:id="@+id/my_results_iv_share_icon"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_54"
                    android:paddingTop="@dimen/dp_5"
                    android:src="@drawable/share_btn_icon" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_results_toolbar_rl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Result declaration layout -->
            <LinearLayout
                android:id="@+id/my_results_declaration_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_result_join_contest_layout"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Heading text -->
                <LinearLayout
                    android:id="@+id/head_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/correct_icon"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_2"
                        android:src="@drawable/correct_done"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/my_results_declaration_tv_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text=""
                        android:textColor="@color/greenresults"
                        android:textSize="@dimen/dp_14"
                        app:typeface="lato_bold" />

                </LinearLayout>

                <!-- Content text -->
                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/my_results_declaration_tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#e1e1e1"
                    android:textSize="@dimen/dp_13"
                    app:typeface="lato_regular" />

                <!-- Back button layout -->
                <LinearLayout
                    android:id="@+id/my_results_challenge_back_btn_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_8"
                        android:src="@drawable/left_arrow" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/my_results_challenge_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="Back to Challenges"
                        android:textColor="#3e8bd3"
                        android:textSize="@dimen/dp_13"
                        app:typeface="lato_bold" />

                </LinearLayout>

                <!-- Line at last/bottom -->
                <View
                    android:id="@+id/pool_row_v_disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="#333333" />

            </LinearLayout>

            <!-- Information Layout -->
            <!--<RelativeLayout
                android:id="@+id/join_contest_rl"
                android:layout_width="match_parent"
