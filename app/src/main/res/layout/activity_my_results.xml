<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        android:id="@+id/my_results_toolbar"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:id="@+id/toolbar_title"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/white"/>

        <FrameLayout
            android:id="@+id/fab_fl_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_16"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_main"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="bottom|end"
                app:backgroundTint="@color/blackopacity"
                app:borderWidth="0dp"
                app:elevation="0dp"
                android:src="@drawable/powerup_main_icon_white"
                android:scaleType="center"
                />

        </FrameLayout>

    </android.support.v7.widget.Toolbar>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_results_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_below="@id/my_results_toolbar" />




    <FrameLayout
        android:id="@+id/fab_fl_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fab_fl_flip"
        android:layout_alignParentRight="true"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_replay"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/dp_18"
            android:visibility="invisible"
            app:backgroundTint="@color/colorMedium"
            android:layout_alignParentRight="true"
            app:elevation="0dp"
            android:layout_below="@+id/fab_flip"
            android:src="@drawable/replay_icon"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="centerCrop"
            />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/powerup_replay_count"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:textSize="@dimen/dp_8"
            android:textColor="@color/white"
            android:background="@drawable/notification_count_bg"
            app:typeface="roboto_light"
            android:elevation="6dp"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_gravity="right"
            android:visibility="invisible"
            android:gravity="center"
            android:paddingRight="@dimen/dp_1"
            />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/fab_fl_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_results_toolbar"
        android:layout_alignParentRight="true"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_flip"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/dp_18"
            android:visibility="invisible"
            app:backgroundTint="@color/colorMedium"
            android:layout_alignParentRight="true"
            app:elevation="0dp"
            android:layout_below="@+id/fab_flip"
            android:src="@drawable/flip_icon"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="centerCrop"
            />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/powerup_flip_count"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:textSize="@dimen/dp_8"
            android:textColor="@color/white"
            android:background="@drawable/notification_count_bg"
            app:typeface="roboto_light"
            android:elevation="6dp"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_gravity="right"
            android:visibility="invisible"
            android:gravity="center"
            android:paddingRight="@dimen/dp_1"
            />

    </FrameLayout>



</RelativeLayout>