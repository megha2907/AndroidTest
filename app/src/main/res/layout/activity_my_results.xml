<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myresult_root_layout">

<RelativeLayout
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar / Heading -->
        <RelativeLayout
            android:id="@+id/my_results_toolbar_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_results_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:background="@drawable/toolbar_bg"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game Results"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/toolbar_match_stage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar_title"
                        android:layout_marginTop="@dimen/dim_2"
                        android:textColor="#a1afbe"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/my_results_rl_share_score"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_20"
                    android:visibility="gone">


                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/my_results_ll_share_score"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignBaseline="@+id/my_results_iv_share_icon"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/compare_btn_bg"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:paddingLeft="@dimen/dp_20"
                        android:text="SHARE"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_12"
                        app:typeface="roboto_condensed" />

                    <ImageView
                        android:id="@+id/my_results_iv_share_icon"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_54"
                        android:paddingTop="@dimen/dp_5"
                        android:src="@drawable/share_btn_icon" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </RelativeLayout>

        <!-- Current rank strip -->
        <RelativeLayout
            android:id="@+id/rank_row_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30"
            android:background="#0f2a48"
            android:orientation="vertical">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_leaderboard_rank_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_20"
                android:text="RANK"
                android:textAllCaps="true"
                android:textColor="#a1afbe"
                android:textSize="@dimen/sp_10"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_leaderboard_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="NA"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:layout_toLeftOf="@+id/schedule_row_tv_leaderboard_total_players"
                app:typeface="lato_bold" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_leaderboard_total_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dim_20"
                android:textAllCaps="true"
                android:textColor="#a1afbe"
                android:textSize="@dimen/sp_10"
                android:layout_alignParentRight="true"
                app:typeface="lato_bold" />

        </RelativeLayout>


        <!-- Loading View -->
        <LinearLayout
            android:id="@+id/myResultsProgressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <in.sportscafe.nostragamus.utils.loadingAnim.LoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorColor="@color/loading_animation_color"
                />

        </LinearLayout>

        <!-- Content -->
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Information Layout -->
                <LinearLayout
                    android:id="@+id/my_result_join_contest_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/information_card_bg"
                    android:paddingBottom="@dimen/dim_16"
                    android:paddingTop="@dimen/dim_12"
                    android:paddingLeft="@dimen/dim_12"
                    android:paddingRight="@dimen/dim_12"
                    android:layout_margin="@dimen/dim_12"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/games_info_icon_imgView"
                                android:layout_width="@dimen/dim_36"
                                android:layout_height="@dimen/dim_36"
                                android:src="@drawable/win_more"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/dim_12">

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/games_info_heading_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bluecolor1"
                                android:text="NOW JOIN A CONTEST TO WIN PRIZES"
                                android:textAllCaps="true"
                                android:textSize="@dimen/sp_12"
                                app:typeface="lato_bold" />

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/games_info_msg_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey6"
                                android:text="Your predictions were saved. To continue playing with them, join a contest before the first game begins."
                                android:layout_marginTop="@dimen/dim_6"
                                android:textSize="@dimen/sp_11"
                                app:typeface="lato_regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/results_join_contest_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_40"
                        android:layout_marginTop="@dimen/dim_12"
                        android:background="@drawable/light_blue_button_selector"
                        android:onClick="onClick"
                        android:paddingBottom="@dimen/dp_4"
                        android:text="Join a Contest"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_regular"/>

                </LinearLayout>

                <!-- Result declaration layout -->
                <LinearLayout
                    android:id="@+id/my_results_declaration_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Heading text -->
                    <LinearLayout
                        android:id="@+id/head_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/correct_icon"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_2"
                            android:src="@drawable/correct_done"
                            android:visibility="gone" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/my_results_declaration_tv_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_marginRight="@dimen/dp_16"
                            android:text=""
                            android:textColor="@color/greenresults"
                            android:textSize="@dimen/dp_14"
                            app:typeface="lato_bold" />

                    </LinearLayout>

                    <!-- Content text -->
                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/my_results_declaration_tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#e1e1e1"
                        android:textSize="@dimen/dp_13"
                        app:typeface="lato_regular" />

                    <!-- Back button layout -->
                    <LinearLayout
                        android:id="@+id/my_results_challenge_back_btn_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_8"
                            android:src="@drawable/left_arrow" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/my_results_challenge_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="Back to Challenges"
                            android:textColor="#3e8bd3"
                            android:textSize="@dimen/dp_13"
                            app:typeface="lato_bold" />

                    </LinearLayout>

                    <!-- Line at last/bottom -->
                    <View
                        android:id="@+id/pool_row_v_disclaimer"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="#333333" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_results_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

