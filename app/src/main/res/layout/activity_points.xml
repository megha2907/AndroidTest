<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/points_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/htab_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/points_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@android:color/transparent"
            android:src="@drawable/back_icon_grey"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_20"
            />


                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/points_group_icon"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_toRightOf="@+id/points_back_icon"
                    android:scaleType="fitXY"
                    app:defaultImage="@drawable/placeholder_icon"
                   />

        <RelativeLayout
            android:id="@+id/points_rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/points_group_icon"
            android:layout_marginTop="@dimen/dp_15">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/points_sp_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="CRICKET"
                android:textSize="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                app:typeface="lato_bold"/>


        <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/points_sp_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_below="@+id/points_sp_name"
            style="@style/mySpinnerItemStyle"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_20"
            android:popupBackground="@android:color/white"
            android:visibility="gone"
        />

        </RelativeLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/points_tab_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                app:selected_textSize="@dimen/dp_14"
                app:selected_typeface="lato_bold"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/tabcolor"
                app:tabIndicatorHeight="@dimen/dp_4"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/silver_chalice"
                app:unselected_textSize="@dimen/dp_12"
                app:unselected_typeface="lato_hairline"
                android:layout_gravity="center_horizontal|top"
                android:layout_below="@+id/points_rl2"
                android:layout_marginTop="@dimen/dp_10"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                />

                <TableRow
                    android:id="@+id/points_tr_column"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/points_tab_tl"

                    android:background="@color/black">

                    <TextView
                        android:id="@+id/points_tv_pos"
                        android:text="Pos"
                        android:layout_weight="0.90"
                        android:textColor="@color/textcolorlight"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/points_tv_player"
                        android:text="Player"
                        android:layout_weight="0.68"
                        android:textColor="@color/textcolorlight"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/points_tv_played"
                        android:text="Played"
                        android:layout_weight="0.9"
                        android:textColor="@color/textcolorlight"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/dp_10"/>


                    <TextView
                        android:id="@+id/points_tv_points"
                        android:text="Points"
                        android:layout_weight="0.9"
                        android:textColor="@color/textcolorlight"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/dp_0"/>

                </TableRow>


            </RelativeLayout>


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <in.sportscafe.nostragamus.module.common.CustomViewPager
        android:id="@+id/points_tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/points_appbar"/>

</RelativeLayout>