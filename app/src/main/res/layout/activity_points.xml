            <!--/>-->

        <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/points_sp_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_below="@+id/points_sp_name"
            style="@style/mySpinnerItemStyle"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_20"
            android:popupBackground="@android:color/white"
            android:visibility="gone"
        />

        </RelativeLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/points_tab_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                app:selected_textSize="@dimen/dp_14"
                app:selected_typeface="lato_bold"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/tabcolor"
                app:tabIndicatorHeight="@dimen/dp_2"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/silver_chalice"
                app:unselected_textSize="@dimen/dp_12"
                app:unselected_typeface="lato_hairline"
                android:layout_gravity="center_horizontal|top"
                android:layout_below="@+id/points_rl2"
                android:layout_marginTop="@dimen/dp_10"
               />

                <TableRow
                    android:id="@+id/points_tr_column"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/points_tab_tl"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/points_tv_pos"
                        android:text="pos"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/points_tv_player"
                        android:text="Player"
                        android:layout_weight="0.65"
                        android:textColor="@color/white"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/points_tv_played"
                        android:text="pld"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"/>


                    <TextView
                        android:id="@+id/points_tv_points"
                        android:text="pts"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"/>

                </TableRow>


            </RelativeLayout>




