<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/points_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/htab_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@drawable/points_gradient_bg"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">


            <ImageButton
            android:id="@+id/points_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@android:color/transparent"
            android:src="@drawable/back_icon_grey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:padding="@dimen/dp_10"
            />


                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/points_group_icon"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/points_back_icon"
                    android:scaleType="fitXY"
                    app:defaultImage="@drawable/placeholder_icon"
                   />


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/points_sp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cricket"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:layout_toRightOf="@+id/points_group_icon"
                android:layout_toLeftOf="@+id/sorting_tv"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_centerVertical="true"
                app:typeface="roboto_condensed_bold"/>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/sorting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    android:layout_toLeftOf="@+id/points_sp_sport"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    app:typeface="roboto_condensed"/>


                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/points_sp_sport"
                    style="@style/mySpinnerItemStyle"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_18"
                    android:overlapAnchor="false"
                    android:clipToPadding="false"
                    />

            </RelativeLayout>

            <in.sportscafe.nostragamus.module.common.CustomTabLayout
                android:id="@+id/points_tab_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                app:selected_textSize="@dimen/dp_14"
                app:selected_typeface="roboto_condensed"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/tabcolor"
                app:tabIndicatorHeight="@dimen/dp_4"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/silver_chalice"
                app:unselected_textSize="@dimen/dp_14"
                app:unselected_typeface="roboto_condensed"
                android:layout_gravity="center_horizontal|top"
                android:layout_below="@+id/rl3"
                app:tabTextAppearance="@style/LeaderBoardTabLayoutTextAppearance"
                android:elevation="@dimen/dp_4"
                />

                <TableRow
                    android:id="@+id/points_tr_column"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/points_tab_tl"
                    android:visibility="gone"
                    android:background="@color/black">

                    <TextView
                        android:id="@+id/points_tv_pos"
                        android:text="Pos"
                        android:layout_weight="0.90"
                        android:textColor="@color/textcolorlight"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/points_tv_player"
                        android:text="Player"
                        android:layout_weight="0.68"
                        android:textColor="@color/textcolorlight"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/points_tv_played"
                        android:text="Played"
                        android:layout_weight="0.9"
                        android:textColor="@color/textcolorlight"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/dp_10"/>


                    <TextView
                        android:id="@+id/points_tv_points"
                        android:text="Points"
                        android:layout_weight="0.9"
                        android:textColor="@color/textcolorlight"
                        android:padding="@dimen/dp_10"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/dp_0"/>

                </TableRow>


            </RelativeLayout>


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <in.sportscafe.nostragamus.module.common.CustomViewPager
        android:id="@+id/points_tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/points_appbar" />

</RelativeLayout>