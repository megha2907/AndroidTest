<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/points_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/htab_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/points_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_icon_grey"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <Button
            android:id="@+id/points_group_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/powerups_count_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/points_back_icon"
            android:text="G"
           />

        <RelativeLayout
            android:id="@+id/points_rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/points_group_icon"
            android:layout_marginTop="@dimen/dp_15">

        <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/points_sp_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            style="@style/mySpinnerItemStyle"
            android:popupBackground="@android:color/white"
            />

        <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/points_sp_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_below="@+id/points_sp_group"
            style="@style/mySpinnerItemStyle"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:popupBackground="@android:color/white"
        />

        </RelativeLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/points_tab_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                app:selected_textSize="@dimen/dp_14"
                app:selected_typeface="lato_bold"
                app:tabBackground="@color/colorMedium"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="@dimen/dp_2"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/silver_chalice"
                app:unselected_textSize="@dimen/dp_12"
                app:unselected_typeface="lato_hairline"
                android:layout_gravity="center_horizontal|top"
                android:layout_below="@+id/points_rl2"
               />

        </RelativeLayout>




