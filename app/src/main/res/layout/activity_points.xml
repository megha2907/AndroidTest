<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/points_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/htab_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/points_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_icon_grey"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            />


                <ImageView
                    android:id="@+id/points_group_icon"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder_icon"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_toRightOf="@+id/points_back_icon"
                    android:scaleType="fitXY"
                   />

        <RelativeLayout
            android:id="@+id/points_rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/points_group_icon"
            android:layout_marginTop="@dimen/dp_15">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/points_sp_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="CRICKET"
                android:textSize="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                app:typeface="lato_bold"/>

        <!--<android.support.v7.widget.AppCompatSpinner-->
