<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/htab_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/points_user_rl">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/points_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/htab_collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/points_gradient_bg"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45">

                        <ImageButton
                            android:id="@+id/points_back_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_6"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/dp_10"
                            android:src="@drawable/back_icon_grey" />


                        <com.jeeva.android.widgets.HmImageView
                            android:id="@+id/points_group_icon"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_marginRight="@dimen/dp_8"
                            android:layout_toRightOf="@+id/points_back_icon"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            app:defaultImage="@drawable/left_placeholder_icon" />


                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/points_sp_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_12"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_14"
                            app:typeface="roboto_condensed" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/points_group_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_12"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_14"
                            android:visibility="gone"
                            app:typeface="roboto_condensed" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/points_group_sub_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/points_group_heading"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_12"
                            android:visibility="gone"
                            app:typeface="lato_regular" />


                        <RelativeLayout
                            android:id="@+id/all_challenges_row_rl_timer"
                            android:layout_width="@dimen/dp_220"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/points_sp_name"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:visibility="gone">

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_6"
                                android:layout_toLeftOf="@+id/all_challenges_row_btn_days_left"
                                android:text="Ends in"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_12"
                                app:typeface="lato_regular" />

                            <com.jeeva.android.widgets.customfont.CustomButton
                                android:id="@+id/all_challenges_row_btn_days_left"
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_25"
                                android:layout_marginRight="@dimen/dp_6"
                                android:layout_toLeftOf="@+id/all_challenges_row_btn_hours_left"
                                android:background="@drawable/grey_leaderboard_border_btn_bg"
                                android:text="0d"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_10"
                                app:typeface="lato_regular" />

                            <com.jeeva.android.widgets.customfont.CustomButton
                                android:id="@+id/all_challenges_row_btn_hours_left"
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_25"
                                android:layout_marginRight="@dimen/dp_6"
                                android:layout_toLeftOf="@+id/all_challenges_row_btn_mins_left"
                                android:background="@drawable/grey_leaderboard_border_btn_bg"
                                android:text="0h"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_10"
                                app:typeface="lato_regular" />

                            <com.jeeva.android.widgets.customfont.CustomButton
                                android:id="@+id/all_challenges_row_btn_mins_left"
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_25"
                                android:layout_marginRight="@dimen/dp_6"
                                android:layout_toLeftOf="@+id/all_challenges_row_btn_secs_left"
                                android:background="@drawable/grey_leaderboard_border_btn_bg"
                                android:text="0m"
                                android:textAllCaps="false"
                                android:textColor="@color/white_80"
                                android:textSize="@dimen/dp_10"
                                app:typeface="lato_regular" />

                            <com.jeeva.android.widgets.customfont.CustomButton
                                android:id="@+id/all_challenges_row_btn_secs_left"
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_25"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@drawable/grey_leaderboard_border_btn_bg"
                                android:text="0s"
                                android:textAllCaps="false"
                                android:textColor="@color/white_80"
                                android:textSize="@dimen/dp_10"
                                app:typeface="lato_regular" />

                        </RelativeLayout>


                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/points_sp_sport"
                            style="@style/mySpinnerItemStyle"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_18"
                            android:clipToPadding="false"
                            android:overlapAnchor="false"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <in.sportscafe.nostragamus.module.common.CustomTabLayout
                        android:id="@+id/points_tab_tl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/rl3"
                        android:layout_gravity="center_horizontal|top"
                        android:elevation="@dimen/dp_4"
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="pin"
                        app:selected_textSize="@dimen/dp_12"
                        app:selected_typeface="lato_regular"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@color/tabcolor_blue"
                        app:tabIndicatorHeight="@dimen/dp_3"
                        app:tabMode="scrollable"
                        app:tabSelectedTextColor="@color/white"
                        app:tabTextAppearance="@style/LeaderBoardTabLayoutTextAppearance"
                        app:tabTextColor="@color/white_60"
                        app:unselected_textSize="@dimen/dp_12"
                        app:unselected_typeface="lato_regular" />

                    <TableRow
                        android:id="@+id/points_tr_column"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/points_tab_tl"
                        android:background="@color/black"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/points_tv_pos"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_weight="0.90"
                            android:gravity="left"
                            android:text="Pos"
                            android:textColor="@color/textcolorlight" />

                        <TextView
                            android:id="@+id/points_tv_player"
                            android:layout_weight="0.68"
                            android:gravity="left"
                            android:padding="@dimen/dp_10"
                            android:text="Player"
                            android:textColor="@color/textcolorlight" />

                        <TextView
                            android:id="@+id/points_tv_played"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="0.9"
                            android:gravity="left"
                            android:padding="@dimen/dp_10"
                            android:text="Played"
                            android:textColor="@color/textcolorlight" />


                        <TextView
                            android:id="@+id/points_tv_points"
                            android:layout_marginLeft="@dimen/dp_0"
                            android:layout_weight="0.9"
                            android:gravity="left"
                            android:padding="@dimen/dp_10"
                            android:text="Points"
                            android:textColor="@color/textcolorlight" />

                    </TableRow>


                </RelativeLayout>


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/points_sorting_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/points_appbar"
            android:background="@color/black"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/sorting_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dim_12"
                android:layout_marginTop="@dimen/dim_16"
                android:text="Sort By"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="roboto_condensed" />

            <RelativeLayout
                android:id="@+id/sorting_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sorting_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_16"
                android:clickable="false">

                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/sort_by_accuracy_btn"
                    android:layout_width="@dimen/dim_110"
                    android:layout_height="@dimen/dim_28"
                    android:layout_toRightOf="@+id/sort_by_powerups_btn"
                    android:background="@drawable/sort_selection_color"
                    android:drawableLeft="@drawable/accuracy_selection_icon"
                    android:onClick="onClick"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_6"
                    android:text="Accuracy"
                    android:textColor="@drawable/sort_tv_selector"
                    android:textSize="@dimen/sp_10"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/sort_by_total_points_btn"
                    android:layout_width="@dimen/dim_110"
                    android:layout_height="@dimen/dim_28"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/sort_by_accuracy_btn"
                    android:background="@drawable/sort_selection_color"
                    android:drawableLeft="@drawable/points_selection_icon"
                    android:onClick="onClick"
                    android:paddingLeft="@dimen/dim_18"
                    android:paddingRight="@dimen/dim_20"
                    android:text="Points"
                    android:textColor="@drawable/sort_tv_selector"
                    android:textSize="@dimen/sp_10"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/sort_by_powerups_btn"
                    android:layout_width="@dimen/dim_110"
                    android:layout_height="@dimen/dim_28"
                    android:background="@drawable/sort_selection_color"
                    android:drawableLeft="@drawable/powerups_selection_icon"
                    android:onClick="onClick"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_6"
                    android:text="Powerups"
                    android:textColor="@drawable/sort_tv_selector"
                    android:textSize="@dimen/sp_10"
                    app:typeface="lato_regular" />

                <!--<com.jeeva.android.widgets.customfont.CustomButton-->
                <!--android:id="@+id/sorting_switch_seek"-->
                <!--android:layout_width="@dimen/dp_100"-->
                <!--android:layout_height="@dimen/dp_32"-->
                <!--android:background="@drawable/toggle_sorting_btn_bg" />-->


            </RelativeLayout>


            <in.sportscafe.nostragamus.module.common.CustomViewPager
                android:id="@+id/points_tab_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/sorting_rl" />

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <View
        android:id="@+id/gradient_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_above="@+id/points_user_rl"
        android:background="@drawable/gradient_above_hometab"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/points_user_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@drawable/points_user_blue_bg"
        android:onClick="onClick"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/leaderboard_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6">


            <View
                android:id="@+id/leaderboard_view_user"
                android:layout_width="@dimen/dp_3"
                android:layout_height="fill_parent"
                android:background="@color/btn_powerup_screen_color"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/leaderboard_iv_status"
                android:layout_width="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/status_arrow_down" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_tv_rank"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_weight="1.2"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                app:typeface="roboto_condensed" />


            <in.sportscafe.nostragamus.module.common.RoundImage
                android:id="@+id/leaderboard_iv_user_img"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/left_placeholder_icon" />

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="2.5">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/leaderboard_tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_13"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/leaderboard_tv_played"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/leaderboard_tv_user_name"
                    android:textColor="@color/white_70"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_regular" />

            </RelativeLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_tv_match_points"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/powerups_white_icon"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="roboto_condensed" />


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_tv_accuracy"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/leaderboards_accuracy_icon"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="roboto_condensed" />


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/leaderboard_tv_points"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/points_white_icon"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="roboto_condensed" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>