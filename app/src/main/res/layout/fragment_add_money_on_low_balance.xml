<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="in.sportscafe.nostragamus.module.navigation.wallet.addMoney.lowBalance.AddMoneyOnLowBalanceFragment">

    <!-- Wallet Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="@dimen/dp_240"
        android:background="@drawable/card_bg_img_small">

        <!-- Header layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="@dimen/dp_60">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:src="@drawable/back_icon_grey"
                android:padding="@dimen/dp_8"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_16"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Balance!"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:typeface="lato_regular"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Balance details row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_60"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/bal_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Wallet Balance"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                app:typeface="lato_regular" />

            <ImageView
                android:id="@+id/navigation_app_update_available_imageView"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/bal_textView"
                android:src="@drawable/app_update_red_icn"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/low_bal_amount_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="₹ 0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:typeface="lato_black" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="#314f89"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"/>

        <!-- Contest details -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_60"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/low_money_product_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Contest Entry Fee"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/low_bal_contest_entry_fee_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="₹ 0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:typeface="lato_black" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="#314f89"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"/>

        <!-- msg text -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_60"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/low_bal_details_msg_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                app:typeface="lato_regular" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/add_money_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
