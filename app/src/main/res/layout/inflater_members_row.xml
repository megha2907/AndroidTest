<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    android:background="@color/black">

    <in.sportscafe.nostragamus.module.common.RoundImage
        android:id="@+id/members_iv_photo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_20" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/members_tv_admin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Group Admin"
        android:textColor="@color/textcolorlight"
        android:textSize="@dimen/dp_14"
        android:layout_toRightOf="@+id/members_tv_name"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/members_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/members_iv_photo"
        android:maxLines="1"
        android:textSize="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:textColor="@color/white"/>


</RelativeLayout>