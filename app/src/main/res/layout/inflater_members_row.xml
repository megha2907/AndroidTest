<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15"
    android:background="@drawable/gradient_bg">

    <in.sportscafe.scgame.module.common.RoundImage
        android:id="@+id/members_iv_photo"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_20" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/members_tv_admin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Group Admin"
        android:textColor="@color/greencolor"
        android:textSize="@dimen/dp_15"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/members_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/members_tv_admin_label"
        android:layout_toRightOf="@id/members_iv_photo"
        android:maxLines="1"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/white"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/members_tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/members_tv_name"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toLeftOf="@id/members_tv_admin_label"
        android:layout_toRightOf="@id/members_iv_photo"
        android:maxLines="1"
        android:textSize="@dimen/dp_13"
        android:textColor="@color/white"/>

</RelativeLayout>