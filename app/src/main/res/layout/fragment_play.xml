<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:id="@+id/play_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/play_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp_10"
            android:text="Back to \n Timeline"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_18"
            android:visibility="gone"/>

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/play_btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="bottom|center_horizontal"
            android:padding="@dimen/dp_10"
            android:text="Skip"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/play_fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/play_rl_bottom" />

</RelativeLayout>