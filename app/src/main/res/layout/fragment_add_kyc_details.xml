<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="in.sportscafe.nostragamus.module.prediction.copyAnswer.CopyAnswerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <!-- Screen -->
        <ScrollView
            android:id="@+id/add_kyc_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:layout_alignParentTop="true"
            android:background="@color/black"
            android:layout_above="@+id/bottom_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/dim_15"
                android:paddingBottom="@dimen/dim_40">

                <LinearLayout
                    android:id="@+id/kyc_benefits_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dim_21"
                    android:paddingRight="@dimen/dim_21"
                    android:visibility="visible">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/kyc_benefits_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Upgrade Benefits"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_13"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dim_9"
                            android:layout_height="@dimen/dim_9"
                            android:layout_marginTop="@dimen/dim_3"
                            android:src="@drawable/star_icon" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/kyc_benefits_text_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="@dimen/dp_1.5"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_12"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_17"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/dim_9"
                            android:layout_height="@dimen/dim_9"
                            android:layout_marginTop="@dimen/dim_3"
                            android:src="@drawable/star_icon" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/kyc_benefits_text_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:lineSpacingExtra="@dimen/dp_1.5"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_12"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/add_kyc_details_failed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dim_21"
                    android:paddingRight="@dimen/dim_21"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dim_10"
                            android:layout_height="@dimen/dim_10"
                            android:src="@drawable/warning_icon"
                            android:layout_marginTop="@dimen/dim_2"/>

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/dim_7"
                            android:gravity="left"
                            android:text="KYC Rejected"
                            android:textColor="@color/radical_red"
                            android:textSize="@dimen/sp_12"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/add_kyc_details_failed_status_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dim_10"
                        android:gravity="left"
                        android:lineSpacingExtra="@dimen/dp_1.5"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_kyc_details_verification_status_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dim_21"
                    android:paddingRight="@dimen/dim_21"
                    android:visibility="gone">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/add_kyc_details_verification_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:textColor="@color/blue_008ae1"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_23"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_21">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/add_kyc_details_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/dim_3"
                        android:text="Name*"
                        android:textColor="@color/white_999999"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_bold" />

                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/add_kyc_details_name_edittext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@drawable/blue_selected"
                        android:focusableInTouchMode="true"
                        android:hint="Enter Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dim_15"
                        android:paddingLeft="@dimen/dim_3"
                        android:paddingRight="0dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_606060"
                        android:textSize="@dimen/sp_15"
                        app:typeface="lato_regular"/>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/add_kyc_details_name_error_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dim_2"
                        android:text="Please provide your name"
                        android:textColor="@color/radical_red"
                        android:textSize="@dimen/sp_10"
                        android:visibility="gone"
                        app:typeface="lato_regular" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_24"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_21">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/add_kyc_details_pan_number_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/dim_3"
                        android:text="PAN Number*"
                        android:textColor="@color/white_999999"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_bold" />

                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/add_kyc_details_pan_number_edittext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@drawable/blue_selected"
                        android:focusableInTouchMode="true"
                        android:hint="10 digit PAN"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:nextFocusForward="@+id/add_kyc_details_upload_pan_layout"
                        android:paddingBottom="@dimen/dim_15"
                        android:paddingLeft="@dimen/dim_3"
                        android:paddingRight="0dp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_606060"
                        android:textSize="@dimen/sp_15"
                        app:typeface="lato_regular"/>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/add_kyc_details_pan_number_error_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dim_2"
                        android:text="Please provide a correct PAN number"
                        android:textColor="@color/radical_red"
                        android:textSize="@dimen/sp_10"
                        android:visibility="gone"
                        app:typeface="lato_regular" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_24"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_21">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/add_kyc_details_dob_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/dim_3"
                        android:text="Date of Birth*"
                        android:textColor="@color/white_999999"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_bold" />

                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/add_kyc_details_dob_edittext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@drawable/blue_selected"
                        android:focusable="false"
                        android:hint="DD / MM / YY"
                        android:imeOptions="actionDone"
                        android:nextFocusForward="@id/about_nostragamus_layout"
                        android:paddingBottom="@dimen/dim_15"
                        android:paddingLeft="@dimen/dim_3"
                        android:paddingRight="0dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_606060"
                        android:textSize="@dimen/sp_15"
                        app:typeface="lato_regular"/>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/add_kyc_details_dob_error_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dim_2"
                        android:inputType="date"
                        android:text="Please provide your date of birth"
                        android:textColor="@color/radical_red"
                        android:textSize="@dimen/sp_10"
                        android:visibility="gone"
                        app:typeface="lato_regular" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/add_kyc_details_upload_pan_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_24"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_21">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/add_kyc_details_upload_pan_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/dim_3"
                        android:text="PAN Card*"
                        android:textColor="@color/white_999999"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_bold" />

                    <ImageView
                        android:id="@+id/add_kyc_details_pan_uploaded_icon"
                        android:layout_width="@dimen/dim_14"
                        android:layout_height="@dimen/dim_14"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim_7"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/add_kyc_details_upload_pan_textview"
                        android:src="@drawable/green_tick_circle" />

                    <RelativeLayout
                        android:id="@+id/add_kyc_details_upload_pan_btn"
                        android:layout_width="@dimen/dim_80"
                        android:layout_height="@dimen/dim_24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/green_border_box">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="@dimen/dim_3"
                            android:text="Upload"
                            android:textColor="@drawable/green_tv_selector"
                            android:textSize="@dimen/sp_10"
                            app:typeface="lato_regular" />

                    </RelativeLayout>

                </RelativeLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/add_kyc_details_upload_pan_error_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dim_24"
                    android:layout_marginTop="@dimen/dim_1"
                    android:text="Please upload a pan card photo"
                    android:textColor="@color/radical_red"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone"
                    app:typeface="lato_regular" />

                <RelativeLayout
                    android:id="@+id/add_kyc_details_show_pan_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_21"
                    android:layout_marginRight="@dimen/dim_21"
                    android:layout_marginTop="@dimen/dim_10"
                    android:paddingBottom="@dimen/dim_10"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/add_kyc_details_show_pan_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_180"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:padding="@dimen/dim_1"
                        android:background="@drawable/green_border_box"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <!-- save button -->
        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dim_21"
            android:paddingRight="@dimen/dim_21"
            android:background="@color/black"
            android:paddingBottom="@dimen/dim_15">

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/add_kyc_details_save_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_42"
                android:background="@drawable/btn_refer_bg"
                android:paddingBottom="@dimen/dim_3"
                android:text="Save Details"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:typeface="lato_bold" />

        </RelativeLayout>

        <in.sportscafe.nostragamus.utils.loadingAnim.LoadingIndicatorView
            android:id="@+id/add_kyc_loading_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:indicatorColor="@color/loading_animation_color" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
