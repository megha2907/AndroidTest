<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_12"
    android:paddingLeft="@dimen/dp_18"
    android:paddingRight="@dimen/dp_18"
    android:paddingTop="@dimen/dp_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/powerup_iv_icon"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/powerup_iv_icon"
            android:orientation="vertical">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/powerup_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Audience Poll"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_light" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/powerup_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="See how your friends answered"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_11"
                app:typeface="lato_regular" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>