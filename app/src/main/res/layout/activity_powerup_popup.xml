<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_350"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20">

    <LinearLayout
        android:id="@+id/popup_ll_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@drawable/popup_heading_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/popup_tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/challenge_leaderboard_icon"
            android:drawablePadding="@dimen/dp_5"
            android:text="Powerup Help"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            app:typeface="lato_bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_ll_powerup_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_ll_heading_layout"
        android:background="@drawable/popup_content_bg"
        android:divider="@drawable/grey_divider_padding"
        android:orientation="vertical"
        android:showDividers="middle">

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/popup_btn_action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@drawable/popup_action_btn_bg"
            android:gravity="center"
            android:minWidth="@dimen/dp_72"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="Ok, got it"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            app:typeface="lato_bold" />

    </LinearLayout>

</RelativeLayout><!--
</RelativeLayout>-->
