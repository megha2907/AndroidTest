            <android.support.v7.widget.Toolbar
                android:id="@+id/edit_profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMedium"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:visibility="gone">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/edit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16"
                    app:typeface="lato_regular" />

            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/edit_disclaimer_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_et_nickname_new"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:buttonTint="@color/line_separator_two"
                android:checked="false"
                android:gravity="left"
                android:paddingLeft="@dimen/dp_2"
                android:paddingTop="@dimen/dp_2"
                android:text="@string/profile_disclaimer"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_12"
                android:visibility="gone"
                app:typeface="lato_regular" />

        </LinearLayout>

    </ScrollView>

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/edit_btn_done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:background="@drawable/flat_blue_btn_selector"
        android:onClick="onClick"
        android:text="Update Details"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/blue_button_text"
        app:typeface="lato_regular" />

</RelativeLayout>

