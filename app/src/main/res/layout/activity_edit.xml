            <!-- Referral code -->
            <LinearLayout
                android:id="@+id/edit_profile_referral_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Enter a Referral Code"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_6">

                    <ImageView
                        style="@style/EditTextIconStyle"
                        android:src="@drawable/referral_edittext_icon"
                        android:padding="@dimen/dim_12"/>

                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/edit_profile_tv_referral_code_editText"
                        style="@style/NewEditTextStyle"
                        android:inputType="text" />

                </LinearLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/edit_profile_referral_error_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="edit_profile_referral_code_error_text"
                    android:textColor="@color/radical_red"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular"
                    android:visibility="gone"/>

            </LinearLayout>

