<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_profile_toolbar"
        android:layout_marginTop="@dimen/dp_14">

        <in.sportscafe.nostragamus.module.common.RoundImage
            android:id="@+id/edit_iv_user_image"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_128"
            android:layout_centerHorizontal="true"
            android:alpha="0.9"
            android:background="@android:color/transparent"
            android:onClick="showImagePopup"
            android:scaleType="centerCrop"
            app:defaultImage="@drawable/left_placeholder_icon" />

        <ImageView
            android:id="@+id/edit_iv_camera_image"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_46"
            android:alpha="0.8"
            android:onClick="showImagePopup"
            android:src="@drawable/camera_icon" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/edit_tv_upload_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_iv_user_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:text="Tap to upload your profile pic"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_12"
            android:visibility="gone"
            app:typeface="lato_regular" />

    </RelativeLayout>


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/edit_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="Enter a Username"
        android:textColor="@color/white_60"
        android:textSize="@dimen/dp_14"
        android:visibility="gone"
        app:typeface="lato_regular" />

    <com.jeeva.android.widgets.ShadowLayout
        android:id="@+id/edit_et_shadow_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_tv_nickname"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_4"
        android:visibility="gone"
        app:sl_cornerRadius="@dimen/dp_5"
        app:sl_fillColor="@android:color/transparent"
        app:sl_shadowRadius="@dimen/dp_4">

        <com.jeeva.android.widgets.customfont.CustomEditText
            android:id="@+id/edit_et_nickname"
            style="@style/EditTextStyle"
            android:imeOptions="actionDone"
            android:inputType="text" />

    </com.jeeva.android.widgets.ShadowLayout>

    <in.sportscafe.nostragamus.module.common.NostraEditText
        android:id="@+id/edit_et_nickname_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:boxStyle="@style/CustomEditTextStyle"
        app:errorStyle="@style/EditTextErrorStyle"
        app:errorText="Show your error here"
        app:hintStyle="@style/EditTextHintStyle"
        app:hintText="Enter a Username" />

    <!--<in.sportscafe.nostragamus.module.common.NostraEditText
        android:id="@+id/edit_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_et_nickname_new"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:boxStyle="@style/CustomEditTextEmailStyle"
        app:errorStyle="@style/EditTextErrorStyle"
        app:errorText="Show your error here"
        android:visibility="visible"
        app:hintStyle="@style/EditTextHintStyle"
        app:hintText="Enter email Id" />-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/edit_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="lato_regular" />

    </android.support.v7.widget.Toolbar>

    <com.jeeva.android.widgets.customfont.CustomCheckbox
        android:id="@+id/edit_disclaimer_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_et_nickname_new"
        android:textColor="@color/white_60"
        android:buttonTint="@color/white_90"
        android:text="@string/profile_disclaimer"
        android:paddingTop="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textSize="@dimen/dp_12"
        android:gravity="left"
        app:typeface="lato_regular"
        android:visibility="gone"/>

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/edit_btn_done"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/blue_button_height"
        android:layout_below="@+id/edit_disclaimer_checkbox"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/tournament_ready_btn_bg"
        android:onClick="onClick"
        android:text="UPDATE"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/blue_button_text"
        app:typeface="roboto_condensed" />

</RelativeLayout>