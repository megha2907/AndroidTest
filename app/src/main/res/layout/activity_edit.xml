<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_profile_toolbar"
        android:layout_marginTop="@dimen/dp_14">

        <in.sportscafe.nostragamus.module.common.RoundImage
            android:id="@+id/edit_iv_user_image"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_128"
            android:layout_centerHorizontal="true"
            android:alpha="0.9"
            android:background="@android:color/transparent"
            android:onClick="showImagePopup"
            app:defaultImage="@drawable/placeholder_icon"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/edit_iv_camera_image"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_46"
            android:alpha="0.8"
            android:onClick="showImagePopup"
            android:src="@drawable/camera_icon" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/edit_tv_upload_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_iv_user_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:text="Tap to upload your profile pic"
            android:textColor="@color/white_60"
            android:textSize="@dimen/dp_12"
            android:visibility="gone"
            app:typeface="lato_regular" />

    </RelativeLayout>


    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/edit_btn_done"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/blue_button_height"
        android:layout_below="@+id/edit_et_shadow_nickname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/tournament_ready_btn_bg"
        android:onClick="onClick"
        android:text="UPDATE"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/blue_button_text"
        app:typeface="roboto_condensed" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/edit_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="Enter a Username"
        android:textColor="@color/white_60"
        android:textSize="@dimen/dp_14"
        app:typeface="lato_regular" />

    <com.jeeva.android.widgets.ShadowLayout
        android:id="@+id/edit_et_shadow_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_tv_nickname"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_4"
        app:sl_cornerRadius="@dimen/dp_5"
        app:sl_fillColor="@android:color/transparent"
        app:sl_shadowRadius="@dimen/dp_4">

        <com.jeeva.android.widgets.customfont.CustomEditText
            android:id="@+id/edit_et_nickname"
            style="@style/EditTextStyle"
            android:inputType="text"
            android:imeOptions="actionDone"/>

    </com.jeeva.android.widgets.ShadowLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/edit_tv_error_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edit_et_shadow_nickname"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/white_60"
        android:textSize="@dimen/dp_12"
        android:visibility="gone"
        app:typeface="lato_regular" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/edit_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" >

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:typeface="lato_regular" />

    </android.support.v7.widget.Toolbar>

    <!--<com.jeeva.android.widgets.customfont.CustomEditText
        android:id="@+id/edit_et_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_et_name"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="top"
        android:hint="About"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLength="50" />-->

</RelativeLayout>