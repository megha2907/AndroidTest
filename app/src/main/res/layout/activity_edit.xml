<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_below="@+id/edit_tv"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/colorBackground">

        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/edit_iv_user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="showImagePopup"
            android:scaleType="centerCrop"
            android:alpha="0.6"
            app:defaultImage="@drawable/placeholder_icon" />

        <ImageView
            android:id="@+id/edit_iv_camera_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="showImagePopup"
            android:src="@drawable/camera_icon" />

    </RelativeLayout>


    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/edit_btn_done"
        android:layout_width="@dimen/blue_button_width"
        android:layout_height="@dimen/blue_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/tournament_ready_btn_bg"
        android:onClick="onClick"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/blue_button_text"
        app:typeface="roboto_condensed" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_edit_et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        app:errorTextAppearance="@style/error_appearance"
        app:theme="@style/TextLabel">

        <com.jeeva.android.widgets.customfont.CustomEditText
            android:id="@+id/edit_et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Username"
            android:imeOptions="actionDone"
            android:maxLength="15"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="lato_regular" />
    </android.support.design.widget.TextInputLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:textColor="@color/textcolorlight"
        android:textSize="@dimen/dp_16"
        app:typeface="lato_regular" />

    <!--<com.jeeva.android.widgets.customfont.CustomEditText
        android:id="@+id/edit_et_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_et_name"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="top"
        android:hint="About"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLength="50" />-->


    <ImageButton
        android:id="@+id/edit_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:padding="@dimen/dp_10"
        android:src="@drawable/back_icon_grey" />


</RelativeLayout>