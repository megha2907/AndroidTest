            <!-- UserName  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="Enter a Username"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_6">

                    <ImageView
                        style="@style/EditTextIconStyle"
                        android:src="@drawable/profile_edittext_icon"
                        android:padding="@dimen/dim_12"/>

                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/edit_et_nickname_new"
                        style="@style/NewEditTextStyle"
                        android:inputType="textCapSentences" />

                </LinearLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/edit_profile_username_error_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="Please provide IFSC code"
                    android:textColor="@color/radical_red"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular"
                    android:visibility="gone"/>

            </LinearLayout>

