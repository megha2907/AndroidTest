<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:paddingTop="@dimen/dim_50"
    android:paddingLeft="@dimen/dim_20"
    android:paddingRight="@dimen/dim_20">

    <ImageView
        android:layout_width="@dimen/dim_240"
        android:layout_height="@dimen/dim_240"
        android:src="@drawable/empty_recent_activity_img"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:text="No Recent Activity!"
        android:textSize="@dimen/sp_15"
        app:typeface="lato_regular"
        android:layout_marginTop="@dimen/dim_10"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/grey6"
        android:text="This is where you receive various app announcements, result information and shop sales / promotions. Please check back later, for updates"
        android:textSize="@dimen/sp_12"
        app:typeface="lato_regular"
        android:layout_marginTop="@dimen/dim_8"/>

</LinearLayout>