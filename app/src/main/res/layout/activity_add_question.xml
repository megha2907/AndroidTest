<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_question_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <ScrollView
        android:id="@+id/add_question_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_question_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:focusableInTouchMode="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/nostragamus_logo" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Question *"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.ShadowLayout
                android:id="@+id/add_question_sl_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_4"
                app:sl_cornerRadius="@dimen/dp_5"
                app:sl_fillColor="@android:color/transparent"
                app:sl_shadowRadius="@dimen/dp_4">


                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_question"
                    style="@style/AddQuestionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textNoSuggestions|textMultiLine"
                    android:maxLength="60"
                    android:maxLines="2"
                    android:minLines="2"
                    android:overScrollMode="always"
                    android:paddingBottom="@dimen/dp_9"
                    android:paddingTop="@dimen/dp_9"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical" />

            </com.jeeva.android.widgets.ShadowLayout>


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Context *"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.ShadowLayout
                android:id="@+id/add_question_sl_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_4"
                app:sl_cornerRadius="@dimen/dp_5"
                app:sl_fillColor="@android:color/transparent"
                app:sl_shadowRadius="@dimen/dp_4">

                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_context"
                    style="@style/AddQuestionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="true"
                    android:ems="10"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:isScrollContainer="true"
                    android:maxLength="200"
                    android:maxLines="4"
                    android:minLines="4"
                    android:overScrollMode="always"
                    android:paddingBottom="@dimen/dp_9"
                    android:paddingTop="@dimen/dp_9"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical" />

            </com.jeeva.android.widgets.ShadowLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Left Option *"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.ShadowLayout
                android:id="@+id/add_question_sl_left_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_4"
                app:sl_cornerRadius="@dimen/dp_5"
                app:sl_fillColor="@android:color/transparent"
                app:sl_shadowRadius="@dimen/dp_4">


                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_left_option"
                    style="@style/AddQuestionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="text|textNoSuggestions"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dp_9"
                    android:paddingTop="@dimen/dp_9" />

            </com.jeeva.android.widgets.ShadowLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Right Option *"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.ShadowLayout
                android:id="@+id/add_question_sl_right_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_4"
                app:sl_cornerRadius="@dimen/dp_5"
                app:sl_fillColor="@android:color/transparent"
                app:sl_shadowRadius="@dimen/dp_4">


                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_right_option"
                    style="@style/AddQuestionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:imeOptions="actionNext"
                    android:inputType="text|textNoSuggestions"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/dp_9"
                    android:paddingTop="@dimen/dp_9" />

            </com.jeeva.android.widgets.ShadowLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Neither Option"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.ShadowLayout
                android:id="@+id/add_question_sl_neither_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_4"
                app:sl_cornerRadius="@dimen/dp_5"
                app:sl_fillColor="@android:color/transparent"
                app:sl_shadowRadius="@dimen/dp_4">

                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_neither_option"
                    style="@style/AddQuestionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:imeOptions="actionDone"
                    android:inputType="text|textNoSuggestions"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/dp_9"
                    android:paddingTop="@dimen/dp_9" />

            </com.jeeva.android.widgets.ShadowLayout>

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/add_question_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/tournament_ready_btn_bg"
                android:gravity="center"
                android:minWidth="@dimen/dp_100"
                android:onClick="onClickSave"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_0"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_bold" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>