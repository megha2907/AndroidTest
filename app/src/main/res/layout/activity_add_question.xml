<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_question_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" >

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/add_question_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_16"
            app:typeface="lato_regular" />

        </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/add_question_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_question_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <!-- date -->
                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_light" />

                <LinearLayout
                    android:id="@+id/schedule_row_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schedule_row_tv_date"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_4">

                    <RelativeLayout
                        android:id="@+id/image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/swipe_card_tv_context">


                        <!-- Challenge Left Image and Name -->
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_16">


                            <com.jeeva.android.widgets.HmImageView
                                android:id="@+id/swipe_card_iv_left"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/dp_6"
                                android:scaleType="fitXY"
                                app:defaultImage="@drawable/left_placeholder_icon" />

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/schedule_row_tv_party_a_name"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_toRightOf="@+id/swipe_card_iv_left"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:maxLines="2"
                                android:textAllCaps="false"
                                android:textColor="@color/white_80"
                                android:textSize="@dimen/dp_12"
                                app:typeface="lato_regular" />

                        </RelativeLayout>

                        <!-- Challenge Right Image and Name -->
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/schedule_row_tv_party_b_name"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_toLeftOf="@+id/swipe_card_iv_right"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="2"
                                android:textAllCaps="false"
                                android:textColor="@color/white_80"
                                android:textSize="@dimen/dp_12"
                                app:typeface="lato_regular" />

                            <com.jeeva.android.widgets.HmImageView
                                android:id="@+id/swipe_card_iv_right"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_6"
                                android:scaleType="fitXY"
                                app:defaultImage="@drawable/right_placeholder_icon" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/schedule_row_btn_vs"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:alpha="0.4"
                            android:background="@drawable/vs_button_bg"
                            android:text="VS"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_8"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/schedule_row_tv_match_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_6"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/dp_2"
                        android:textColor="@color/white_80"
                        android:textSize="@dimen/dp_12"
                        app:typeface="lato_light" />

                </LinearLayout>

                <View
                    android:id="@+id/schedule_row_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_below="@+id/schedule_row_ll"
                    android:background="@color/linecolor" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/dp_30">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Question *"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.ShadowLayout
                    android:id="@+id/add_question_sl_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_4"
                    app:sl_cornerRadius="@dimen/dp_5"
                    app:sl_fillColor="@android:color/transparent"
                    app:sl_shadowRadius="@dimen/dp_4">


                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/add_question_et_question"
                        style="@style/AddQuestionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:maxLength="60"
                        android:maxLines="3"
                        android:minLines="3"
                        android:overScrollMode="always"
                        android:paddingBottom="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_9"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:hint="@string/question_hint"
                        android:textColorHint="@color/white_60"/>

                </com.jeeva.android.widgets.ShadowLayout>


                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Context *"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.ShadowLayout
                    android:id="@+id/add_question_sl_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_4"
                    app:sl_cornerRadius="@dimen/dp_5"
                    app:sl_fillColor="@android:color/transparent"
                    app:sl_shadowRadius="@dimen/dp_4">

                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/add_question_et_context"
                        style="@style/AddQuestionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:editable="true"
                        android:gravity="top"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:maxLength="200"
                        android:maxLines="4"
                        android:minLines="4"
                        android:overScrollMode="always"
                        android:paddingBottom="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_9"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:hint="@string/question_context_hint"
                        android:textColorHint="@color/white_60"/>

                </com.jeeva.android.widgets.ShadowLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Left Option *"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.ShadowLayout
                    android:id="@+id/add_question_sl_left_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_4"
                    app:sl_cornerRadius="@dimen/dp_5"
                    app:sl_fillColor="@android:color/transparent"
                    app:sl_shadowRadius="@dimen/dp_4">


                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/add_question_et_left_option"
                        style="@style/AddQuestionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="text|textNoSuggestions"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_9"
                        android:hint="@string/question_left_optn_hint"
                        android:textColorHint="@color/white_60"/>

                </com.jeeva.android.widgets.ShadowLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Right Option *"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.ShadowLayout
                    android:id="@+id/add_question_sl_right_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_4"
                    app:sl_cornerRadius="@dimen/dp_5"
                    app:sl_fillColor="@android:color/transparent"
                    app:sl_shadowRadius="@dimen/dp_4">


                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/add_question_et_right_option"
                        style="@style/AddQuestionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="text|textNoSuggestions"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_9"
                        android:hint="@string/question_right_optn_hint"
                        android:textColorHint="@color/white_60"/>

                </com.jeeva.android.widgets.ShadowLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Neither Option"
                    android:textColor="@color/white_60"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.ShadowLayout
                    android:id="@+id/add_question_sl_neither_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_4"
                    app:sl_cornerRadius="@dimen/dp_5"
                    app:sl_fillColor="@android:color/transparent"
                    app:sl_shadowRadius="@dimen/dp_4">

                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/add_question_et_neither_option"
                        style="@style/AddQuestionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="text|textNoSuggestions"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_9"
                        android:hint="@string/question_neither_optn_hint"
                        android:textColorHint="@color/white_60"/>


                </com.jeeva.android.widgets.ShadowLayout>

                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/add_question_btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/tournament_ready_btn_bg"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_100"
                    android:onClick="onClickSave"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_0"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_bold" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>