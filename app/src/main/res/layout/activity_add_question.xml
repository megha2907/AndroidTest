<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/nostragamus_logo" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                app:theme="@style/TextLabel">

                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/textcolorlight"
                    android:gravity="top"
                    android:hint="Question *"
                    android:inputType="textMultiLine"
                    android:maxLength="60"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingBottom="@dimen/dp_18"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:theme="@style/TextLabel">

                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_context"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/textcolorlight"
                    android:gravity="top"
                    android:hint="Context *"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:maxLines="4"
                    android:minLines="4"
                    android:paddingBottom="@dimen/dp_18"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:theme="@style/TextLabel">

                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_left_option"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/textcolorlight"
                    android:hint="Left Option *"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dp_18"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                app:theme="@style/TextLabel">

                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_right_option"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/textcolorlight"
                    android:hint="Right Option *"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dp_18"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                app:theme="@style/TextLabel">

                <com.jeeva.android.widgets.customfont.CustomEditText
                    android:id="@+id/add_question_et_neither_option"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/textcolorlight"
                    android:hint="Neither Option"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dp_18"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16" />

            </android.support.design.widget.TextInputLayout>

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/add_question_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/tournament_ready_btn_bg"
                android:gravity="center"
                android:minWidth="@dimen/dp_100"
                android:onClick="onClickSave"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_0"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_bold" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>