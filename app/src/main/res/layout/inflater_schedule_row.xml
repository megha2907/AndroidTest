<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/swipe_card_shape"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_10">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textAllCaps="true" />

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swipe_card_tv_context">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/button"
            android:background="@drawable/vs_button_bg"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.4"
            android:text="VS"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.jeeva.android.widgets.HmImageView
                android:id="@+id/swipe_card_iv_left"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_140"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:background="@color/powerup_color"
                android:layout_alignParentLeft="true"
                />

            <com.jeeva.android.widgets.HmImageView
                android:id="@+id/swipe_card_iv_right"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_140"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:background="@color/monza"
                android:paddingLeft="@dimen/dp_1"/>

        </LinearLayout>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:30 PM"
            android:alpha="0.4"
            android:textColor="@color/white"
            android:background="@color/colorBackground"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20">


        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_party_a_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/colorBackground"
            android:text="SRILANKA"
            app:typeface="lato_bold"
            android:layout_marginLeft="@dimen/dp_35"/>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_party_b_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBackground"
            android:text="AUSTRALIA"
            app:typeface="lato_bold"
            android:textSize="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_35"/>



    </RelativeLayout>

    <View
        android:id="@+id/schedule_row_v_party_a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@drawable/black_divider"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
         />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="AUSTRALIA BEAT SRILANKA BY 6 WICKETS"
        app:typeface="lato_regular"
        />

    <LinearLayout
        android:id="@+id/my_results_row_ll_predictions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/black_divider"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_2"
        android:orientation="vertical"
        android:showDividers="beginning">

    </LinearLayout>

</LinearLayout>