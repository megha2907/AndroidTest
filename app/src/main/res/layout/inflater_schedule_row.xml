<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/schedule_row_v_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/schedule_row_space_bottom"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@color/tundora" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/schedule_row_tv_date"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/schedule_row_tv_date"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:visibility="gone"
        app:typeface="roboto_condensed" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/schedule_row_tv_match_stage"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/schedule_row_tv_match_stage"
        android:maxLines="1"
        android:textColor="@color/white_60"
        android:textSize="@dimen/dp_12"
        android:visibility="gone"
        app:typeface="roboto_condensed" />

    <LinearLayout
        android:id="@+id/schedule_row_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_row_tv_match_stage"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toRightOf="@id/schedule_row_v_line"
        android:background="@drawable/swipe_card_shape_test"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_14"
        android:paddingTop="@dimen/dp_14">

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swipe_card_tv_context">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_btn_vs"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:alpha="0.4"
                android:background="@drawable/vs_button_bg"
                android:gravity="center"
                android:text="vs"
                android:textAllCaps="true"
                android:textColor="@color/colorMedium"
                android:textSize="@dimen/dp_12"
                app:typeface="lato_bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/schedule_row_btn_vs"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_5">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_party_a_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Atletico"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_left"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_6"
                    android:scaleType="fitXY"
                    app:defaultImage="@drawable/placeholder_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/schedule_row_btn_vs"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_5">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/schedule_row_tv_party_b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Atletico"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular" />

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/swipe_card_iv_right"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_6"
                    android:scaleType="fitXY"
                    app:defaultImage="@drawable/placeholder_icon" />
            </LinearLayout>


        </RelativeLayout>

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/schedule_row_btn_playmatch"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_36"
            android:layout_below="@+id/image_layout"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:background="@drawable/shadow_effect"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/dp_0"
            android:text="PLAY"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            android:visibility="gone"
            app:typeface="roboto_condensed" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_match_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_2"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_11"
            android:visibility="gone"
            app:typeface="lato_regular" />

        <View
            android:id="@+id/schedule_row_v_result_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:background="#151515"
            android:visibility="gone" />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/schedule_row_btn_waiting_for_result"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_36"
            android:layout_below="@+id/image_layout"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:background="@drawable/shadow_effect"
            android:gravity="center"
            android:padding="@dimen/dp_0"
            android:text="View Your\nAnswers"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_10"
            android:visibility="gone"
            app:typeface="lato_regular" />

        <LinearLayout
            android:id="@+id/schedule_row_ll_waiting_for_result"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_marginTop="@dimen/feed_screen_spacing"
            android:background="@drawable/shadow_effect"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="View Your"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/timeline_points_arrow"
                android:text="Answers"
                android:gravity="bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"
                app:typeface="lato_regular" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_points"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:clickable="true"
            android:visibility="gone">

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/schedule_row_btn_points"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_points_bg"
                android:clickable="false"
                android:drawableRight="@drawable/timeline_points_arrow"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="60 Points"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_11"
                app:typeface="lato_bold" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/schedule_row_tv_match_correct_questions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_toLeftOf="@+id/schedule_row_btn_points"
                android:gravity="left|center_vertical"
                android:maxLines="2"
                android:text="You got 3/5 answers correct"
                android:textColor="@color/starship"
                android:textSize="@dimen/dp_11"
                app:typeface="lato_bold" />

        </RelativeLayout>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/schedule_row_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_22"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            android:visibility="gone"
            app:typeface="lato_bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/schedule_row_ll_match_commentary_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedule_row_ll"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@+id/schedule_row_tv_date"
        android:orientation="vertical" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_date"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/timeline_side_circle"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white_60"
        android:textSize="@dimen/dp_10"
        app:typeface="roboto_condensed" />

    <android.support.v4.widget.Space
        android:id="@+id/schedule_row_space_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_below="@+id/schedule_row_ll_match_commentary_parent" />

</RelativeLayout>