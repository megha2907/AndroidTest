<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center_horizontal"
        android:text="Time to show \n you have a sixth \n sense for the \n sport"
        android:textSize="@dimen/dp_30" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/activity_getstarted_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="?android:attr/selectableItemBackground"
        android:text="Already have an account? Login"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_20"
        android:visibility="invisible"/>

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/activity_getstarted_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_getstarted_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/chathambs_blue_round_rect_fill"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_15"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_30" />

</RelativeLayout>