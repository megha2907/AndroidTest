<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_62"
    android:paddingLeft="@dimen/dp_18"
    android:paddingRight="@dimen/dp_18">

    <ImageView
        android:id="@+id/popup_body_iv_icon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_centerVertical="true"
        android:src="@drawable/powerup_audience_poll_white" />


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/popup_body_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/popup_body_iv_icon"
        android:text="See how your friends answered"
        android:textColor="@color/white_60"
        android:textSize="@dimen/dp_12"
        app:typeface="lato_regular" />

</RelativeLayout>