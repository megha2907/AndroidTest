<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/overflow_background"
        android:orientation="vertical">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/add_photo_tv_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/dp_15"
            android:text="Choose from Gallery"
            android:textColor="@color/cerulean"
            android:textSize="@dimen/dp_12"
            app:typeface="roboto"
            android:visibility="gone"/>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/add_photo_tv_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/dp_15"
            android:text="Take a Photo"
            android:textColor="@color/cerulean"
            android:textSize="@dimen/dp_12"
            app:typeface="roboto"
            android:visibility="gone"/>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/add_photo_tv_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="Processing..."
            android:textColor="@color/cerulean"
            android:textSize="@dimen/dp_12"
            android:visibility="gone"
            app:typeface="roboto" />
    </LinearLayout>

</FrameLayout>