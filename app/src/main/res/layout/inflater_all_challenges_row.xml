<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingLeft="@dimen/dp_6"
    android:paddingRight="@dimen/dp_6">


    <com.jeeva.android.widgets.ShadowLayout
        android:id="@+id/all_challenges_sl_anim_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:sl_cornerRadius="@dimen/dp_8"
        android:padding="@dimen/dp_4"
        app:sl_fillColor="@color/challenges_bg_card_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_199"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:id="@+id/all_challenges_row_rl_show_games"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:clickable="true">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/all_challenges_row_tv_show_games"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:clickable="false"
                android:text="Show Games"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/challenge_down_arrow"
                android:textColor="@color/white_80"
                android:textSize="@dimen/dp_12"
                app:typeface="lato_regular" />

            </RelativeLayout>


        </RelativeLayout>

    </com.jeeva.android.widgets.ShadowLayout>

    <com.jeeva.android.widgets.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        app:sl_cornerRadius="@dimen/dp_8"
        app:sl_fillColor="@color/challenges_card_color">

        <LinearLayout
            android:id="@+id/all_challenges_row_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.jeeva.android.widgets.HmImageView
                    android:id="@+id/all_challenges_row_iv_image"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:defaultImage="@drawable/placeholder_icon" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/all_challenges_row_matchstage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_toRightOf="@+id/all_challenges_row_iv_image"
                    android:text="European Gameweek 25"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular" />

                <LinearLayout
                    android:id="@+id/all_challenges_row_tournament_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/all_challenges_row_matchstage_tv"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_toRightOf="@+id/all_challenges_row_iv_image"
                    android:orientation="horizontal" />


                <!--<com.jeeva.android.widgets.customfont.CustomTextView-->
                <!--android:id="@+id/all_challenges_row_tournament_name"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="EPL"-->
                <!--android:background="@color/white_20"-->
                <!--android:textColor="@color/white"-->
                <!--app:typeface="roboto_condensed"-->
                <!--android:textSize="@dimen/dp_12"-->
                <!--android:paddingTop="@dimen/dp_3"-->
                <!--android:paddingBottom="@dimen/dp_3"-->
                <!--android:paddingRight="@dimen/dp_5"-->
                <!--android:paddingLeft="@dimen/dp_5"-->
                <!--android:layout_marginTop="@dimen/dp_5"-->
                <!--/>-->

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/all_challenges_row_powerup_tv_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/all_challenges_row_iv_image"
                    android:text="POWERUPS"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/dp_10"
                    app:typeface="lato_light" />


                <RelativeLayout
                    android:id="@+id/all_challenges_row_powerup_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/all_challenges_row_powerup_tv_txt"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_2"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/powerups_iv_2x"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_6"
                        android:src="@drawable/powerup_2x_white" />

                    <ImageView
                        android:id="@+id/powerups_iv_nonegs"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_toRightOf="@id/powerups_iv_2x"
                        android:padding="@dimen/dp_6"
                        android:src="@drawable/powerup_nonegs_white" />

                    <ImageView
                        android:id="@+id/powerups_iv_poll"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_toRightOf="@id/powerups_iv_nonegs"
                        android:padding="@dimen/dp_6"
                        android:src="@drawable/powerup_audience_poll_white" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_tv_2x_count"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_alignRight="@id/powerups_iv_2x"
                        android:layout_alignTop="@id/powerups_iv_2x"
                        android:layout_marginRight="@dimen/_dp_5"
                        android:layout_marginTop="@dimen/_dp_5"
                        android:alpha="0.9"
                        android:background="@drawable/powerup_count_bg"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_7"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_tv_nonegs_count"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_alignRight="@id/powerups_iv_nonegs"
                        android:layout_alignTop="@id/powerups_iv_nonegs"
                        android:layout_marginRight="@dimen/_dp_5"
                        android:layout_marginTop="@dimen/_dp_5"
                        android:alpha="0.9"
                        android:background="@drawable/powerup_count_bg"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_7"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_tv_poll_count"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_alignRight="@id/powerups_iv_poll"
                        android:layout_alignTop="@id/powerups_iv_poll"
                        android:layout_marginRight="@dimen/_dp_5"
                        android:layout_marginTop="@dimen/_dp_5"
                        android:alpha="0.9"
                        android:background="@drawable/powerup_count_bg"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_7"
                        app:typeface="lato_regular" />


                </RelativeLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/all_challenges_row_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/all_challenges_row_iv_image"
                    android:layout_marginRight="@dimen/dp_100"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    android:visibility="gone"
                    app:typeface="lato_regular" />

                <RelativeLayout
                    android:id="@+id/all_challenges_row_rl_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/all_challenges_row_iv_image"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_toRightOf="@+id/all_challenges_row_powerup_rl">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/all_challenges_row_tv_timer_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/all_challenges_row_btn_days_left"
                        android:text="ENDS IN"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_10"
                        app:typeface="lato_light" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/all_challenges_row_btn_days_left"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_26"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_below="@+id/all_challenges_row_tv_timer_txt"
                        android:layout_toLeftOf="@+id/all_challenges_row_btn_hours_left"
                        android:background="@drawable/grey_border_btn_bg"
                        android:text="2d"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_10"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/all_challenges_row_btn_hours_left"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_26"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_below="@+id/all_challenges_row_tv_timer_txt"
                        android:layout_toLeftOf="@+id/all_challenges_row_btn_mins_left"
                        android:background="@drawable/grey_border_btn_bg"
                        android:text="24h"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_10"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/all_challenges_row_btn_mins_left"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_26"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_toLeftOf="@+id/all_challenges_row_btn_secs_left"
                        android:layout_below="@+id/all_challenges_row_tv_timer_txt"
                        android:background="@drawable/grey_border_btn_bg"
                        android:text="59m"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textAllCaps="false"
                        android:textColor="@color/white_80"
                        android:textSize="@dimen/dp_10"
                        app:typeface="lato_regular" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/all_challenges_row_btn_secs_left"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_26"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_below="@+id/all_challenges_row_tv_timer_txt"
                        android:background="@drawable/grey_border_btn_bg"
                        android:text="59s"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textAllCaps="false"
                        android:textColor="@color/white_80"
                        android:textSize="@dimen/dp_10"
                        app:typeface="lato_regular" />

                </RelativeLayout>

                <View
                    android:id="@+id/all_challenges_row_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_below="@+id/all_challenges_row_powerup_rl"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="@color/black_40"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/all_challenges_rl_leadboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/all_challenges_row_tv_leaderboard_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/challenge_leaderboard_icon"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:text="1st Rank"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/dp_12"
                    app:typeface="lato_regular" />

            </RelativeLayout>

        </LinearLayout>
    </com.jeeva.android.widgets.ShadowLayout>

</RelativeLayout>