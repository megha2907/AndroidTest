<?xml version="1.0" encoding="utf-8"?>
<in.sportscafe.nostragamus.module.user.lblanding.LBLandingRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/lblanding_tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/sports"
            android:textAllCaps="true"
            android:textColor="@color/white_80"
            app:typeface="lato_regular" />

        <ImageButton
            android:id="@+id/lblanding_ib_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:adjustViewBounds="true"
            android:background="@drawable/leaderboard_grey_arrow_icon"
            android:onClick="onClick"
            android:padding="@dimen/dp_10" />

        <ImageButton
            android:id="@+id/lblanding_ib_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_65"
            android:adjustViewBounds="true"
            android:background="@drawable/leaderboard_grey_arrow_icon"
            android:onClick="onClick"
            android:padding="@dimen/dp_10"
            android:rotation="180" />


    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/lblanding_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/black"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/dp_6"
        android:paddingRight="@dimen/dp_6" />

</in.sportscafe.nostragamus.module.user.lblanding.LBLandingRow>