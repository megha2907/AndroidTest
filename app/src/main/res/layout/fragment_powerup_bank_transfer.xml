<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="in.sportscafe.nostragamus.module.prediction.powerupBank.PowerupBankTransferFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Message layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_transfer_heading_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim_16"
                    android:text="@string/powerup_bank_transfer_from_bank_heading"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    app:typeface="lato_bold" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_transfer_subHeading_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="@dimen/dim_2"
                    android:layout_marginLeft="@dimen/dim_20"
                    android:layout_marginRight="@dimen/dim_20"
                    android:layout_marginTop="@dimen/dim_8"
                    android:gravity="center"
                    android:text="@string/powerup_bank_transfer_from_bank_sub_heading"
                    android:textColor="@color/white_dim"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

            </LinearLayout>

            <!-- Powerup Layout -->
            <LinearLayout
                android:id="@+id/powerup_transfer_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <!-- Doubler button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:elevation="@dimen/dim_5"
                    android:minWidth="@dimen/dim_100"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_100"
                        android:layout_weight="1"
                        android:background="@color/colorBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Doubler"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_12"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:id="@+id/powerup_bank_doubler_img"
                            android:layout_width="@dimen/dim_24"
                            android:layout_height="@dimen/dim_24"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dim_8"
                            android:background="@android:color/transparent"
                            android:src="@drawable/double_powerup"
                            android:visibility="visible" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/powerup_bank_user_bal_doubler_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dim_8"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            app:typeface="lato_bold" />

                    </LinearLayout>

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/powerup_bank_add_double_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_32"
                        android:background="@drawable/transfer_powerup_add_btn_selector"
                        android:paddingBottom="@dimen/dim_3"
                        android:text="+ Add"
                        android:textAllCaps="false"
                        android:textColor="@drawable/white_text_selector"
                        android:textSize="@dimen/sp_12" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/powerup_bank_buy_double_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_32"
                        android:background="@drawable/green_store_btn_bg"
                        android:paddingBottom="@dimen/dim_3"
                        android:text="Buy"
                        android:textAllCaps="false"
                        android:textColor="@drawable/white_text_selector"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_bank_doubler_add_err_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dim_10"
                        android:layout_marginTop="@dimen/dim_10"
                        android:text="0 Left"
                        android:textColor="@color/white_dim"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                    <LinearLayout
                        android:layout_width="@dimen/dim_32"
                        android:layout_height="@dimen/dim_32"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/colorBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/powerup_bank_doubler_demand_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                </LinearLayout>

                <!-- No negative -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:elevation="@dimen/dim_5"
                    android:minWidth="@dimen/dim_100"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_100"
                        android:layout_weight="1"
                        android:background="@color/colorBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="No Negative"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_12"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:id="@+id/powerup_bank_noneg_img"
                            android:layout_width="@dimen/dim_24"
                            android:layout_height="@dimen/dim_24"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dim_8"
                            android:background="@android:color/transparent"
                            android:src="@drawable/no_negative_powerup"
                            android:visibility="visible" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/powerup_bank_user_bal_no_neg_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dim_8"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            app:typeface="lato_bold" />

                    </LinearLayout>

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/powerup_bank_add_no_negative_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_32"
                        android:background="@drawable/transfer_powerup_add_btn_selector"
                        android:paddingBottom="@dimen/dim_3"
                        android:text="+ Add"
                        android:textAllCaps="false"
                        android:textColor="@drawable/white_text_selector"
                        android:textSize="@dimen/sp_12" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/powerup_bank_buy_no_negative_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_32"
                        android:background="@drawable/green_store_btn_bg"
                        android:paddingBottom="@dimen/dim_3"
                        android:text="Buy"
                        android:textAllCaps="false"
                        android:textColor="@drawable/white_text_selector"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_bank_no_neg_add_err_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dim_10"
                        android:layout_marginTop="@dimen/dim_10"
                        android:text="0 Left"
                        android:textColor="@color/white_dim"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                    <LinearLayout
                        android:layout_width="@dimen/dim_32"
                        android:layout_height="@dimen/dim_32"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/colorBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/powerup_bank_no_neg_demand_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Audience poll -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:layout_marginRight="@dimen/dim_15"
                    android:elevation="@dimen/dim_5"
                    android:minWidth="@dimen/dim_100"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/powerup_bank_audience_poll_ll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_100"
                        android:layout_weight="1"
                        android:background="@color/colorBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Audience Poll"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_12"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:id="@+id/powerup_bank_audience_poll_img"
                            android:layout_width="@dimen/dim_24"
                            android:layout_height="@dimen/dim_24"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dim_8"
                            android:background="@android:color/transparent"
                            android:src="@drawable/audience_poll_powerup"
                            android:visibility="visible" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/powerup_bank_user_bal_audience_poll_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dim_8"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            app:typeface="lato_bold" />

                    </LinearLayout>

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/powerup_bank_add_audience_poll_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_32"
                        android:background="@drawable/transfer_powerup_add_btn_selector"
                        android:paddingBottom="@dimen/dim_3"
                        android:text="+ Add"
                        android:textAllCaps="false"
                        android:textColor="@drawable/white_text_selector"
                        android:textSize="@dimen/sp_12" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/powerup_bank_buy_audience_poll_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_32"
                        android:background="@drawable/green_store_btn_bg"
                        android:paddingBottom="@dimen/dim_3"
                        android:text="Buy"
                        android:textAllCaps="false"
                        android:textColor="@drawable/white_text_selector"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_bank_audience_add_err_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dim_10"
                        android:layout_marginTop="@dimen/dim_10"
                        android:text="0 Left"
                        android:textColor="@color/white_dim"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular" />

                    <LinearLayout
                        android:layout_width="@dimen/dim_32"
                        android:layout_height="@dimen/dim_32"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/colorBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/powerup_bank_audience_demand_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Transfer to newChallengesResponse button -->
            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/powerup_bank_transfer_to_challenge_button"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dim_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_20"
                android:paddingTop="@dimen/dim_2"
                android:background="@drawable/transfer_powerup_btn_selector"
                android:enabled="false"
                android:paddingBottom="@dimen/dim_3"
                android:text="Transfer to Challenge"
                android:textAllCaps="false"
                android:textColor="@drawable/transfer_powerup_btn_text_selector"
                app:typeface="lato_bold" />

            <!-- Reset -->
            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/powerup_bank_reset_button"
                android:layout_width="@dimen/dim_90"
                android:layout_height="@dimen/dim_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_8"
                android:background="@null"
                android:enabled="false"
                android:paddingBottom="@dimen/dim_3"
                android:text="RESET"
                android:textAllCaps="false"
                android:textColor="@color/white_dim"
                android:textSize="@dimen/sp_10"
                android:visibility="invisible"
                app:typeface="lato_bold" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/powerup_bank_max_limit_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_80"
                android:text=""
                android:textColor="@color/white_999999"
                android:textSize="@dimen/sp_11"
                app:typeface="lato_regular" />

        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
