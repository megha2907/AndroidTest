<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/compare_leaderboard_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:layout_below="@+id/all_groups_toolbar"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/compare_leaderboard_empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_130"
        android:text="You don't have any common Leaderboards yet."
        android:textColor="@color/textcolorlight"
        android:layout_marginBottom="@dimen/dp_10"
        android:visibility="gone"/>

</RelativeLayout>