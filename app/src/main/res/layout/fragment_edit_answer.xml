<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/playscreen_bg">

        <!-- Top Layout -->
        <RelativeLayout
            android:id="@+id/edit_answer_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/edit_answer_back_btn"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:padding="@dimen/dim_10"
                android:layout_marginLeft="@dimen/dim_6"
                android:layout_marginTop="@dimen/dim_9"
                android:src="@drawable/back_icon_grey"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/dim_16">

                <ImageView
                    android:layout_width="@dimen/dim_12"
                    android:layout_height="@dimen/dim_12"
                    android:src="@drawable/edit_answers_icon"
                    android:layout_marginTop="@dimen/dim_1"/>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/edit_answer_heading_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Edit and Swipe Answers"
                    android:textSize="@dimen/sp_13"
                    app:typeface="lato_bold"
                    android:layout_marginLeft="@dimen/dim_8"/>

            </LinearLayout>

            <!-- Edit Answer info layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dim_12"
                android:layout_below="@id/title_layout"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/dim_16"
                android:paddingRight="@dimen/dim_16"
                >

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/edit_answer_msg_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular"
                    />

            </LinearLayout>

        </RelativeLayout>

        <!-- Card Layouts -->
        <LinearLayout
            android:id="@+id/edit_answer_third_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dim_100"
            android:animateLayoutChanges="true"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/edit_answer_third_option_button"
                android:layout_width="@dimen/dim_100"
                android:layout_height="@dimen/dp_34"
                android:gravity="center"
                android:background="@drawable/prediction_card_bottom_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_answer_third_option_imgView"
                    android:layout_width="@dimen/dim_14"
                    android:layout_height="@dimen/dim_14"
                    android:src="@drawable/edit_ans_chosen_top_arrow"
                    android:visibility="gone"/>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/edit_answer_third_option_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/prediction_neither_button_text"
                    app:typeface="lato_bold"
                    android:layout_marginLeft="@dimen/dim_10"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom/ Power-up Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_68"
            android:orientation="horizontal"
            android:background="@drawable/playscreen_bottom_bar_gradient"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/edit_answer_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/edit_answer_powerup_bank_imgView"
                    android:layout_width="@dimen/dim_34"
                    android:layout_height="@dimen/dim_34"
                    android:src="@drawable/prediction_powerup_bank_button"
                    android:layout_marginLeft="@dimen/dim_26"
                    android:layout_marginRight="@dimen/dim_26"/>

                <RelativeLayout
                    android:layout_width="@dimen/dim_185"
                    android:layout_height="@dimen/dim_58">

                    <View
                        android:id="@+id/background_img"
                        android:layout_width="@dimen/dim_185"
                        android:layout_height="@dimen/dim_46"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/prediction_powerup_bg_icn"/>

                    <!-- Doubler -->
                    <RelativeLayout
                        android:id="@+id/edit_answer_doubler_Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:id="@+id/doubler_imgView"
                            android:layout_width="@dimen/dim_48"
                            android:layout_height="@dimen/dim_56"
                            android:adjustViewBounds="true"
                            android:src="@drawable/prediction_doubler_powerup_button"/>

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/edit_answer_doubler_counter_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:padding="@dimen/dim_2"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_9"
                            app:typeface="lato_regular"
                            android:background="@drawable/prediction_powerup_counter_bg"/>

                    </RelativeLayout>

                    <!-- No negative -->
                    <RelativeLayout
                        android:id="@+id/edit_answer_noNeg_Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/noNeg_ingView"
                            android:layout_width="@dimen/dim_48"
                            android:layout_height="@dimen/dim_56"
                            android:src="@drawable/prediction_no_negative_powerup_button"/>

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/edit_answer_noNeg_counter_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:padding="@dimen/dim_2"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_9"
                            app:typeface="lato_regular"
                            android:layout_alignTop="@id/noNeg_ingView"
                            android:background="@drawable/prediction_powerup_counter_bg"/>

                    </RelativeLayout>

                    <!-- Player poll -->
                    <RelativeLayout
                        android:id="@+id/edit_answer_player_poll_Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/player_poll_imgView"
                            android:layout_width="@dimen/dim_48"
                            android:layout_height="@dimen/dim_56"
                            android:src="@drawable/prediction_player_poll_powerup_button"/>

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/edit_answer_player_poll_counter_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:padding="@dimen/dim_2"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_9"
                            app:typeface="lato_regular"
                            android:layout_alignTop="@id/player_poll_imgView"
                            android:background="@drawable/prediction_powerup_counter_bg"/>

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/edit_answer_help_play_imgView"
                    android:layout_width="@dimen/dim_34"
                    android:layout_height="@dimen/dim_34"
                    android:src="@drawable/prediction_game_help_button"
                    android:layout_marginLeft="@dimen/dim_26"
                    android:layout_marginRight="@dimen/dim_26"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Card swipe area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.sportscafe.nostracardstack.cardstack.CardStack
                android:id="@+id/edit_answer_cardStack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_horizontal"
                android:padding="3dp"
                app:card_margin="@dimen/dim_3"
                app:card_gravity="bottom"
                app:card_top_margin="@dimen/dim_100"
                app:card_stack_size="4"
                app:card_enable_rotation="true"
                android:background="@android:color/transparent"/>

        </FrameLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
