<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/challenge_timeline_tv_match_left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:textColor="@color/white_80"
        android:textSize="@dimen/dp_12"
        app:typeface="lato_regular" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/challenge_timeline_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/challenge_timeline_tv_match_left"
        android:background="@color/colorPrimary"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5" />

</RelativeLayout>