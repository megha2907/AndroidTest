<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/challenge_timeline_tv_match_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white_80"
        android:textSize="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_10"
        app:typeface="lato_regular" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/challenge_timeline_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/challenge_timeline_tv_match_left"
        android:background="@color/black"
        android:clipToPadding="false" />

    <View
        android:id="@+id/gradient_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_alignBottom="@id/challenge_timeline_tv_match_left"
        android:background="@drawable/gradient_above_hometab" />

</RelativeLayout>