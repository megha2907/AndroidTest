<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">


<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/htab_maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/htab_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll|enterAlways"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMedium"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:id="@+id/leaderboard_summary_toolbar"
            android:titleTextColor="@color/white"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="enterAlwaysCollapsed"
            >
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_tl"
            android:background="@color/colorMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="pin"
            app:selected_textSize="@dimen/dp_14"
            app:selected_typeface="lato_bold"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/tabcolor"
            app:tabIndicatorHeight="@dimen/dp_4"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/silver_chalice"
            app:unselected_textSize="@dimen/dp_12"
            app:unselected_typeface="lato_hairline"
            app:layout_scrollFlags="enterAlwaysCollapsed"
            android:layout_gravity="bottom"
            />

    </android.support.design.widget.AppBarLayout>


    <in.sportscafe.scgame.module.common.CustomViewPager
        android:id="@+id/tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="@dimen/dp_10"/>

</android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>