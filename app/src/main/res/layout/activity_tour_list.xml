<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tournament_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/tournament_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="lato_regular" />

        </android.support.v7.widget.Toolbar>

    <in.sportscafe.nostragamus.module.common.CustomTabLayout
        android:id="@+id/tournament_tab_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tournament_toolbar"
        android:layout_gravity="center_horizontal|top"
        android:background="@color/colorMedium"
        android:elevation="@dimen/dp_4"
        app:layout_collapseMode="pin"
        app:selected_textSize="@dimen/dp_16"
        app:selected_typeface="roboto_condensed_bold"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/tabcolor"
        app:tabIndicatorHeight="@dimen/dp_4"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabTextColor="@color/silver_chalice"
        app:unselected_textSize="@dimen/dp_14"
        app:unselected_typeface="roboto_condensed" />


