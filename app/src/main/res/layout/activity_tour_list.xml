    <in.sportscafe.nostragamus.module.common.CustomViewPager
        android:id="@+id/tournament_tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tournament_tab_tl"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</RelativeLayout>