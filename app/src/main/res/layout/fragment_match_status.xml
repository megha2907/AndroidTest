<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/match_status_tv_contest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_30"
        android:textStyle="bold" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/match_status_tv_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_18" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/match_status_tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/match_status_tv_tournament"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_16" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/match_status_tv_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/match_status_tv_contest_name"
        android:layout_below="@id/match_status_tv_start_time"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_16" />

    <ImageButton
        android:id="@+id/match_status_ib_play"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/match_status_tv_contest_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_20"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/play" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/match_status_btn_reminder"
        android:layout_width="@dimen/dp_140"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/match_status_ib_play"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="top|center_horizontal"
        android:text="Remind me to play an hour before the game"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_14" />

</RelativeLayout>