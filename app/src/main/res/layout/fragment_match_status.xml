<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/match_status_tv_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_23"
        android:text="Wimbeldon"
        app:typeface="lato_bold"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/match_status_tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/match_status_tv_tournament"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        android:text="5th May"
        app:typeface="lato_regular"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/match_status_tv_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        android:text="Starts in 2 hrs"
        android:layout_below="@+id/match_status_tv_start_time"
        app:typeface="lato_regular"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/swipe_card_shape"
        android:elevation="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_70"
        android:layout_below="@+id/match_status_tv_time_left"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_rl_layout">



            <RelativeLayout
                android:id="@+id/image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/swipe_card_tv_context">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/button"
                    android:background="@drawable/vs_button_bg"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.4"
                    android:text="VS"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/swipe_card_iv_left"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_140"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                        android:background="@color/powerup_color"
                        android:layout_alignParentLeft="true"
                        />

                    <com.jeeva.android.widgets.HmImageView
                        android:id="@+id/swipe_card_iv_right"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_140"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                        android:background="@color/monza"
                        android:paddingLeft="@dimen/dp_1"/>

                </LinearLayout>


            </RelativeLayout>



            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/match_status_tv_contest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold"
                android:text="Rodger Federer Vs Andy Murray"
                android:layout_below="@+id/image_layout"
                android:layout_centerHorizontal="true"
                />


    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/match_status_btn_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="top|center_horizontal"
        android:text="Remind me an hour before"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/textcolorlight"/>

        </RelativeLayout>
    </FrameLayout>

    <Button
        android:id="@+id/match_status_ib_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_180"
        android:background="@drawable/powerup_screen_btn_bg"
        android:scaleType="centerCrop"
        android:text="PLAY"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>