<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/referral_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!--Referral Credits section -->
            <LinearLayout
                android:id="@+id/refer_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:fitsSystemWindows="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dim_20">

                    <LinearLayout
                        android:id="@+id/powerup_bank_2x_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dim_100"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:minWidth="@dimen/dim_90"
                        android:layout_marginRight="@dimen/dim_15"
                        android:layout_marginLeft="@dimen/dim_15"
                        android:background="@drawable/referral_powerups_bg"
                        android:elevation="@dimen/dim_5">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_12"
                            android:text="Doubler"
                            android:layout_gravity="center"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:id="@+id/powerup_bank_2x"
                            android:layout_width="@dimen/dim_26"
                            android:layout_height="@dimen/dim_26"
                            android:layout_marginTop="@dimen/dim_8"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:visibility="visible" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/powerup_bank_2x_powerup_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:layout_marginTop="@dimen/dim_8"
                            android:text="4"
                            android:layout_gravity="center"
                            app:typeface="lato_bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/powerup_bank_noneg_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dim_100"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:minWidth="@dimen/dim_90"
                        android:background="@drawable/referral_powerups_bg"
                        android:elevation="@dimen/dim_5">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_12"
                            android:text="No Negative"
                            android:layout_gravity="center"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:id="@+id/powerup_bank_noneg"
                            android:layout_width="@dimen/dim_26"
                            android:layout_height="@dimen/dim_26"
                            android:layout_marginTop="@dimen/dim_8"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:visibility="visible" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/powerup_bank_noneg_powerup_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:layout_marginTop="@dimen/dim_8"
                            android:text="10"
                            android:layout_gravity="center"
                            app:typeface="lato_bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/powerup_bank_audience_poll_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dim_100"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:minWidth="@dimen/dim_90"
                        android:layout_marginRight="@dimen/dim_15"
                        android:layout_marginLeft="@dimen/dim_15"
                        android:background="@drawable/referral_powerups_bg"
                        android:elevation="@dimen/dim_5">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_12"
                            android:text="Audience Poll"
                            android:layout_gravity="center"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:id="@+id/powerup_bank_audience_poll"
                            android:layout_width="@dimen/dim_26"
                            android:layout_height="@dimen/dim_26"
                            android:layout_marginTop="@dimen/dim_8"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:visibility="visible" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/powerup_bank_audience_poll_powerup_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:layout_marginTop="@dimen/dim_8"
                            android:text="9"
                            android:layout_gravity="center"
                            app:typeface="lato_bold" />


                    </LinearLayout>

                </LinearLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_bank_low_powerups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deepcarmine"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim_12"
                    android:text="You are running low on powerups!"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    app:typeface="lato_regular" />

            </LinearLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

        <!-- IF YOU WANT TO KEEP "Friends Activity" always on top of the RecyclerView, put this TextView here -->

        <!-- No transaction history empty view -->
        <LinearLayout
            android:id="@+id/pb_transaction_no_history_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_collapseMode="pin"
            android:elevation="@dimen/dim_0"
            android:paddingBottom="@dimen/dim_20"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/referral_image_size"
                android:layout_height="@dimen/referral_image_size"
                android:src="@drawable/empty_powerup_bank" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_10"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_20"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="No Transaction have occurred yet"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                app:typeface="lato_regular" />

        </LinearLayout>


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/pb_transaction_friends_act_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/referral_appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/pb_transaction_friends_act_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_24"
            android:layout_marginRight="@dimen/dim_24"
            android:layout_marginTop="@dimen/dim_12"
            android:text="POWERUP ACTIVITY"
            android:textColor="@color/grey7"
            android:textSize="@dimen/sp_12"
            app:typeface="lato_regular" />

        <View
            android:id="@+id/line_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_0.5"
            android:layout_below="@+id/pb_transaction_friends_act_text"
            android:layout_marginLeft="@dimen/dim_13"
            android:layout_marginRight="@dimen/dim_13"
            android:layout_marginTop="@dimen/dim_14"
            android:background="@color/line_separator_two" />


        <!-- Recycler List view  -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pbTransactionRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim_13"
            android:layout_marginRight="@dimen/dim_13"
            android:visibility="visible"
            android:layout_below="@+id/line_separator"/>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
