<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <!-- Layout Starts -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dim_30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim_20">

                <LinearLayout
                    android:id="@+id/powerup_bank_2x_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_100"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="@dimen/dim_90"
                    android:layout_marginRight="@dimen/dim_15"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:background="@drawable/referral_powerups_bg"
                    android:elevation="@dimen/dim_5">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_12"
                        android:text="Doubler"
                        android:layout_gravity="center"
                        app:typeface="lato_regular" />

                    <ImageView
                        android:id="@+id/powerup_bank_2x"
                        android:layout_width="@dimen/dim_26"
                        android:layout_height="@dimen/dim_26"
                        android:layout_marginTop="@dimen/dim_8"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:visibility="visible" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_bank_2x_powerup_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dim_8"
                        android:text="0"
                        android:layout_gravity="center"
                        app:typeface="lato_bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/powerup_bank_noneg_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_100"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="@dimen/dim_90"
                    android:background="@drawable/referral_powerups_bg"
                    android:elevation="@dimen/dim_5">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_12"
                        android:text="No Negative"
                        android:layout_gravity="center"
                        app:typeface="lato_regular" />

                    <ImageView
                        android:id="@+id/powerup_bank_noneg"
                        android:layout_width="@dimen/dim_26"
                        android:layout_height="@dimen/dim_26"
                        android:layout_marginTop="@dimen/dim_8"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:visibility="visible" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_bank_noneg_powerup_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dim_8"
                        android:text="0"
                        android:layout_gravity="center"
                        app:typeface="lato_bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/powerup_bank_audience_poll_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_100"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="@dimen/dim_90"
                    android:layout_marginRight="@dimen/dim_15"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:background="@drawable/referral_powerups_bg"
                    android:elevation="@dimen/dim_5">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_12"
                        android:text="Audience Poll"
                        android:layout_gravity="center"
                        app:typeface="lato_regular" />

                    <ImageView
                        android:id="@+id/powerup_bank_audience_poll"
                        android:layout_width="@dimen/dim_26"
                        android:layout_height="@dimen/dim_26"
                        android:layout_marginTop="@dimen/dim_8"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:visibility="visible" />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/powerup_bank_audience_poll_powerup_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dim_8"
                        android:text="0"
                        android:layout_gravity="center"
                        app:typeface="lato_bold" />


                </LinearLayout>

            </LinearLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/powerup_bank_low_powerups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deepcarmine"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_12"
                android:text="You are running low on powerups!"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                app:typeface="lato_regular" />


            <!--Refer code section -->
            <LinearLayout
                android:id="@+id/powerup_bank_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_20"
                android:layout_marginTop="@dimen/dim_16"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_bank_subheading_tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/sp_11"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_2"
                    app:typeface="lato_regular" />

            </LinearLayout>

            <!--Earn More Powerups section -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_0.5"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_16"
                android:background="@color/line_separator" />

            <!--How to User Bank -->
            <RelativeLayout
                android:id="@+id/powerup_bank_how_to_use_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_20"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/nav_row_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    android:background="?android:attr/selectableItemBackground">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/how_to_use_powerup_bank_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn how to use the  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_bold" />

                    <ImageView
                        android:id="@+id/how_to_use_powerup_bank_iv"
                        android:layout_width="@dimen/dim_12"
                        android:layout_height="@dimen/dim_12"
                        android:layout_marginTop="@dimen/dp_1"
                        android:src="@drawable/powerup_bank_icon"/>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/how_to_use_powerup_bank_tv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  powerup bank"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_bold" />

                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim_2"
                    android:rotation="180"
                    android:src="@drawable/back_icon_grey" />

            </RelativeLayout>

            <View
                android:id="@+id/powerup_bank_how_to_use_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_0.5"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:background="@color/line_separator" />

            <RelativeLayout
                android:id="@+id/powerup_bank_earn_more_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_20"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:id="@+id/powerup_bank_refer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/nav_row_height"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="visible"
                        android:background="?android:attr/selectableItemBackground">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/navigation_earn_more_tv_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refer a friend and earn "
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:id="@+id/navigation_earn_more_iv"
                            android:layout_width="@dimen/nav_row_icon_dimen"
                            android:layout_height="@dimen/nav_row_icon_dimen"
                            android:layout_marginTop="@dimen/dp_1"
                            android:src="@drawable/navigation_powerup_icon"/>

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/navigation_earn_more_tv_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" powerups!"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/dim_2"
                        android:rotation="180"
                        android:src="@drawable/back_icon_grey" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/powerup_bank_store_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_0.5"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:background="@color/line_separator" />

            <!--Transaction section -->
            <RelativeLayout
                android:id="@+id/powerup_bank_store_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_20"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Buy Powerups"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim_2"
                    android:rotation="180"
                    android:src="@drawable/back_icon_grey" />

            </RelativeLayout>

            <View
                android:id="@+id/powerup_bank_txn_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_0.5"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:background="@color/line_separator" />

            <!--Transaction section -->
            <RelativeLayout
                android:id="@+id/powerup_bank_txn_history_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_20"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Transaction History"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim_2"
                    android:rotation="180"
                    android:src="@drawable/back_icon_grey" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_0.5"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:background="@color/line_separator" />


            <!--Terms and Conditions section -->
            <RelativeLayout
                android:id="@+id/powerup_bank_terms_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_20"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Terms and Conditions"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim_2"
                    android:rotation="180"
                    android:src="@drawable/back_icon_grey" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_0.5"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:background="@color/line_separator" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
