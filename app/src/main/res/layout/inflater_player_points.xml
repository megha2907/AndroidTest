<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <com.jeeva.android.widgets.HmImageView
        android:id="@+id/player_points_iv_photo"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:scaleType="centerCrop"
        app:defaultImage="@drawable/left_placeholder_icon" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/player_points_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/player_points_iv_photo"
        android:layout_toRightOf="@id/player_points_iv_photo"
        android:text="Hello"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        app:typeface="lato_regular" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/player_points_tv_label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/player_points_iv_photo"
        android:layout_alignLeft="@id/player_points_tv_name"
        android:text="@string/view_profile"
        android:textColor="@color/white_60"
        android:textSize="@dimen/dp_14"
        app:typeface="lato_regular" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/player_points_tv_label_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/player_points_tv_name"
        android:layout_marginRight="@dimen/dp_20"
        android:text="@string/total_points"
        android:textColor="@color/yellowcolor"
        android:textSize="@dimen/dp_18"
        app:typeface="roboto_condensed" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/player_points_tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/player_points_tv_label_points"
        android:layout_alignTop="@id/player_points_tv_label_view"
        android:text="390"
        android:textColor="@color/yellowcolor"
        android:textSize="@dimen/dp_18"
        app:typeface="roboto_condensed" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/player_points_iv_photo"
        android:background="@color/white_60" />

</RelativeLayout>