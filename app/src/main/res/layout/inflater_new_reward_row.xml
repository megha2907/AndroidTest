<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dim_50"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dim_26">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/reward_row_tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dim_150"
        android:maxLines="1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:typeface="lato_bold" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/reward_row_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:ellipsize="end"
        android:maxWidth="@dimen/dim_150"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reward_row_tv_rank"
        android:textColor="@color/white_90"
        android:textSize="@dimen/sp_11"
        app:typeface="lato_regular" />

        </RelativeLayout>

    <View
        android:layout_width="@dimen/dim_10"
        android:layout_height="@dimen/dim_2"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="@color/code_gray_13"/>


    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/reward_row_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dim_150"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dim_26"
        android:gravity="center"
        android:textColor="@color/paid_entry_tv_color"
        android:textSize="@dimen/sp_14"
        app:typeface="lato_bold" />
</RelativeLayout>