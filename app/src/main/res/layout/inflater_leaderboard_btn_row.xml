<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/match_result_commentary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_result_commentary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="left"
        android:textColor="@color/white_999999"
        android:textColorLink="#29abe2"
        android:textSize="@dimen/sp_12"
        android:visibility="visible"
        app:typeface="lato_regular" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/schedule_row_tv_match_result_report_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/dim_4"
        android:textColor="@color/white_999999"
        android:textColorLink="#29abe2"
        android:text="See something wrong with these answers? Chat and report these issues to us by clicking on the button below -"
        android:textSize="@dimen/sp_12"
        app:typeface="lato_regular" />

    <RelativeLayout
        android:id="@+id/schedule_row_rl_report_btn"
        android:layout_width="@dimen/dim_60"
        android:layout_height="@dimen/dim_24"
        android:layout_alignParentRight="true"
        android:background="@drawable/red_border_box"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dim_12">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/wallet_item_tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPORT"
            android:paddingBottom="@dimen/dim_3"
            android:layout_centerInParent="true"
            android:textColor="@drawable/report_tv_selector"
            android:textSize="@dimen/sp_10"
            app:typeface="lato_regular" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:alpha="0.4"
        android:background="@color/white"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/match_result_commentary_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/my_results_ll_others_answers"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/others_answers_blue_icon" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Other's Answers"
                android:textColor="@color/btn_powerup_screen_color"
                android:textSize="@dimen/dp_14"
                app:typeface="roboto_condensed" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_results_ll_leaderboards"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/leaderboard_blue_icon" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Leaderboards"
                android:textColor="@color/btn_powerup_screen_color"
                android:textSize="@dimen/dp_14"
                app:typeface="roboto_condensed" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_results_ll_share_score"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/share_blue_icon" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Share Score"
                android:textColor="@color/btn_powerup_screen_color"
                android:textSize="@dimen/dp_14"
                app:typeface="roboto_condensed" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>