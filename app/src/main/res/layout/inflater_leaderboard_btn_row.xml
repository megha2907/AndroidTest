<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/leaderboard_row_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/leaderboard_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/powerup_screen_btn_bg"
            android:onClick="onClick"
            android:text="VIEW LEADERBOARD"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_16"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            app:typeface="lato_regular"
            android:textColor="@color/white"
            />

    </LinearLayout>



</RelativeLayout>