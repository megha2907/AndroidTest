<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingBottom="@dimen/dp_20">

    <FrameLayout
        android:id="@+id/fuzzy_players_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <android.support.v7.widget.CardView
            android:id="@+id/fuzzy_players_cv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_10"
            app:cardBackgroundColor="@color/linecolor">

            <com.jeeva.android.widgets.customfont.CustomEditText
                android:id="@+id/fuzzy_players_et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/transparent"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white_60"
                android:textSize="@dimen/dp_16"
                app:typeface="roboto_condensed" />

        </android.support.v7.widget.CardView>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fuzzy_players_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fuzzy_players_fl"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@color/linecolor"
        android:clipToPadding="false" />

</RelativeLayout>