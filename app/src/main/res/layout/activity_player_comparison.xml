<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/htab_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_screen_bg">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/htab_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/profile_tab_color"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/htab_collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">


                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:id="@+id/main_toolbar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_alignParentStart="true"
                        android:background="@color/black_20"
                        android:fitsSystemWindows="true"
                        android:orientation="horizontal">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Head to Head"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_14"
                            app:typeface="lato_regular" />


                        <ImageButton
                            android:id="@+id/player_profile_btn_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/dp_15"
                            android:src="@drawable/back_icon_grey" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main_toolbar_layout">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/dp_50"
                            android:orientation="vertical">

                            <in.sportscafe.nostragamus.module.common.RoundImage
                                android:id="@+id/player_comparison_user_iv_image"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_18"
                                android:src="@drawable/left_placeholder_icon" />


                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/player_comparison_user_tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/player_comparison_user_iv_image"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_8"
                                android:paddingBottom="@dimen/dp_18"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_14"
                                app:typeface="lato_regular"
                                android:ellipsize="end"
                                android:maxEms="15"
                                android:singleLine="true"/>

                        </LinearLayout>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/compare_vs_icon"
                            android:layout_centerInParent="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_50"
                            android:orientation="vertical">

                            <in.sportscafe.nostragamus.module.common.RoundImage
                                android:id="@+id/player_comparison_other_player_image"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_18"
                                android:src="@drawable/right_placeholder_icon" />


                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/player_comparison_other_player_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/player_comparison_other_player_image"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_8"
                                android:paddingBottom="@dimen/dp_18"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_14"
                                app:typeface="lato_regular"
                                android:ellipsize="end"
                                android:maxEms="15"
                                android:singleLine="true"/>

                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>


            </android.support.design.widget.CollapsingToolbarLayout>


            <in.sportscafe.nostragamus.module.common.CustomTabLayout
                android:id="@+id/tab_tl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_below="@+id/player_player_profile_ll_points_parent"
                android:layout_gravity="center_horizontal|top"
                android:background="@color/profile_tab_color"
                android:elevation="@dimen/dp_0"
                app:layout_collapseMode="pin"
                app:selected_typeface="lato_bold"
                app:tabIndicatorColor="@color/tabcolor"
                app:tabIndicatorHeight="@dimen/dp_4"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/ProfileTabLayoutTextAppearance"
                app:tabTextColor="@color/silver_chalice"
                app:unselected_textSize="@dimen/dp_14"
                app:unselected_typeface="lato_regular" />

        </android.support.design.widget.AppBarLayout>


        <in.sportscafe.nostragamus.module.common.CustomViewPager
            android:id="@+id/tab_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:paddingBottom="@dimen/dp_10"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>