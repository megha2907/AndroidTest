<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="in.sportscafe.nostragamus.module.contest.ui.viewPager.ContestViewPagerFragment"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:paddingTop="@dimen/dim_10"
            android:paddingLeft="@dimen/dim_13"
            android:paddingRight="@dimen/dim_13"
            android:paddingBottom="@dimen/dim_5">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/contest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/contest_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contest_name"
                android:textColor="@color/white_999999"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_regular" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/contest_timer_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_bold"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/contest_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Empty list -->
        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/empty_list_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/grey_999999"
            android:text="No contest!"
            android:textSize="@dimen/sp_11"
            app:typeface="lato_regular"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dim_20"/>

    </LinearLayout>

    <!-- Loading View -->
    <LinearLayout
        android:id="@+id/contestJoinProgressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <in.sportscafe.nostragamus.utils.loadingAnim.LoadingIndicatorView
            android:id="@+id/loading_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/loading_animation_color"
            android:visibility="gone"
            />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
