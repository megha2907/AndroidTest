<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recent_activity_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim_16"
        android:paddingTop="@dimen/dim_13"
        android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_17"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recent_activity_type_icon"
                android:layout_width="@dimen/dim_32"
                android:layout_height="@dimen/dim_32"
                android:layout_marginTop="@dimen/dim_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_12"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/recent_activity_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="-"
                    android:textAllCaps="true"
                    android:textColor="@color/white_999999"
                    android:textSize="@dimen/sp_10"
                    app:typeface="lato_regular" />

                <ImageView
                    android:id="@+id/recent_activity_unread_icon"
                    android:layout_width="@dimen/dim_6"
                    android:layout_height="@dimen/dim_6"
                    android:layout_marginLeft="@dimen/dim_7"
                    android:layout_marginTop="@dimen/dim_2"
                    android:background="@drawable/red_color_circle"
                    android:gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/recent_activity_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_2"
                android:gravity="left"
                android:text="-"
                android:textColor="@color/white_eeeeee"
                android:textSize="@dimen/sp_12"
                app:typeface="lato_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim_18"
            android:gravity="top|right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/recent_activity_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Today"
                    android:textColor="@color/white_999999"
                    android:textSize="@dimen/sp_10"
                    app:typeface="lato_regular" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recent_activity_link_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/recent_activity_link_icon"
                    android:layout_width="@dimen/dim_10"
                    android:layout_height="@dimen/dim_10"
                    android:layout_marginBottom="@dimen/dim_2"
                    android:background="@drawable/link_icon"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_marginRight="@dimen/dim_12"
        android:background="@color/line_separator_two" />

</LinearLayout>
