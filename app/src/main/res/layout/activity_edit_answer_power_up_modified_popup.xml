<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <RelativeLayout
        android:id="@+id/modified_powerup_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:id="@+id/modified_powerup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dim_16"
            android:layout_marginRight="@dimen/dim_16"
            android:layout_marginTop="@dimen/dim_15"
            app:cardBackgroundColor="#CC000000"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grey_303030"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:id="@+id/modified_powerup_ll_heading_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_56"
                    android:background="@color/colorBackground"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/modified_powerup_tv_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_8"
                        android:text="Your Changes will be lost!"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_bold" />

                </LinearLayout>

                <!-- Image & content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="@dimen/dim_76">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/dim_100"
                            android:layout_height="@dimen/dim_100"
                            android:src="@drawable/edit_answer_not_save_icn" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dim_16"
                            android:text="Swipe to save your prediction!"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            app:typeface="lato_bold" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/dim_16"
                            android:layout_marginRight="@dimen/dim_16"
                            android:layout_marginTop="@dimen/dim_12"
                            android:text="You seem to have edited powerups. Now swipe your choice to save prediction, or cancel your changes"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            app:typeface="lato_regular" />

                    </LinearLayout>

                </LinearLayout>

                <!-- buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="@dimen/dim_16"
                    android:paddingBottom="@dimen/dim_20">

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/cancel_btn"
                        android:layout_width="@dimen/dim_130"
                        android:layout_height="@dimen/dim_40"
                        android:layout_marginTop="@dimen/dim_1"
                        android:layout_marginLeft="@dimen/dim_20"
                        android:background="@drawable/popup_grey_button_selector"
                        android:gravity="center"
                        android:minWidth="@dimen/dim_72"
                        android:paddingBottom="@dimen/dim_2"
                        android:text="Cancel Changes"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_bold" />

                    <com.jeeva.android.widgets.customfont.CustomButton
                        android:id="@+id/ok_btn"
                        android:layout_width="@dimen/dim_130"
                        android:layout_height="@dimen/dim_40"
                        android:layout_marginTop="@dimen/dim_1"
                        android:layout_marginLeft="@dimen/dim_12"
                        android:background="@drawable/blue_button_selector"
                        android:gravity="center"
                        android:minWidth="@dimen/dim_72"
                        android:paddingBottom="@dimen/dim_2"
                        android:text="Keep Editing"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="lato_bold" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <!-- Loading View -->
    <LinearLayout
        android:id="@+id/submitReportProgressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <in.sportscafe.nostragamus.utils.loadingAnim.LoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/loading_animation_color"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/modified_powerup_cross_btn"
        android:layout_width="@dimen/dim_32"
        android:layout_height="@dimen/dim_32"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/modified_powerup_rl"
        android:layout_marginTop="@dimen/dim_18"
        android:elevation="@dimen/dp_4"
        android:padding="@dimen/dp_5"
        android:src="@drawable/popup_cross_icon"
        android:visibility="visible" />

</RelativeLayout>