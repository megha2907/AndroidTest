    <LinearLayout
        android:id="@+id/home_ll_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_ibtn_notification"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClickTab"
            android:padding="@dimen/dp_15"
            android:src="@drawable/menu_notification_btn_selector" />

        <ImageButton
            android:id="@+id/home_ibtn_feed"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClickTab"
            android:padding="@dimen/dp_15"
            android:src="@drawable/menu_home_btn_selector" />

        <ImageButton
            android:id="@+id/home_ibtn_profile"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClickTab"
            android:padding="@dimen/dp_15"
            android:src="@drawable/menu_profile_btn_selector" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_fl_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_ll_tabs"
      />

</RelativeLayout>