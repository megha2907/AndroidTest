<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        android:id="@+id/home_toolbar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/white"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/home_ll_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_ibtn_feed"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.3"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClickTab"
            android:padding="@dimen/dp_15"
            android:src="@drawable/menu_notification_icon" />

        <ImageButton
            android:id="@+id/home_ibtn_play"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.3"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClickTab"
            android:padding="@dimen/dp_15"
            android:src="@drawable/menu_home_icon" />

        <ImageButton
            android:id="@+id/home_ibtn_profile"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.3"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClickTab"
            android:padding="@dimen/dp_15"
            android:src="@drawable/menu_profile_icon" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_fl_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_ll_tabs"
        android:layout_below="@+id/home_toolbar"/>

</RelativeLayout>