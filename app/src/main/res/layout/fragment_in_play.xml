<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Heading layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dim_40"
        android:background="@color/new_challenge_tab_bg">



    </LinearLayout>

    <LinearLayout
        android:id="@+id/inplayContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Tabs Layout -->
        <android.support.design.widget.TabLayout
            android:id="@+id/inplay_tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            app:tabIndicatorHeight="@dimen/dim_2"
            app:tabIndicatorColor="#008ad6"
            android:background="@color/new_challenge_tab_bg"/>

        <!-- ViewPager -->
        <in.sportscafe.nostragamus.module.common.CustomViewPager
            android:id="@+id/inplay_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!-- Loading View -->
    <LinearLayout
        android:id="@+id/inPlayProgressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <in.sportscafe.nostragamus.module.common.NostraProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>