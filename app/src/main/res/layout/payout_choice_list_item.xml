<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_80"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <RadioButton
        android:id="@+id/payout_choice_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/payout_choice_acc_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Paytm Wallet"
        android:layout_toRightOf="@id/payout_choice_radio_button"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:typeface="lato_regular"
        android:layout_marginLeft="@dimen/dp_10"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/payout_choice_acc_number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="XXXXX XXX123"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:typeface="lato_regular"
        android:layout_marginLeft="@dimen/dp_10"/>

</RelativeLayout>