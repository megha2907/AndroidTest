<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        android:id="@+id/join_group_toolbar"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/toolbar_title"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/join_group_tv_join_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_100"
            android:gravity="center_horizontal"
            android:text="To join an existing group,\nenter the group code below"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/white"
            />

        <com.jeeva.android.widgets.customfont.CustomEditText
            android:id="@+id/join_group_et_group_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/join_group_tv_join_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:inputType="text"
            android:maxLength="50"
            android:textSize="@dimen/dp_18"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="@dimen/dp_100"
            android:textColor="@color/white"
            />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/join_group_btn_join"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_46"
            android:layout_below="@id/join_group_et_group_code"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:onClick="onClick"
            android:text="JOIN"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            android:background="@drawable/powerup_screen_btn_bg"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl1"
            android:layout_below="@+id/join_group_btn_join"
            android:layout_marginTop="@dimen/dp_20"
            >


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/new_group_tv_sport_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="or"
                android:textSize="@dimen/dp_16"
                app:typeface="roboto_condensed"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp_10"/>


            <View
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_0.7"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_toLeftOf="@+id/new_group_tv_sport_hint"
                android:alpha="0.5"
                android:background="@color/white"
                />

            <View
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_0.7"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_toRightOf="@+id/new_group_tv_sport_hint"
                android:alpha="0.5"
                android:background="@color/white" />

        </RelativeLayout>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/join_group_tv_create_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/join_group_btn_join"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_80"
            android:gravity="center_horizontal"
            android:text="Create your own Group"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/white" />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/join_group_btn_new_group"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_below="@id/join_group_tv_create_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:onClick="onClick"
            android:text="CREATE NEW GROUP"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            android:background="@drawable/powerup_screen_btn_bg"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/join_group_ll_join_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@color/gallery"
        android:visibility="gone"
        android:orientation="vertical">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:text="Your request to join the group has been sent to the group admin for approval. You will be notified, Once the admin accept your request."
            android:textSize="@dimen/dp_18" />

    </LinearLayout>
</RelativeLayout>