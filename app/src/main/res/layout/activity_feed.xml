<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/feed_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/colorBackground"
        android:elevation="4dp"
        app:contentInsetLeft="@dimen/dp_0"
        app:contentInsetStart="@dimen/dp_0"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/feed_tv_tournament_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:textSize="@dimen/dp_16"
                app:typeface="roboto_condensed_bold"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/feed_tv_tournament_matches_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feed_tv_tournament_name"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/feed_rl_powerup_layout"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                app:typeface="roboto_condensed"/>

            <RelativeLayout
                android:id="@+id/feed_rl_powerup_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/feed_tv_tournament_name"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/powerups_iv_2x"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerVertical="true"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_8"
                    android:src="@drawable/powerup_2x_white" />

                <ImageView
                    android:id="@+id/powerups_iv_nonegs"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toRightOf="@id/powerups_iv_2x"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_8"
                    android:src="@drawable/powerup_nonegs_white" />

                <ImageView
                    android:id="@+id/powerups_iv_poll"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toRightOf="@id/powerups_iv_nonegs"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_8"
                    android:src="@drawable/powerup_audience_poll_white" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_2x_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_2x"
                    android:layout_alignTop="@id/powerups_iv_2x"
                    android:layout_marginRight="@dimen/_dp_7"
                    android:layout_marginTop="@dimen/_dp_7"
                    android:alpha="0.9"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_9"
                    app:typeface="lato_bold" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_nonegs_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_nonegs"
                    android:layout_alignTop="@id/powerups_iv_nonegs"
                    android:layout_marginRight="@dimen/_dp_7"
                    android:layout_marginTop="@dimen/_dp_7"
                    android:alpha="0.9"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_9"
                    app:typeface="lato_bold" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/powerup_tv_poll_count"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignRight="@id/powerups_iv_poll"
                    android:layout_alignTop="@id/powerups_iv_poll"
                    android:layout_marginRight="@dimen/_dp_7"
                    android:layout_marginTop="@dimen/_dp_7"
                    android:alpha="0.9"
                    android:background="@drawable/powerup_count_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_9"
                    app:typeface="lato_bold" />


            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
    <!--android:id="@+id/swifeRefresh"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/feed_toolbar"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_alignParentStart="true">-->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/feed_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/feed_toolbar"
        android:background="@color/black" />


    <!--</android.support.v4.widget.SwipeRefreshLayout>-->


</RelativeLayout>