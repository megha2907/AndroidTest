<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/new_challenge_frgmnt_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context="in.sportscafe.nostragamus.module.newChallenges.ui.NewChallengesFragment">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/htab_collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <!-- Heading layout -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_40"
                        android:background="@drawable/toolbar_bg">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dim_16">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true">

                                <com.jeeva.android.widgets.customfont.CustomTextView
                                    android:id="@+id/toolbar_heading_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Challenges"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_14"
                                    app:typeface="lato_regular" />

                                <com.jeeva.android.widgets.customfont.CustomTextView
                                    android:id="@+id/toolbar_heading_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dim_3"
                                    android:textColor="@color/white_60"
                                    android:textSize="@dimen/sp_13"
                                    app:typeface="lato_regular" />

                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/toolbar_wallet_rl"
                                android:layout_width="@dimen/dim_100"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingRight="@dimen/dim_16">

                                <com.jeeva.android.widgets.customfont.CustomTextView
                                    android:id="@+id/toolbar_wallet_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/white_70"
                                    android:textSize="@dimen/sp_13"
                                    app:typeface="lato_regular" />

                                <ImageView
                                    android:id="@+id/toolbar_wallet_icon"
                                    android:layout_width="@dimen/dim_32"
                                    android:layout_height="@dimen/dim_32"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/toolbar_wallet_money"
                                    android:background="@drawable/ripple_effect_bg"
                                    android:padding="@dimen/dim_8"
                                    android:src="@drawable/toolbar_wallet_icon" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <WebView
                            android:id="@+id/challenges_ads_webView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dim_60"
                            android:scrollbars="none"
                            android:visibility="visible" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>


            <!-- Tabs Layout -->
            <android.support.design.widget.TabLayout
                android:id="@+id/challenge_tabs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_56"
                android:background="@color/new_challenge_tab_bg"
                app:layout_collapseMode="pin"
                app:tabGravity="fill"
                app:tabIndicatorColor="#008ad6"
                app:tabIndicatorHeight="@dimen/dim_2"
                app:tabMinWidth="@dimen/dim_66"
                app:tabMode="fixed"
                app:tabPaddingEnd="0dp"
                app:tabPaddingStart="0dp" />


        </android.support.design.widget.AppBarLayout>


        <!-- ViewPager -->
        <in.sportscafe.nostragamus.module.common.CustomViewPager
            android:id="@+id/challenge_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <!-- Empty msg -->
        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/empty_new_challenges_list_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_20"
            android:text="There are no challenges available right now!"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_11"
            android:visibility="gone"
            app:typeface="lato_regular" />


        <!-- Loading View --><LinearLayout
        android:id="@+id/newChallengeProgressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <!--<in.sportscafe.nostragamus.module.common.NostraProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />-->

        <in.sportscafe.nostragamus.utils.loadingAnim.LoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/loading_animation_color" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/newChallengeContentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
