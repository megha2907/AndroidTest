<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/feed_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dp_160"
        android:paddingTop="@dimen/dp_5" />

    <ImageView
        android:id="@+id/result_timeline_empty_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/leaderboard_play_challenge_btn"
        android:scaleType="centerCrop"
        android:layout_below="@+id/lb_landing_toolbar"
        android:src="@drawable/empty_results_image"
        android:visibility="gone" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/result_timeline_empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/leaderboard_play_challenge_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_130"
        android:gravity="center"
        android:text="@string/empty_results"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_13"
        android:visibility="gone"
        app:typeface="roboto_condensed" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/leaderboard_play_challenge_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/tournament_ready_btn_bg"
        android:onClick="onClick"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:text="Play Challenges"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_13"
        android:visibility="gone"
        app:typeface="lato_bold" />


</RelativeLayout>