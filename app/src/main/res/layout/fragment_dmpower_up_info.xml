<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="in.sportscafe.nostragamus.module.navigation.help.dummygame.DGPowerUpInfoFragment">

    <!-- Timeline ui -->
    <RelativeLayout
        android:id="@+id/dg_timeline_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_20"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/dg_timeline_textview_1"
                android:layout_width="@dimen/dim_16"
                android:layout_height="@dimen/dim_16"
                android:background="@drawable/blue_round_tick"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                app:typeface="lato_regular" />

            <View
                android:layout_width="@dimen/dim_52"
                android:layout_height="@dimen/dim_2"
                android:background="@color/blue_008ae1"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/dg_timeline_textview_2"
                android:layout_width="@dimen/dim_16"
                android:layout_height="@dimen/dim_16"
                android:background="@drawable/blue_round_tick"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                app:typeface="lato_regular" />

            <View
                android:layout_width="@dimen/dim_52"
                android:layout_height="@dimen/dim_2"
                android:background="@color/grey"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/dg_timeline_textview_3"
                android:layout_width="@dimen/dim_16"
                android:layout_height="@dimen/dim_16"
                android:text="3"
                android:background="@drawable/grey_circle_border"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                app:typeface="lato_regular" />

        </LinearLayout>

    </RelativeLayout>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/dg_powerup_heading_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_10"
        android:gravity="center"
        android:text="You have Scored +10 points for that prediction!"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        app:typeface="lato_bold"
        android:visibility="invisible"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/dg_powerup_sub_heading_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_10"
        android:lineSpacingExtra="@dimen/dim_2"
        android:gravity="center"
        android:text="You can increase your points and outscore your opponents by using the following powerups!"
        android:textColor="@color/white_dim"
        android:textSize="@dimen/sp_12"
        app:typeface="lato_regular"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/dg_powerup_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dim_48"
            android:layout_marginLeft="@dimen/dim_40"
            android:layout_marginRight="@dimen/dim_40">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Powerups"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                app:typeface="lato_bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_0.5"
                android:layout_weight="1"
                android:background="#404040"
                android:layout_marginLeft="@dimen/dim_10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dim_36"
            android:layout_marginLeft="@dimen/dim_36">

            <!-- Doubler -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim_28">

                <!-- 2x view -->
                <!--<FrameLayout
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_gravity="center_vertical">-->

                <ImageView
                    android:id="@+id/powerups_iv_2x"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/powerup_doubler_without_bg"/>

                <!--</FrameLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_10">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_regular"
                        android:text="Doubler"
                        />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_999999"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular"
                        android:text="Doubles the points scored for the prediction"
                        android:layout_marginTop="@dimen/dim_4"/>

                </LinearLayout>


            </LinearLayout>

            <!-- No negative -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim_28">

                <!-- No-negative view -->
                <!--<FrameLayout
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_gravity="center_vertical">-->

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/powerup_no_neg_without_bg"/>

                <!--</FrameLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_10">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_regular"
                        android:text="No Negative"
                        />

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_999999"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular"
                        android:text="Removes negative making for any prediction"
                        android:layout_marginTop="@dimen/dim_4"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Audience poll -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim_28">

                <!-- Audience poll view -->
                <!--<FrameLayout
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_gravity="center_vertical">-->

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/powerup_audience_poll_without_bg"/>

                <!--</FrameLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_10">

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_regular"
                        android:text="Audience Poll"/>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_999999"
                        android:textSize="@dimen/sp_12"
                        app:typeface="lato_regular"
                        android:text="Shows how the other players have predicted"
                        android:layout_marginTop="@dimen/dim_4"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/dm_learn_powerup_btn"
        android:layout_width="@dimen/dim_320"
        android:layout_height="@dimen/dim_40"
        android:layout_marginTop="@dimen/dim_44"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/blue_008ae1_button_selector"
        android:gravity="center"
        android:minWidth="@dimen/dim_72"
        android:paddingBottom="@dimen/dim_2"
        android:paddingLeft="@dimen/dim_15"
        android:paddingRight="@dimen/dim_15"
        android:paddingTop="@dimen/dp_0"
        android:text="Learn how to use powerups"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        app:typeface="lato_bold"
        android:visibility="invisible"/>

</LinearLayout>
