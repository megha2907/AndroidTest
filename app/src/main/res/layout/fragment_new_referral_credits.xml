<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/referral_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!--Referral Credits section -->
            <LinearLayout
                android:id="@+id/refer_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20_gap"
                android:background="?android:attr/selectableItemBackground"
                android:fitsSystemWindows="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">


                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/referral_credit_number_of_friends_added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:includeFontPadding="false"
                    android:text="0 Friends Added"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_32"
                    app:typeface="lato_bold" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/referral_credit_summary_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_20_gap"
                    android:text="SUMMARY"
                    android:textColor="@color/grey7"
                    android:textSize="@dimen/sp_12"
                    app:typeface="lato_regular" />

                <RelativeLayout
                    android:id="@+id/referral_credits_pro_powerup_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_14">


                    <RelativeLayout
                        android:id="@+id/referral_credits_powerup_rl"
                        android:layout_width="@dimen/dp_160"
                        android:layout_height="@dimen/dp_90"
                        android:background="@drawable/referral_powerups_bg"
                        android:clipToPadding="false"
                        android:elevation="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_12">

                        <LinearLayout
                            android:id="@+id/referral_credits_powerup_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.jeeva.android.widgets.customfont.CustomTextView
                                    android:id="@+id/referral_credits_2x_powerup_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_14"
                                    app:typeface="lato_bold" />

                                <ImageView
                                    android:id="@+id/referral_credits_powerup_2x"
                                    android:layout_width="@dimen/referral_powerup_size"
                                    android:layout_height="@dimen/referral_powerup_size"
                                    android:layout_marginTop="@dimen/dp_4"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/double_powerup_small"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_22"
                                android:orientation="vertical">

                                <com.jeeva.android.widgets.customfont.CustomTextView
                                    android:id="@+id/referral_credits_noneg_powerup_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_14"
                                    app:typeface="lato_bold" />

                                <ImageView
                                    android:id="@+id/referral_credits_noneg_powerup"
                                    android:layout_width="@dimen/referral_powerup_size"
                                    android:layout_height="@dimen/referral_powerup_size"
                                    android:layout_marginTop="@dimen/dp_4"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/no_negative_powerup_small"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_22"
                                android:orientation="vertical">

                                <com.jeeva.android.widgets.customfont.CustomTextView
                                    android:id="@+id/referral_credits_player_poll_powerup_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_14"
                                    app:typeface="lato_bold" />

                                <ImageView
                                    android:id="@+id/referral_credits_player_poll_powerup"
                                    android:layout_width="@dimen/referral_powerup_size"
                                    android:layout_height="@dimen/referral_powerup_size"
                                    android:layout_marginTop="@dimen/dp_4"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/audience_poll_powerup_small"
                                    android:visibility="visible" />

                            </LinearLayout>

                        </LinearLayout>

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/referral_credits_powerup_earned_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/referral_credits_powerup_ll"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_12"
                            android:includeFontPadding="false"
                            android:text="Powerups Earned"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_13"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_8"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_12"
                            android:rotation="180"
                            android:src="@drawable/back_icon_grey"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/referral_credits_money_earned_rl"
                        android:layout_width="@dimen/dp_160"
                        android:layout_height="@dimen/dp_90"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/referral_powerups_bg">

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/referral_credits_money_earned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_14"
                            android:includeFontPadding="false"
                            android:text="â‚¹ 0.00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_25"
                            app:typeface="lato_bold" />

                        <com.jeeva.android.widgets.customfont.CustomTextView
                            android:id="@+id/referral_credits_money_earned_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/referral_credits_money_earned"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_7"
                            android:includeFontPadding="false"
                            android:text="Money Earned"
                            android:textColor="@color/grey6"
                            android:textSize="@dimen/sp_13"
                            app:typeface="lato_regular" />

                        <ImageView
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_8"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_18"
                            android:rotation="180"
                            android:src="@drawable/back_icon_grey"
                            android:visibility="gone" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/referral_credits_ps_powerup_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/referral_powerups_bg"
                    android:clipToPadding="false"
                    android:elevation="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_12"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/referral_credits_ps_powerup_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_36"
                        android:layout_marginRight="@dimen/dp_36"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/referral_credits_ps_powerup_2x"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginTop="@dimen/dp_4"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:src="@drawable/double_powerup_small"
                                android:visibility="visible" />

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_ps_2x_powerup_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_22"
                                app:typeface="lato_bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/referral_credits_ps_noneg_powerup"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginTop="@dimen/dp_4"
                                android:background="@android:color/transparent"
                                android:src="@drawable/no_negative_powerup_small"
                                android:visibility="visible" />

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_ps_noneg_powerup_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_22"
                                app:typeface="lato_bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/referral_credits_ps_player_poll_powerup"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginTop="@dimen/dp_4"
                                android:background="@android:color/transparent"
                                android:src="@drawable/audience_poll_powerup_small"
                                android:visibility="visible" />

                            <com.jeeva.android.widgets.customfont.CustomTextView
                                android:id="@+id/referral_credits_ps_player_poll_powerup_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_22"
                                app:typeface="lato_bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/referral_credits_ps_powerup_earned_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/referral_credits_ps_powerup_ll"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:includeFontPadding="false"
                        android:text="Powerups Earned"
                        android:textColor="@color/grey6"
                        android:textSize="@dimen/sp_13"
                        app:typeface="lato_regular" />

                    <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_8"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"
                        android:rotation="180"
                        android:src="@drawable/back_icon_grey"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

        <!-- IF YOU WANT TO KEEP "Friends Activity" always on top of the RecyclerView, put this TextView here -->

        <!-- No transaction history empty view -->
        <LinearLayout
            android:id="@+id/referral_credits_no_history_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_20_gap"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_collapseMode="pin"
            android:elevation="@dimen/dp_0"
            android:paddingBottom="@dimen/dp_20"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/referral_image_size"
                android:layout_height="@dimen/referral_image_size"
                android:src="@drawable/no_referral_history" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="No Friends added yet. Add friends to start earning money and powerups regularly"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                app:typeface="lato_regular" />

            <!-- Refer Now Button -->
            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/refer_friend_btn"
                android:layout_width="@dimen/referral_history_btn_width"
                android:layout_height="@dimen/referral_history_btn_height"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/btn_refer_bg"
                android:clickable="false"
                android:paddingBottom="@dimen/dp_3"
                android:text="Refer Now!"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:typeface="lato_bold" />

        </LinearLayout>


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/referral_credits_friends_act_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/referral_appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/referral_credits_friends_act_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20_gap"
            android:text="FRIEND'S ACTIVITY"
            android:textColor="@color/grey7"
            android:textSize="@dimen/sp_12"
            app:typeface="lato_regular" />

        <View
            android:id="@+id/line_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@+id/referral_credits_friends_act_text"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@color/line_separator_two" />


        <!-- Recycler List view  -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/referralHistoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:visibility="visible"
            android:layout_below="@+id/line_separator"/>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
