<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.sportscafe.nostragamus.module.play.powerup.PowerupBankTransferToPlayActivity">

    <!-- Top layout -->
    <LinearLayout
        android:id="@+id/transfer_powerup_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_alignParentTop="true">

        <!-- Toolbar -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/wallet_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMedium"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/dim_14"
                        android:layout_height="@dimen/dim_14"
                        android:src="@drawable/bank_popup_white_icon"/>

                    <com.jeeva.android.widgets.customfont.CustomTextView
                        android:id="@+id/wallet_toolbar_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        app:typeface="lato_regular"
                        android:text="Powerup Bank"
                        android:layout_marginLeft="@dimen/dim_10"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/powerup_bank_close_imgView"
                    android:layout_width="@dimen/dim_36"
                    android:layout_height="@dimen/dim_36"
                    android:src="@drawable/cross_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim_10"
                    android:padding="@dimen/dim_11"/>

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

        <!-- Powerup info container -->
        <FrameLayout
            android:id="@+id/powerup_bank_info_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_150"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/dividercolor"
            android:layout_marginLeft="@dimen/dim_15"
            android:layout_marginRight="@dimen/dim_15"/>

        <!-- Add Powerup layout -->
        <FrameLayout
            android:id="@+id/powerup_bank_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <!-- Transparent layout (To show power-ups of play screen) -->
    <LinearLayout
        android:id="@+id/transfer_powerup_bottom_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
