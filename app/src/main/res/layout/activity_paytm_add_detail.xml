<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Toolbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/paytm_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" >

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/paytm_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="lato_regular" />

    </android.support.v7.widget.Toolbar>

    <!-- Bottom button -->
    <FrameLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/paytm_add_detail_btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/blue_button_selector"
            android:gravity="center"
            android:minWidth="@dimen/dp_200"
            android:onClick="onClickSave"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_0"
            android:text="Save Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            app:typeface="lato_bold"
            android:layout_marginLeft="@dimen/dim_14"
            android:layout_marginRight="@dimen/dim_14"
            android:layout_marginBottom="@dimen/dim_14"/>

    </FrameLayout>

    <!-- Screen -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/paytm_toolbar"
        android:background="@color/black"
        android:layout_above="@id/bottom_layout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/add_paytm_mobile_no_heading_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Enter Mobile Number"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        style="@style/EditTextIconStyle"
                        android:src="@drawable/phone_edittext_icon"
                        android:padding="@dimen/dim_12"/>
                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/paytm_add_detail_et_number"
                        style="@style/NewEditTextStyle"
                        android:inputType="phone"
                        android:maxLength="10"
                        />
                </LinearLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/add_paytm_mobile_no_error_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="Enter 10 digit number"
                    android:textColor="@color/radical_red"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular"
                    android:visibility="gone"/>

            </LinearLayout>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/add_paytm_confirm_mob_no_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Confirm Mobile Number"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_14"
                app:typeface="lato_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        style="@style/EditTextIconStyle"
                        android:src="@drawable/phone_edittext_icon"
                        android:padding="@dimen/dim_12"/>

                    <com.jeeva.android.widgets.customfont.CustomEditText
                        android:id="@+id/paytm_add_detail_et_confirm_number"
                        style="@style/NewEditTextStyle"
                        android:inputType="phone"
                        android:maxLength="10"/>

                </LinearLayout>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:id="@+id/add_paytm_confirm_mobile_no_error_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="Numbers don't match"
                    android:textColor="@color/radical_red"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_regular"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>