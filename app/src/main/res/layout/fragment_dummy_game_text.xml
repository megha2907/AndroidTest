<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/dummy_game_tv_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:typeface="roboto_condensed" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/dummy_game_tv_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:typeface="roboto_condensed" />

    <LinearLayout
        android:id="@+id/dummy_game_ll_center_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/dummy_game_tv_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:typeface="roboto_condensed_bold" />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/dummy_game_btn_action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@drawable/tournament_ready_btn_bg"
            android:gravity="center"
            android:minWidth="@dimen/dp_72"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_0"
            android:text="@string/dummy_start_action"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            app:typeface="roboto_condensed" />

    </LinearLayout>

</RelativeLayout>