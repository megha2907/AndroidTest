<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/dummy_game_tv_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        android:visibility="invisible"
        app:typeface="roboto_condensed_bold" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/dummy_game_tv_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        android:visibility="invisible"
        app:typeface="roboto_condensed_bold" />

    <LinearLayout
        android:id="@+id/dummy_game_ll_center_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/dummy_game_tv_center_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            android:visibility="invisible"
            app:typeface="roboto_condensed_bold" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/dummy_game_tv_center_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:minLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            android:visibility="invisible"
            app:typeface="roboto_condensed_bold" />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/dummy_game_btn_action1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/tournament_ready_btn_bg"
            android:gravity="center"
            android:minWidth="@dimen/dp_72"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_0"
            android:text="@string/dummy_start_action"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            android:visibility="invisible"
            app:typeface="lato_bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25">

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/dummy_game_btn_action2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:background="@drawable/group_btn_bg"
                android:gravity="center"
                android:minWidth="@dimen/dp_72"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_0"
                android:text="@string/dummy_start_action"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:visibility="invisible"
                app:typeface="lato_bold" />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/dummy_game_btn_action3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:background="@drawable/dg_skip_btn_bg"
                android:gravity="center"
                android:minWidth="@dimen/dp_72"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_0"
                android:text="@string/dummy_start_action"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:visibility="invisible"
                app:typeface="lato_bold" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>