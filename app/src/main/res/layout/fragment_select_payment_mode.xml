<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="in.sportscafe.nostragamus.module.navigation.NavigationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Add Money with Paytm -->
            <RelativeLayout
                android:id="@+id/add_money_paytm_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/paytm_img"
                    android:layout_width="@dimen/nav_row_icon_dimen"
                    android:layout_height="@dimen/nav_row_icon_dimen"
                    android:src="@drawable/payment_mode_paytm"
                    android:layout_centerVertical="true"/>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/paytm_img"
                    android:text="Paytm"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dim_2"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:src="@drawable/back_icon_grey" />

            </RelativeLayout>

            <View
                android:id="@+id/add_money_paytm_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/line_separator" />

            <!--Add Money with Debit Card -->
            <RelativeLayout
                android:id="@+id/add_money_debit_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/debit_card_img"
                    android:layout_width="@dimen/nav_row_icon_dimen"
                    android:layout_height="@dimen/nav_row_icon_dimen"
                    android:src="@drawable/payment_mode_debit_card"
                    android:layout_centerVertical="true"/>

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/debit_card_img"
                    android:text="Debit Card"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dim_2"
                    android:rotation="180"
                    android:src="@drawable/back_icon_grey"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:id="@+id/add_money_debit_card_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/line_separator" />

            <!--Add Money with Credit Card -->
            <RelativeLayout
                android:id="@+id/add_money_credit_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/credit_card_img"
                    android:layout_width="@dimen/nav_row_icon_dimen"
                    android:layout_height="@dimen/nav_row_icon_dimen"
                    android:layout_centerVertical="true"
                    android:src="@drawable/payment_mode_credit_card" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/credit_card_img"
                    android:text="Credit Card"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim_2"
                    android:rotation="180"
                    android:src="@drawable/back_icon_grey" />

            </RelativeLayout>

            <View
                android:id="@+id/add_money_credit_card_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/line_separator" />

            <!--Add Money with UPI -->
            <RelativeLayout
                android:id="@+id/add_money_upi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/upi_img"
                    android:layout_width="@dimen/nav_row_icon_dimen"
                    android:layout_height="@dimen/nav_row_icon_dimen"
                    android:layout_centerVertical="true"
                    android:src="@drawable/payment_mode_upi" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/upi_img"
                    android:text="UPI"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim_2"
                    android:rotation="180"
                    android:src="@drawable/back_icon_grey" />

            </RelativeLayout>

            <View
                android:id="@+id/add_money_upi_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/line_separator" />

            <!--Add Money with Other Wallets -->
            <RelativeLayout
                android:id="@+id/add_money_wallet_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/nav_row_height"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/wallet_img"
                    android:layout_width="@dimen/nav_row_icon_dimen"
                    android:layout_height="@dimen/nav_row_icon_dimen"
                    android:layout_centerVertical="true"
                    android:src="@drawable/payment_mode_wallet" />

                <com.jeeva.android.widgets.customfont.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/wallet_img"
                    android:text="Other Wallet"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="lato_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim_2"
                    android:rotation="180"
                    android:src="@drawable/back_icon_grey" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/line_separator" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
