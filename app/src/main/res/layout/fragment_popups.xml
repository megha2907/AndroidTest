<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_370"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/popup_ll_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/popup_heading_blue_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/popup_tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_8"
            android:text="Gameplay Help"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            app:typeface="lato_bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_ll_body_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_below="@id/popup_ll_heading_layout"
        android:background="@drawable/popup_content_bg"
        android:divider="@drawable/grey_divider_padding"
        android:orientation="vertical"
        android:showDividers="middle">

    <LinearLayout
        android:id="@+id/popup_ll_bodytext_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_content_bg"
        android:divider="@drawable/grey_divider_padding"
        android:dividerPadding="@dimen/dp_10"
        android:orientation="vertical"
        android:showDividers="middle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/popup_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:background="@drawable/popup_action_blue_btn_bg"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_72"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text="Play Sample Game"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14"
                    app:typeface="lato_bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/popup_cross_btn"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_4"
        android:elevation="@dimen/dp_4"
        android:padding="@dimen/dp_5"
        android:layout_alignParentRight="true"
        android:src="@drawable/popup_cross_icon"
        android:visibility="visible" />


</RelativeLayout>
