<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/colorMedium"
    >

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/all_groups_tv_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office Group"
        android:textColor="@color/white"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_40"
        />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/all_groups_tv_GroupMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Members"
        android:textColor="@color/silver_chalice"
        app:typeface="lato_bold"
        android:textSize="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_below="@+id/all_groups_tv_groupName"
        />



</RelativeLayout>