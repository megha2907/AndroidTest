<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">


        <com.jeeva.android.widgets.HmImageView
            android:id="@+id/all_groups_iv_groupImage"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:defaultImage="@drawable/left_placeholder_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/all_groups_iv_groupImage">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/all_groups_tv_groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                app:typeface="lato_regular" />


            <ImageView
                android:id="@+id/tournament_iv_rightarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_2"
                android:src="@drawable/back_icon_grey"
                android:rotation="180"/>

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/all_groups_tv_GroupMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/all_groups_tv_groupName"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/white_60"
                android:textSize="@dimen/dp_13"
                app:typeface="roboto_condensed" />

            <ImageView
                android:id="@+id/all_groups_iv_circleIcon"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_5"
                android:layout_below="@+id/all_groups_tv_groupName"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/all_groups_tv_GroupMembers"
                android:adjustViewBounds="true"
                android:src="@drawable/powerup_screen_count_bg"
                android:visibility="gone" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/all_groups_tv_GroupTournaments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/all_groups_tv_groupName"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@+id/all_groups_iv_circleIcon"
                android:text="6 Tournaments"
                android:textColor="@color/silver_chalice"
                android:textSize="@dimen/dp_13"
                android:visibility="gone"
                app:typeface="roboto_condensed" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/dividercolor" />


</RelativeLayout>