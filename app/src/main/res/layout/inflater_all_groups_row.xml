<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/black"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        android:background="@color/black"
        >


        <ImageView
            android:id="@+id/all_groups_iv_groupImage"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:adjustViewBounds="true"
            android:src="@drawable/placeholder_icon"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>


        <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/all_groups_tv_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office Group"
        android:textColor="@color/white"
        app:typeface="roboto_condensed"
        android:textSize="@dimen/dp_18"
        android:layout_toRightOf="@+id/all_groups_iv_groupImage"
        android:layout_marginLeft="@dimen/dp_10"
        />


        <ImageView
            android:id="@+id/tournament_iv_rightarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_feedicon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_2"
            />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/all_groups_tv_GroupMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="( 3 Members )"
        android:textColor="@color/silver_chalice"
        app:typeface="roboto_condensed"
        android:textSize="@dimen/dp_18"
        android:layout_toRightOf="@+id/all_groups_tv_groupName"
        android:layout_marginLeft="@dimen/dp_10"
        />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/all_groups_tv_GroupTournaments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 Tournaments"
            android:textColor="@color/silver_chalice"
            app:typeface="roboto_condensed"
            android:textSize="@dimen/dp_14"
            android:layout_toRightOf="@+id/all_groups_iv_groupImage"
            android:layout_below="@+id/all_groups_tv_GroupMembers"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/dividercolor"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />




</RelativeLayout>