<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/sport_selection_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onClick"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/sport_selection_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text="Sports"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_25"
            android:textStyle="bold" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:text="Follow your favorite sports"
            android:textSize="@dimen/dp_25" />

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:text="You can always change your preferences later from your profile selection"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sport_selection_rcv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="@dimen/dp_20" />

    </LinearLayout>

</RelativeLayout>