<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/htab_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_screen_bg"
        >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/htab_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/profile_tab_color"
        >

    <android.support.design.widget.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        android:id="@+id/group_info_collapse_toolbar"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
        >



        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/dp_20"
            android:text="Group"
            app:typeface="lato_regular"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@android:color/white"/>

        <ImageButton
            android:id="@+id/edit_group_btn"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/textcolorlight"
            android:onClick="onClick"
            android:src="@drawable/edit_profile_icon"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"/>



        <RelativeLayout
            android:id="@+id/group_info_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_54"
            >


            <com.jeeva.android.widgets.HmImageView
                android:id="@+id/group_iv_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:alpha="0.8"
                app:defaultImage="@drawable/placeholder_icon"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/group_info_ll_share"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:onClick="onClick"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_22"
                android:clipToPadding="false"
                android:src="@drawable/add_members_icon"
                app:backgroundTint="@color/btncolor"
                app:borderWidth="@dimen/dp_0"
                app:elevation="@dimen/dp_0"
                android:scaleType="center"/>

        </RelativeLayout>

    </android.support.design.widget.CollapsingToolbarLayout>

            <in.sportscafe.nostragamus.module.common.CustomTabLayout
                android:id="@+id/tab_tl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/profile_tab_color"
                app:layout_collapseMode="pin"
                app:selected_typeface="roboto_condensed"
                app:tabIndicatorColor="@color/tabcolor"
                app:tabIndicatorHeight="@dimen/dp_4"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/silver_chalice"
                app:unselected_textSize="@dimen/dp_14"
                app:unselected_typeface="roboto_condensed"
                android:layout_alignParentBottom="true"
                app:tabTextAppearance="@style/ProfileTabLayoutTextAppearance"
                android:elevation="@dimen/dp_0"
                />

    </android.support.design.widget.AppBarLayout>

