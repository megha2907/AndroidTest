<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        android:id="@+id/group_info_toolbar"
        />

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/group_info_toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMedium"
       >

        <RelativeLayout
            android:id="@+id/group_info_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:background="@color/colorBrown"
            >

        <ImageView
            android:id="@+id/group_info_iv_user_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@drawable/user_default"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group_info_rl2"
            android:layout_below="@id/group_info_rl1"
            >

        <ImageButton
            android:id="@+id/group_info_btn_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackground"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="@dimen/dp_15"
            android:src="@drawable/edit_icon"
            android:visibility="visible"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_25"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_group_info_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            app:theme="@style/TextLabel"
            android:layout_toLeftOf="@+id/group_info_btn_edit_name"
            android:layout_toStartOf="@+id/group_info_btn_edit_name">

        <com.jeeva.android.widgets.customfont.CustomEditText
            android:id="@+id/group_info_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Group Name"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:maxLines="1"
            android:text="First Group"
            android:textColor="@color/white"
            android:layout_below="@id/group_info_rl1"
            android:backgroundTint="@color/white"
            android:textSize="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_18"/>

        </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/group_info_ll_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_rl2"
            android:layout_marginTop="@dimen/dp_20"
            android:onClick="onClick"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_group_info_et_label_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                app:theme="@style/TextLabel"
                android:layout_marginRight="@dimen/dp_50">


            <com.jeeva.android.widgets.customfont.CustomEditText
                android:id="@+id/group_info_et_label_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Members"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:maxLines="1"
                android:text="12"
                android:textColor="@color/white"
                android:layout_below="@id/group_info_rl1"
                android:backgroundTint="@color/white"
                android:textSize="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_18" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/group_info_btn_edit_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="?attr/selectableItemBackground"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:padding="@dimen/dp_15"
                android:src="@drawable/edit_icon"
                android:visibility="visible"
                android:layout_marginRight="@dimen/dp_10" />

        </RelativeLayout>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/group_info_tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:text="Share your referral code to add more members"
            android:textColor="@color/textcolorlight"
            android:textSize="@dimen/dp_14"
            android:layout_below="@id/group_info_ll_members"/>

        <RelativeLayout
            android:id="@+id/group_info_ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_tv_share"
            android:longClickable="true"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorBrown">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/group_info_tv_share_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textcolorlight"
                android:textSize="@dimen/dp_20" />

        </RelativeLayout>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/group_info_tv_label_sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_ll_share"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="Sports"
            android:textColor="@color/textcolorlight"
            android:textSize="@dimen/dp_16" />


        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/group_info_btn_leave_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="?android:attr/selectableItemBackground"
            android:text="Leave Group"
            android:textColor="@color/haveLockBlue"
            android:textSize="@dimen/dp_15" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/group_info_rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/group_info_tv_label_sports"
            android:clipToPadding="false"
            android:layout_margin="@dimen/dp_20"/>

        <!--<com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/group_info_btn_delete_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_rcv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onClick"
            android:text="Delete Group"
            android:textColor="@color/haveLockBlue"
            android:textSize="@dimen/dp_15"
            android:visibility="gone" />-->

    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
