<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/group_info_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:text="Group Info"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_25"
        android:textStyle="bold" />

    <com.jeeva.android.widgets.customfont.CustomButton
        android:id="@+id/group_info_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onClick"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="@dimen/dp_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_info_tv_title"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/group_info_iv_user_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/user_default" />

        <ImageButton
            android:id="@+id/group_info_btn_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/group_info_et_name"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/group_info_et_name"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClick"
            android:padding="@dimen/dp_15"
            android:src="@drawable/edit"
            android:visibility="gone" />

        <com.jeeva.android.widgets.customfont.CustomEditText
            android:id="@+id/group_info_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/group_info_iv_user_image"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toLeftOf="@+id/group_info_btn_edit_name"
            android:layout_toRightOf="@id/group_info_iv_user_image"
            android:enabled="false"
            android:hint="Name"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:maxLines="1"
            android:text="First Group adsfsf asdfasdf"
            android:textColor="@color/black" />

        <View
            android:id="@+id/group_info_v_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.7"
            android:layout_below="@id/group_info_iv_user_image"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/group_info_ll_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_v_1"
            android:onClick="onClick"
            android:orientation="horizontal">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/group_info_tv_label_members"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:text="Members"
                android:textSize="@dimen/dp_20" />

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/group_info_tv_members_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="20"
                android:textSize="@dimen/dp_20" />

        </LinearLayout>

        <View
            android:id="@+id/group_info_v_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.7"
            android:layout_below="@id/group_info_ll_members"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/group_info_ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_v_2"
            android:longClickable="true"
            android:onClick="onClick"
            android:orientation="horizontal">

            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/group_info_tv_share_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/share_code"
                android:gravity="center_vertical"
                android:textColor="@color/haveLockBlue"
                android:textSize="@dimen/dp_20" />

        </LinearLayout>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/group_info_tv_label_sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_ll_share"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:text="Sports"
            android:textSize="@dimen/dp_20" />

        <View
            android:id="@+id/group_info_v_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.7"
            android:layout_below="@id/group_info_tv_label_sports"
            android:background="@color/black" />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/group_info_btn_leave_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="?android:attr/selectableItemBackground"
            android:text="Leave Group"
            android:textColor="@color/haveLockBlue"
            android:textSize="@dimen/dp_15" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/group_info_rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/group_info_btn_leave_group"
            android:layout_below="@id/group_info_v_4"
            android:clipToPadding="false" />

        <!--<com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/group_info_btn_delete_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_rcv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onClick"
            android:text="Delete Group"
            android:textColor="@color/haveLockBlue"
            android:textSize="@dimen/dp_15"
            android:visibility="gone" />-->

    </RelativeLayout>
</RelativeLayout>