<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        android:id="@+id/group_info_toolbar"
        >

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/dp_20"
            android:text="Group"
            app:typeface="lato_regular"
            android:textColor="@android:color/white"/>

        <ImageButton
            android:id="@+id/edit_group_btn"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/textcolorlight"
            android:onClick="onClick"
            android:src="@drawable/edit_profile_icon"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_10"/>


    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/group_info_toolbar"
        android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:paddingBottom="@dimen/dp_20"
       >

        <RelativeLayout
            android:id="@+id/group_info_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@color/black"
            >


            <ImageView
                android:id="@+id/group_iv_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:alpha="0.8"
                />

            <RelativeLayout
                android:id="@+id/group_info_ll_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@color/black_60"
                android:visibility="gone">

                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/group_info_btn_edit_members"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_38"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:onClick="onClick"
                    android:textColor="@color/greencolor"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:background="@drawable/group_btn_bg"
                    android:drawableLeft="@drawable/group_members_icon"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_10"
                    app:typeface="lato_regular"
                    />

                <com.jeeva.android.widgets.customfont.CustomButton
                    android:id="@+id/group_info_ll_share"
                    android:layout_width="@dimen/dp_145"
                    android:layout_height="@dimen/dp_38"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:onClick="onClick"
                    android:textColor="@color/greencolor"
                    android:text="ADD MEMBERS"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:background="@drawable/group_btn_bg"
                    android:drawableLeft="@drawable/group_share_icon"
                    android:paddingLeft="@dimen/dp_10"
                    app:typeface="lato_regular"
                    />

            </RelativeLayout>


        </RelativeLayout>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/tournaments_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOURNAMENTS"
            android:textColor="@color/textcolorlight"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/group_info_rl1"
            android:layout_marginTop="@dimen/dp_10"
            app:typeface="lato_regular"
            android:visibility="gone"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/group_info_rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tournaments_tv"
            android:clipToPadding="false"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
           />

        <com.jeeva.android.widgets.customfont.CustomButton
            android:id="@+id/group_info_exit_group"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_38"
            android:layout_alignParentBottom="true"
            android:onClick="onClick"
            android:textColor="@color/tabcolor"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:duplicateParentState="true"
            android:background="@drawable/exit_group_btn_bg"
            android:text="EXIT GROUP"
            android:drawablePadding="@dimen/dp_10"
            app:typeface="lato_regular"
            android:padding="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/group_info_rcv"
            android:layout_marginTop="@dimen/dp_10"
            />


    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
