<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMedium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        android:id="@+id/group_info_toolbar"
        >

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/dp_20"
            android:text="Group"
            android:textColor="@android:color/white"/>


        <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:id="@+id/edit_profile_btn"-->
            <!--android:textSize="@dimen/dp_16"-->
            <!--android:textColor="@color/textcolorlight"-->
            <!--android:onClick="onClick"-->
            <!--android:background="@drawable/edit_profile_icon"-->
            <!--android:textAllCaps="false"-->
            <!--android:layout_marginRight="@dimen/dp_20"-->
            <!--/>-->

        </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/group_info_toolbar"
        android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
       >

        <RelativeLayout
            android:id="@+id/group_info_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            >


            <ImageView
                android:id="@+id/group_iv_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:alpha="0.8"
                />

            </RelativeLayout>


        <RelativeLayout
            android:id="@+id/group_info_ll_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_rl1"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">


            <com.jeeva.android.widgets.customfont.CustomTextView
                android:id="@+id/group_info_tv_edit_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:onClick="onClick"
                android:backgroundTint="@color/white"
                android:textSize="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:clickable="true"
                android:duplicateParentState="true"
                android:drawablePadding="@dimen/dp_10"

                />

            <com.jeeva.android.widgets.customfont.CustomButton
                android:id="@+id/group_info_ll_share"
                android:layout_width="@dimen/dp_140"
                android:layout_height="@dimen/dp_38"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/invite_people_btn_bg"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:text="INVITE PEOPLE"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"


                />

        </RelativeLayout>


        <View
            android:id="@+id/group_info_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/dividercolor"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@+id/group_info_ll_members"
            android:visibility="gone"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/group_info_rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/group_info_view"
            android:clipToPadding="false"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
           />


    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
