<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/colorGrey">

    <ImageView
        android:id="@+id/leaderboard_row_iv_status"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="0.5"
        android:src="@drawable/status_arrow_down"
 />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/leaderboard_row_tv_rank"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="9"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/white"/>

    <in.sportscafe.scgame.module.common.RoundImage
        android:id="@+id/leaderboard_row_iv_user_img"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@drawable/user_default"
        android:layout_marginLeft="@dimen/dp_5"/>

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/leaderboard_row_tv_user_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="8"
        android:text="Jeevanandham"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/leaderboard_row_iv_credits_img"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/points_icon" />

    <com.jeeva.android.widgets.customfont.CustomTextView
        android:id="@+id/leaderboard_row_tv_points"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_3"
        android:layout_weight="2"
        android:text="9000"
        android:textColor="@color/white"/>

</LinearLayout>