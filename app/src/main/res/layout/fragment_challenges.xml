<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/challenges_switch_view_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_27"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/grey_border_round_btn_bg">


        <ImageButton
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_1"
            android:id="@+id/challenges_swipe_view"
            android:background="@drawable/toggle_widget_background"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:src="@drawable/swipe_view_white_icon"
            android:drawablePadding="@dimen/dp_15"
           />

        <ImageButton
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_1"
            android:id="@+id/challenges_list_view"
            android:layout_width="@dimen/dp_34"
            android:layout_toRightOf="@+id/challenges_swipe_view"
            android:layout_height="@dimen/dp_34"
            android:src="@drawable/list_view_white_icon"
            android:background="@drawable/toggle_widget_background" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/challenges_count_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20">

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/challenges_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="lato_bold"
            android:textSize="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="Challenge 1"/>

        <com.jeeva.android.widgets.customfont.CustomTextView
            android:id="@+id/challenges_total_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="lato_bold"
            android:textSize="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/white_60"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="/ 20"
            android:layout_toRightOf="@+id/challenges_count_tv"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/challenges_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/challenges_switch_view_rl"
        android:paddingTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"/>

</RelativeLayout>