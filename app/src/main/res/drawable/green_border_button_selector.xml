            </item>-->
            <item  android:bottom="@dimen/dp_3">
                <shape>
                    <stroke android:color="@color/green_disable" android:width="@dimen/dim_2" />
                    <corners android:radius="@dimen/dp_2" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default -->
    <item>
        <layer-list>
            <!-- SHADOW -->
            <!--<item>
                <shape>
                    <solid android:color="@color/green_dark_shadow" />
                    <corners android:radius="@dimen/dp_2" />
                </shape>
            </item>-->
            <!-- BUTTON -->
            <item android:bottom="@dimen/dp_3">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/green" android:width="@dimen/dim_2" />
                    <corners android:radius="@dimen/dp_2" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>