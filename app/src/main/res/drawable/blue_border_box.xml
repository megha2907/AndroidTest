<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Pressed state -->
<item android:state_pressed="true">
    <layer-list>
        <item>
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <stroke android:color="#176589" android:width="@dimen/dim_1"/>
                <corners android:radius="@dimen/dim_2" />
            </shape>
        </item>
    </layer-list>
</item>

<!-- Default -->
<item>
    <layer-list>
        <!-- BUTTON -->
        <item android:bottom="@dimen/dim_2">
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <stroke android:color="@color/bluecolor2" android:width="@dimen/dim_1"/>
                <corners android:radius="@dimen/dim_2" />
            </shape>
        </item>
    </layer-list>
</item>

</selector>