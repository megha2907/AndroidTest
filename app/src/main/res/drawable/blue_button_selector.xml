<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/color_5b5b5b" />

    <item>
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#104468" />
                    <corners android:radius="@dimen/dp_4" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="@dimen/dp_3">
                <shape android:shape="rectangle">
                    <solid android:color="@color/ready_btn_color" />
                    <corners android:radius="@dimen/dp_4" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>