<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!--SHADOW-->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dp_10" />
                    <solid android:color="@color/black_10" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="@dimen/dp_1" android:left="@dimen/dp_1" android:right="@dimen/dp_1" android:top="@dimen/dp_1">
                <shape>
                    <corners android:radius="@dimen/dp_10" />
                    <solid android:color="@color/white_10" />
                    <!--<gradient android:angle="90" android:endColor="#222222" android:startColor="#181818" />-->
                </shape>
            </item>
        </layer-list>
    </item>

</selector>