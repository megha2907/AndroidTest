<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#0884c1"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="0dp"/>
                    <gradient
                        android:startColor="@color/btncolor"
                        android:endColor="@color/btncolor"
                        android:angle="270" />
                    <corners
                        android:radius="4dp"/>
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#880884c1"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="0dp"/>
                    <gradient
                        android:endColor="@color/btncolor"
                        android:startColor="@color/btncolor"
                        android:angle="270" />
                    <corners
                        android:radius="4dp"/>
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>