<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item> <!-- Shadow -->
                <shape>
                    <solid android:color="#00797f" />
                    <corners android:radius="@dimen/dp_2" />
                </shape>
            </item>
            <item android:bottom="@dimen/dp_3">
                <shape>
                    <solid android:color="#007a85" />
                    <corners android:radius="@dimen/dp_2" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Disable state -->
    <item android:state_enabled="false">
        <layer-list>
            <item>  <!-- shadow -->
                <shape>
                    <solid android:color="#00797f" />
                    <corners android:radius="@dimen/dp_2" />
                </shape>
            </item>
            <item  android:bottom="@dimen/dp_3">
                <shape>
                    <solid android:color="#0098a6" />
                    <corners android:radius="@dimen/dp_2" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default -->
    <item>
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#00797f" />
                    <corners android:radius="@dimen/dp_2" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="@dimen/dp_3">
                <shape android:shape="rectangle">
                    <solid android:color="#0098a6" />
                    <corners android:radius="@dimen/dp_2" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>