<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/btncolor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:spinnerStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textcolorlight</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/textcolorlight</item>
        <item name="colorControlNormal">@color/textcolorlight</item>
        <item name="colorControlActivated">@color/textcolorlight</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/monza</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="mySpinnerItemLeaderBoardStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/leaderboard_spinner_icon</item>
        <item name="android:dropDownListViewStyle">@style/App.Style.Spinner</item>
    </style>

    <style name="App.Style.Spinner" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">@dimen/dp_2</item>
        <item name="android:divider">@color/white</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/leaderboard_detail_spinner_icon</item>
