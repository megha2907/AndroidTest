    <style name="InviteCodeLoginStyleLastLetter">
        <item name="android:layout_width">@dimen/dim_34</item>
        <item name="android:layout_height">@dimen/dim_30</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/invite_edittext_bg_last</item>
