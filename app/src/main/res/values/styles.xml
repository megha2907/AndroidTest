<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/btncolor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:spinnerStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textcolorlight</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/textcolorlight</item>
        <item name="colorControlNormal">@color/textcolorlight</item>
        <item name="colorControlActivated">@color/textcolorlight</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/monza</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="mySpinnerItemLeaderBoardStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/leaderboard_spinner_icon</item>
        <item name="android:dropDownListViewStyle">@style/App.Style.Spinner</item>
    </style>

    <style name="App.Style.Spinner" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">@dimen/dp_2</item>
        <item name="android:divider">@color/white</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/leaderboard_detail_spinner_icon</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="GroupCodeStyle">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_20</item>
    </style>

    <style name="InviteCodeStyle">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_32</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/invite_edittext_selector_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text|textNoSuggestions|textCapCharacters</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/dp_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_18</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">4</item>
    </style>

    <style name="InviteCodeLoginStyle">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/onboarding_referral_box_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/invite_edittext_login_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/dp_8</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:textSize">@dimen/onboarding_referral_text_size</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">4</item>
    </style>

    <style name="Theme.Transparent" parent="android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SplashScreenTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorMedium</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChallengeTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LeaderBoardTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.PopupTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="SettingOptionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/white_20</item>
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>

    <style name="SettingHeadingDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/white_30</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>


    <style name="SettingOptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_52</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">@dimen/dp_12</item>
        <item name="android:paddingLeft">@dimen/dp_24</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="typeface">roboto_condensed</item>
    </style>

    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@drawable/edittext_rounded_bg</item>
        <item name="android:textCursorDrawable">@drawable/thin_cursor</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
        <item name="typeface">lato_regular</item>
    </style>


    <style name="CustomEditTextStyle" parent="@style/EditTextStyle">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="CustomEditTextEmailStyle" parent="@style/EditTextStyle">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextHintStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="typeface">lato_regular</item>
    </style>

    <style name="EditTextErrorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="typeface">lato_regular</item>
    </style>

    <style name="AddQuestionEditText">
        <item name="android:background">@drawable/edittext_rounded_bg</item>
        <item name="android:textCursorDrawable">@drawable/thin_cursor</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="typeface">lato_regular</item>
    </style>


    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton" parent="@android:style/Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_slide_in</item>
        <item name="android:windowExitAnimation">@anim/popup_slide_out</item>
    </style>

    <style name="BankPlusIconStyle">
        <item name="android:layout_width">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:src">@drawable/powerup_plus_icon</item>
    </style>

    <style name="BankMinusIconStyle" parent="@style/BankPlusIconStyle">
        <item name="android:layout_width">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:src">@drawable/powerup_minus_icon</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>