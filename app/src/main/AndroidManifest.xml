            android:name="in.sportscafe.nostragamus.module.play.prediction.AllDoneActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="in.sportscafe.nostragamus.module.play.myresults.MyResultsActivity"
            android:parentActivityName=".module.home.HomeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".module.home.HomeActivity" />

        </activity>

        <activity
            android:name=".module.resultspeek.ResultsPeekActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="in.sportscafe.nostragamus.module.play.myresults.flipPowerup.FlipActivity"
