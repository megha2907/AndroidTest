        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <!-- Start MoEngage -->
        <activity
            android:name="com.moengage.addon.inbox.MoEInboxActivity"
            android:label="Notification"
            android:parentActivityName="in.sportscafe.nostragamus.module.home.HomeActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.sportscafe.nostragamus.module.home.HomeActivity" />

        </activity>

        <!-- MOENGAGE RECEIVER FOR RECEIVING APP UPDATE INTENT -->
        <receiver android:name="com.moe.pushlibrary.AppUpdateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data
                    android:path="in.sportscafe.nostragamus"
                    android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- The underlying content provider -->
        <provider
            android:name="com.moe.pushlibrary.providers.MoEProvider"
            android:authorities="in.sportscafe.nostragamus.moengage.provider"
            android:exported="false" />

        <!-- MANDATORY FIELD: APP ID AS SEEN ON MOENGAGE DASHBOARD APP SETTINGS PAGE -->
        <meta-data
            android:name="APP_ID"
            android:value="@string/moengage_app_id" />

        <!-- MANDATORY FIELD: SENDER ID , i.e. THE PROJECT NUMBER AS MENTIONED ON GOOGLE CLOUD CONSOLE PROJECTS PAGE -->
        <meta-data
            android:name="SENDER_ID"
            android:value="@string/gcm_sender_id" />

        <!-- MANDATORY FIELD: THE NOTIFICATION SMALL ICON WHICH WILL BE USED TO SET TO NOTIFICATIONS POSTED -->
        <meta-data
            android:name="NOTIFICATION_ICON"
            android:value="@drawable/white_notification_icon" />

        <!-- MANDATORY FIELD: THE NOTIFICATION LARGE ICON WHICH WILL BE USED TO SET TO NOTIFICATIONS POSTED -->
        <meta-data
            android:name="NOTIFICATION_LARGE_ICON"
            android:value="@drawable/notification_large_icon" />

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="in.sportscafe.nostragamus" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.moengage.worker.MoEGCMListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
            </intent-filter>
        </service>
        <service
            android:name="com.moengage.receiver.MoEInstanceIDListener"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>

        <!-- OPTIONAL FIELD: THE NOTIFICATION TYPE WHICH WILL BE USED, SINGLE OR MULTIPLE. DEFAULT BEHAVIOR IS SINGLE -->
        <meta-data
            android:name="NOTIFICATION_TYPE"
            android:value="@integer/notification_type_multiple" />

        <!-- OPTIONAL FIELD: THE NOTIFICATION TONE THAT WILL BE USED. IF NOT SET WILL PLAY THE DEFAULT SOUND -->
        <!--
            <meta-data
            android:name="NOTIFICATION_TONE"
            android:value="@raw/tring" />
        -->
        <!-- End MoEngage -->

        <!-- Start Google Analytics -->

        <receiver
            android:name="com.google.android.gms.analytics.AnalyticsReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.analytics.AnalyticsService"
            android:enabled="true"
            android:exported="false" />

        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- End Google Analytics -->

        <!-- Start Branch -->

        <!-- Enable/Disable the test mode -->
        <meta-data
            android:name="io.branch.sdk.TestMode"
            android:value="false" />

        <!-- Live branch key -->
        <meta-data
            android:name="io.branch.sdk.BranchKey"
            android:value="@string/branch_io_live_key" />

        <!-- Test branch key -->
        <meta-data
            android:name="io.branch.sdk.BranchKey.test"
            android:value="@string/branch_io_test_key" />
        <!-- End Branch -->

        <!-- Start Fabric -->
        <!-- Api key which is mandatory to uniquely identify our app -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="66dc8b5ddc3cab78b5935c8254c264658064977d" />
        <!-- End Fabric -->

        <!-- To receive the install updates -->
        <receiver
            android:name="in.sportscafe.nostragamus.module.common.CustomInstallListener"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
