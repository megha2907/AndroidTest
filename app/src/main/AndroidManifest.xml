        <activity
            android:name="in.sportscafe.nostragamus.module.user.referral.ReferralActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="in.sportscafe.nostragamus.module.user.login.LogInActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="in.sportscafe.nostragamus.module.settings.SettingActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="in.sportscafe.nostragamus.module.common.WebViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="in.sportscafe.nostragamus.module.feed.FeedActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="in.sportscafe.nostragamus.module.user.myprofile.edit.EditProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="in.sportscafe.nostragamus.module.user.sportselection.SportSelectionActivity"
