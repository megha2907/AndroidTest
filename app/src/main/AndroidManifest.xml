        <activity
            android:name="in.sportscafe.nostragamus.module.user.points.PointsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="in.sportscafe.nostragamus.module.user.group.newgroup.NewGroupActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="in.sportscafe.nostragamus.module.user.group.groupinfo.GroupInfoActivity"
